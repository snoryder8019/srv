    // Roku discovery (for local networks only)
    async function discoverRokus() {
      const btn = event.target;
      btn.disabled = true;
      btn.textContent = 'üîç Searching...';

      try {
        const response = await fetch('/claudeTalk/roku/discover');
        const data = await response.json();

        if (data.success && data.devices.length > 0) {
          addMessage('assistant', `Found ${data.devices.length} Roku device(s) on your local network!`);
          btn.textContent = `üîç Found ${data.devices.length}`;
        } else {
          addMessage('assistant', 'No Roku devices found. This only works if the server is on the same network as your Roku. Use "Get URL" instead to manually access the display.');
          btn.textContent = 'üîç Find Rokus';
        }

        setTimeout(() => {
          btn.disabled = false;
          btn.textContent = 'üîç Find Rokus';
        }, 3000);
      } catch (error) {
        console.error('Roku discovery error:', error);
        addMessage('assistant', 'Discovery failed. Since the server is remote, use "Get URL" to manually access the display on your Roku browser.');
        btn.textContent = 'üîç Find Rokus';
        btn.disabled = false;
      }
    }

    // Video Controls
    function showVideoControls() {
      console.log('showVideoControls called');

      // Check if io is available
      if (typeof io === 'undefined') {
        alert('Socket.IO not loaded. Please refresh the page.');
        return;
      }

      const videoUrl = prompt('Enter video URL to send to display:\n\nSupported sites:\n‚Ä¢ YouTube (youtube.com, youtu.be)\n‚Ä¢ Vimeo (vimeo.com)\n‚Ä¢ Twitch (twitch.tv)\n‚Ä¢ Direct video files (.mp4, .webm, .ogg)');

      if (videoUrl && videoUrl.trim()) {
        console.log('Sending video:', videoUrl);
        sendVideoToDisplay(videoUrl.trim());
      } else if (videoUrl !== null) {
        alert('Please enter a valid URL');
      }
    }

    function sendVideoToDisplay(url) {
      console.log('sendVideoToDisplay called with:', url);

      try {
        // Show loading message
        addMessage('assistant', 'üì° Connecting to display...');

        // Connect to socket to send video command
        const serverUrl = 'http://104.237.138.28:3000';
        const socket = io(serverUrl + '/claudeTalk-display', {
          transports: ['websocket', 'polling'],
          reconnection: false,
          timeout: 5000
        });

        socket.on('connect', () => {
          console.log('Connected to display socket');
          socket.emit('load_video', { url: url });

          addMessage('assistant', 'üé¨ Video sent to display!\\n\\nURL: ' + url + '\\n\\nMake sure the display page is open to see the video.');

          // Disconnect after sending
          setTimeout(() => socket.disconnect(), 1000);
        });

        socket.on('connect_error', (error) => {
          console.error('Socket connection error:', error);
          addMessage('assistant', '‚ùå Failed to connect to display. Error: ' + error.message);
        });

        socket.on('connect_timeout', () => {
          console.error('Socket connection timeout');
          addMessage('assistant', '‚ùå Connection timeout. Make sure the server is running.');
        });
      } catch (error) {
        console.error('Error in sendVideoToDisplay:', error);
        addMessage('assistant', '‚ùå Error: ' + error.message);
      }
    }

    // Focus on message input on load
    window.addEventListener('DOMContentLoaded', () => {
      messageInput.focus();
    });
  </script>
