      }
    }

    @media (max-width: 480px) {
      h1 {
        font-size: 1.5rem;
      }

      .mic-button {
        width: 120px;
        height: 120px;
        font-size: 3rem;
      }

      .status {
        font-size: 1rem;
      }

      .instructions {
        font-size: 0.9rem;
      }

      .transcript {
        font-size: 1rem;
      }
    }
  </style>
</head>
<body>
  <div class="header">
    <h2>ðŸ¤– Claude Talk - Voice Control</h2>
    <div class="nav-links">
      <a href="/claudeTalk/voice" class="nav-link">ðŸŽ¤ Voice</a>
      <a href="/claudeTalk" class="nav-link">ðŸ’¬ Chat</a>
      <a href="/" class="nav-link">Home</a>
    </div>
  </div>

  <div class="main-content">
    <div class="container">
    <h1>ðŸŽ¤ Voice Control</h1>

    <div class="status" id="status">Click the microphone to speak</div>

    <button class="mic-button" id="micBtn" onclick="toggleVoice()">
      ðŸŽ¤
    </button>

    <div class="transcript" id="transcript">
      Your speech will appear here...
    </div>

    <div class="instructions">
      <strong>How it works:</strong><br>
      1. Click the microphone<br>
      2. Speak your command<br>
      3. Click again to stop<br>
      4. Watch your Roku display for results!
    </div>

    <div class="display-link">
      <p style="margin-bottom: 1rem;">Open display on your Roku/TV:</p>
      <a href="http://104.237.138.28/claudeTalk/display" target="_blank">ðŸ“º Open Display</a>
    </div>
  </div>
  </div>

  <script>
    let recognition = null;
    let isRecording = false;

    // Check for Web Speech API support
    if ('webkitSpeechRecognition' in window || 'SpeechRecognition' in window) {
      const SpeechRecognition = window.SpeechRecognition || window.webkitSpeechRecognition;
      recognition = new SpeechRecognition();
      recognition.continuous = false;
      recognition.interimResults = false;
      recognition.lang = 'en-US';
    } else {
      document.getElementById('status').textContent = 'Voice recognition not supported in this browser';
      document.getElementById('micBtn').disabled = true;
    }

    function toggleVoice() {
      const micBtn = document.getElementById('micBtn');
      const statusDiv = document.getElementById('status');
      const transcriptDiv = document.getElementById('transcript');

      if (!recognition) {
        alert('Speech recognition not supported. Please use Chrome, Edge, or Safari.');
        return;
      }

      if (isRecording) {
        // Stop recording
        recognition.stop();
        micBtn.classList.remove('recording');
        micBtn.textContent = 'ðŸŽ¤';
        statusDiv.textContent = 'Processing...';
        isRecording = false;
      } else {
        // Start recording
        isRecording = true;
        micBtn.classList.add('recording');
        micBtn.textContent = 'â¹ï¸';
        statusDiv.textContent = 'ðŸŽ¤ Listening... Speak now!';
        transcriptDiv.textContent = 'Listening...';

        recognition.onresult = async (event) => {
          const transcript = event.results[0][0].transcript;
          console.log('Recognized:', transcript);

          transcriptDiv.textContent = 'You said: "' + transcript + '"';
          statusDiv.textContent = 'Sending to Claude...';

          micBtn.classList.remove('recording');
          micBtn.textContent = 'ðŸŽ¤';
          isRecording = false;

          // Send to server
          try {
            const formData = new FormData();
            formData.append('transcript', transcript);
            formData.append('sessionId', 'voice-control');

            // Dummy audio file to satisfy multer
            const dummyBlob = new Blob([''], { type: 'audio/webm' });
            formData.append('audio', dummyBlob, 'dummy.webm');

            const response = await fetch('/claudeTalk/voice', {
              method: 'POST',
              body: formData
            });

            const data = await response.json();

            if (data.success) {
              statusDiv.textContent = 'âœ… Sent to display! Check your Roku.';
              setTimeout(() => {
                statusDiv.textContent = 'Click the microphone to speak';
                transcriptDiv.textContent = 'Ready for next command...';
              }, 3000);
            } else {
              statusDiv.textContent = 'âŒ Error: ' + (data.error || 'Failed');
              transcriptDiv.textContent = 'Error occurred. Try again.';
            }
          } catch (error) {
            console.error('Error:', error);
            statusDiv.textContent = 'âŒ Connection error';
            transcriptDiv.textContent = 'Failed to send. Check connection.';
          }
        };

        recognition.onerror = (event) => {
          console.error('Recognition error:', event.error);
          micBtn.classList.remove('recording');
          micBtn.textContent = 'ðŸŽ¤';
          isRecording = false;

          if (event.error === 'no-speech') {
            statusDiv.textContent = 'No speech detected. Try again.';
            transcriptDiv.textContent = 'No speech detected.';
          } else {
            statusDiv.textContent = 'Error: ' + event.error;
            transcriptDiv.textContent = 'Recognition error.';
          }

          setTimeout(() => {
            statusDiv.textContent = 'Click the microphone to speak';
          }, 3000);
        };

        recognition.onend = () => {
          micBtn.classList.remove('recording');
          micBtn.textContent = 'ðŸŽ¤';
          isRecording = false;
        };

        recognition.start();
      }
    }
  </script>
</body>
