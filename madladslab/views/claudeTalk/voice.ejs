    }

    .nav-link:hover {
      background: rgba(255, 255, 255, 0.3);
    }

    .main-content {
      flex: 1;
      display: flex;
      align-items: center;
      justify-content: center;
    }

    .container {
      text-align: center;
      padding: 2rem;
      max-width: 600px;
    }

    h1 {
      font-size: 3rem;
      margin-bottom: 1rem;
    }

    .status {
      font-size: 1.5rem;
      margin: 2rem 0;
      min-height: 3rem;
      opacity: 0.9;
    }

    .mic-button {
      width: 200px;
      height: 200px;
      border-radius: 50%;
      border: none;
      background: white;
      font-size: 5rem;
      cursor: pointer;
      transition: all 0.3s;
      box-shadow: 0 10px 40px rgba(0, 0, 0, 0.3);
      margin: 2rem 0;
    }

    .mic-button:hover {
      transform: scale(1.05);
      box-shadow: 0 15px 50px rgba(0, 0, 0, 0.4);
    }

    .mic-button:active {
      transform: scale(0.95);
    }

    .mic-button.recording {
      background: #ef4444;
      animation: pulse 1.5s infinite;
    }

    @keyframes pulse {
      0%, 100% {
        transform: scale(1);
        box-shadow: 0 10px 40px rgba(239, 68, 68, 0.4);
      }
      50% {
        transform: scale(1.1);
        box-shadow: 0 15px 60px rgba(239, 68, 68, 0.6);
      }
    }

    .instructions {
      font-size: 1.2rem;
      opacity: 0.8;
      margin-top: 2rem;
      line-height: 1.8;
    }

    .display-link {
      margin-top: 3rem;
      padding-top: 2rem;
      border-top: 1px solid rgba(255, 255, 255, 0.3);
    }

    .display-link a {
      color: white;
      text-decoration: none;
      background: rgba(255, 255, 255, 0.2);
      padding: 1rem 2rem;
      border-radius: 10px;
      display: inline-block;
      transition: all 0.3s;
    }

    .display-link a:hover {
      background: rgba(255, 255, 255, 0.3);
      transform: translateY(-2px);
    }

    .transcript {
      background: rgba(0, 0, 0, 0.3);
      padding: 1.5rem;
      border-radius: 15px;
      margin: 1rem 0;
      min-height: 100px;
      font-size: 1.3rem;
      line-height: 1.6;
    }

    /* Mobile Responsive Styles */
    @media (max-width: 768px) {
      .header {
        padding: 0.75rem 1rem;
        flex-direction: column;
        gap: 1rem;
        align-items: stretch;
      }

