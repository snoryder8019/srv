<script>
document.addEventListener("DOMContentLoaded", function() {
    const popupTriggers = document.querySelectorAll('.footer-popup-trigger');
    const popups = ['careers', 'privacy', 'terms'].map(id => document.getElementById(id)).filter(Boolean);

    popups.forEach(p => p.style.display = "none");

    popupTriggers.forEach(trigger => {
        trigger.addEventListener('click', function(e) {
            e.preventDefault();
            const id = this.getAttribute('href').substring(1);
            const target = document.getElementById(id);
            popups.forEach(p => p.style.display = "none");
            if (target) target.style.display = "block";
        });
    });

    document.querySelectorAll('.closeThis').forEach(btn => {
        btn.addEventListener('click', function() {
            const popup = this.closest('.footerPopup');
            if (popup) popup.style.display = "none";
        });
    });
});
</script>
