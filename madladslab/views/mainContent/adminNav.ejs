        <div class="footer-section">
            <h4>Account</h4>
            <% if (typeof user === 'object' && user) { %>
                <% if (user.displayName || user.firstName) { %>
                    <span class="user-name"><%= user.displayName || user.firstName %></span>
                <% } %>
                <a href="/logout" class="auth-link">Logout</a>
            <% } else { %>
