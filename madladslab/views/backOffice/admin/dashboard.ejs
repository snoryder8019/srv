<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= title %></title>
  <style>
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }

    body {
      font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, sans-serif;
      background: linear-gradient(135deg, #ef4444 0%, #dc2626 100%);
      min-height: 100vh;
    }

    .header {
      background: rgba(0, 0, 0, 0.3);
      backdrop-filter: blur(10px);
      padding: 1rem 2rem;
      color: white;
      display: flex;
      justify-content: space-between;
      align-items: center;
    }

    .header h1 {
      font-size: 1.8rem;
      font-weight: 700;
    }

    .nav {
      display: flex;
      gap: 1.5rem;
    }

    .nav a {
      color: white;
      text-decoration: none;
      padding: 0.5rem 1rem;
      border-radius: 8px;
      transition: background 0.3s;
    }

    .nav a:hover {
      background: rgba(255, 255, 255, 0.2);
    }

    .container {
      max-width: 1400px;
      margin: 2rem auto;
      padding: 0 1rem;
    }

    .welcome {
      background: white;
      border-radius: 12px;
      padding: 2rem;
      margin-bottom: 2rem;
      box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
    }

    .welcome h2 {
      color: #333;
      margin-bottom: 0.5rem;
    }

    .role-badge {
      display: inline-block;
      background: #ef4444;
      color: white;
      padding: 0.25rem 0.75rem;
      border-radius: 15px;
      font-size: 0.85rem;
      margin-top: 0.5rem;
      font-weight: 600;
    }

    .stats {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
      gap: 1.5rem;
      margin-bottom: 2rem;
    }

    .stat-card {
      background: white;
      border-radius: 12px;
      padding: 1.5rem;
      box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
    }

    .stat-card h3 {
      font-size: 0.9rem;
      color: #6b7280;
      margin-bottom: 0.5rem;
    }

    .stat-card p {
      font-size: 2rem;
      font-weight: 700;
      color: #ef4444;
    }

    .card {
      background: white;
      border-radius: 12px;
      padding: 1.5rem;
      box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
      margin-bottom: 2rem;
    }

    .card h3 {
      color: #333;
      margin-bottom: 1rem;
      font-size: 1.2rem;
    }

    .employee-table {
      width: 100%;
      border-collapse: collapse;
    }

    .employee-table th {
      text-align: left;
      padding: 0.75rem;
      background: #f9fafb;
      color: #374151;
      font-weight: 600;
    }

    .employee-table td {
      padding: 0.75rem;
      border-bottom: 1px solid #e5e7eb;
    }

    .btn {
      display: inline-block;
      background: linear-gradient(135deg, #ef4444 0%, #dc2626 100%);
      color: white;
      padding: 0.75rem 1.5rem;
      border-radius: 8px;
      text-decoration: none;
      font-weight: 600;
      transition: transform 0.2s;
      border: none;
      cursor: pointer;
    }

    .btn:hover {
      transform: translateY(-2px);
    }

    .btn-small {
      padding: 0.4rem 0.8rem;
      font-size: 0.85rem;
    }
  </style>
</head>
<body>
  <div class="header">
    <h1><%= brand ? brand.name : 'Back Office' %> - Admin</h1>
    <nav class="nav">
      <% const baseUrl = brand ? `/backoffice/${brand.slug}` : '/backOffice'; %>
      <a href="<%= baseUrl %>/admin">Dashboard</a>
      <a href="<%= baseUrl %>/admin/employees">Employees</a>
      <a href="<%= baseUrl %>/training">Training</a>
      <a href="<%= baseUrl %>/recipes">Recipes</a>
      <a href="<%= baseUrl %>/tasks">Tasks</a>
      <a href="<%= baseUrl %>/feed">Feed</a>
      <% if (brand) { %>
        <a href="/backoffice">Switch Brand</a>
      <% } %>
    </nav>
  </div>

  <div class="container">
    <div class="welcome">
      <h2>Admin Dashboard - <%= user.displayName || user.email %></h2>
      <p>Full system access</p>
      <span class="role-badge">Administrator</span>
    </div>

    <div class="stats">
      <div class="stat-card">
        <h3>Total Employees</h3>
        <p><%= employees ? employees.length : 0 %></p>
      </div>
      <div class="stat-card">
        <h3>Active Staff</h3>
        <p><%= employees ? employees.filter(e => e.status === 'active').length : 0 %></p>
      </div>
      <div class="stat-card">
        <h3>Managers</h3>
        <p><%= employees ? employees.filter(e => e.role === 'manager').length : 0 %></p>
      </div>
      <div class="stat-card">
        <h3>Recent Posts</h3>
        <p><%= posts ? posts.length : 0 %></p>
      </div>
    </div>

    <div class="card">
      <h3>All Employees</h3>
      <% if (employees && employees.length > 0) { %>
        <table class="employee-table">
          <thead>
            <tr>
              <th>Name</th>
              <th>Position</th>
              <th>Department</th>
              <th>Role</th>
              <th>Status</th>
              <th>Hire Date</th>
            </tr>
          </thead>
          <tbody>
            <% employees.forEach(function(emp) { %>
              <tr>
                <td><strong><%= emp.userId?.name || 'Unknown' %></strong></td>
                <td><%= emp.position %></td>
                <td><%= emp.department %></td>
                <td><span class="role-badge"><%= emp.role %></span></td>
                <td><%= emp.status %></td>
                <td><%= new Date(emp.hireDate).toLocaleDateString() %></td>
              </tr>
            <% }); %>
          </tbody>
        </table>
      <% } else { %>
        <p style="text-align: center; color: #6b7280; padding: 2rem;">No employees found</p>
      <% } %>
    </div>

    <div style="text-align: center;">
      <a href="<%= baseUrl %>/admin/employees" class="btn">Manage Employees</a>
      <a href="<%= baseUrl %>/training" class="btn" style="margin-left: 1rem;">Manage Training</a>
      <a href="<%= baseUrl %>/recipes" class="btn" style="margin-left: 1rem;">Manage Recipes</a>
    </div>
  </div>

  <%-include('../../mainContent/adminNav.ejs')%>
</body>
</html>
