<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= title %></title>
  <style>
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }

    body {
      font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, sans-serif;
      background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
      min-height: 100vh;
      color: #333;
      padding: 1rem;
    }

    .container {
      max-width: 600px;
      margin: 2rem auto;
    }

    .card {
      background: white;
      border-radius: 16px;
      padding: 2.5rem;
      box-shadow: 0 10px 40px rgba(0, 0, 0, 0.2);
    }

    .header {
      text-align: center;
      margin-bottom: 2rem;
    }

    .header-icon {
      font-size: 4rem;
      margin-bottom: 1rem;
    }

    .header h1 {
      color: #667eea;
      font-size: 2rem;
      margin-bottom: 0.5rem;
    }

    .header p {
      color: #666;
      font-size: 1rem;
      line-height: 1.6;
    }

    .form-group {
      margin-bottom: 1.5rem;
    }

    label {
      display: block;
      font-weight: 600;
      color: #333;
      margin-bottom: 0.5rem;
      font-size: 0.95rem;
    }

    input[type="text"],
    textarea,
    select {
      width: 100%;
      padding: 0.875rem 1rem;
      border: 2px solid #e0e0e0;
      border-radius: 8px;
      font-size: 1rem;
      font-family: inherit;
      transition: border-color 0.3s, box-shadow 0.3s;
    }

    input[type="text"]:focus,
    textarea:focus,
    select:focus {
      outline: none;
      border-color: #667eea;
      box-shadow: 0 0 0 3px rgba(102, 126, 234, 0.1);
    }

    textarea {
      resize: vertical;
      min-height: 100px;
    }

    .help-text {
      font-size: 0.85rem;
      color: #666;
      margin-top: 0.25rem;
    }

    .btn {
      width: 100%;
      padding: 1rem;
      background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
      color: white;
      border: none;
      border-radius: 8px;
      font-size: 1.1rem;
      font-weight: 600;
      cursor: pointer;
      transition: transform 0.3s, box-shadow 0.3s;
      margin-top: 1rem;
    }

    .btn:hover {
      transform: translateY(-2px);
      box-shadow: 0 10px 20px rgba(102, 126, 234, 0.3);
    }

    .btn:active {
      transform: translateY(0);
    }

    .btn-secondary {
      background: white;
      color: #667eea;
      border: 2px solid #667eea;
      margin-top: 0.5rem;
    }

    .btn-secondary:hover {
      background: #f8f9ff;
    }

    .features-note {
      background: #f8f9fa;
      border-left: 4px solid #667eea;
      padding: 1rem;
      margin: 1.5rem 0;
      border-radius: 4px;
    }

    .features-note h3 {
      font-size: 1rem;
      color: #667eea;
      margin-bottom: 0.5rem;
    }

    .features-note ul {
      margin-left: 1.2rem;
      color: #555;
      font-size: 0.9rem;
    }

    .features-note li {
      margin: 0.25rem 0;
    }

    @media (max-width: 768px) {
      body {
        padding: 0.5rem;
      }

      .card {
        padding: 1.5rem;
      }

      .header h1 {
        font-size: 1.5rem;
      }

      .header-icon {
        font-size: 3rem;
      }

      input[type="text"],
      textarea,
      select {
        font-size: 16px; /* Prevents zoom on iOS */
      }
    }

    /* Loading state */
    .btn:disabled {
      opacity: 0.6;
      cursor: not-allowed;
    }

    .error-message {
      background: #fee;
      border: 1px solid #fcc;
      color: #c33;
      padding: 0.875rem;
      border-radius: 8px;
      margin-bottom: 1rem;
      display: none;
    }

    .error-message.show {
      display: block;
    }
  </style>
</head>
<body>
  <div class="container">
    <div class="card">
      <div class="header">
        <div class="header-icon">üè¢</div>
        <h1>Create Your Brand</h1>
        <p>Welcome to MadLadsLab Back Office! Let's set up your first brand to get started.</p>
      </div>

      <div id="errorMessage" class="error-message"></div>

      <form id="brandForm" action="/backoffice/brands/create" method="POST">
        <div class="form-group">
          <label for="name">Brand Name *</label>
          <input
            type="text"
            id="name"
            name="name"
            required
            placeholder="e.g., Awesome Restaurant"
            maxlength="100"
          >
          <div class="help-text">This will be the name of your business or organization</div>
        </div>

        <div class="form-group">
          <label for="industry">Industry</label>
          <select id="industry" name="industry">
            <option value="restaurant">Restaurant</option>
            <option value="retail">Retail</option>
            <option value="service">Service</option>
            <option value="tech">Technology</option>
            <option value="healthcare">Healthcare</option>
            <option value="education">Education</option>
            <option value="hospitality">Hospitality</option>
            <option value="other">Other</option>
          </select>
        </div>

        <div class="form-group">
          <label for="description">Description (Optional)</label>
          <textarea
            id="description"
            name="description"
            placeholder="Briefly describe your business..."
            maxlength="500"
          ></textarea>
          <div class="help-text">This helps team members understand your brand</div>
        </div>

        <div class="form-group">
          <label for="departments">Departments (Optional)</label>
          <input
            type="text"
            id="departments"
            name="departments"
            placeholder="e.g., kitchen, bar, floor, management"
          >
          <div class="help-text">Comma-separated list. Default: kitchen, bar, floor, management, other</div>
        </div>

        <div class="features-note">
          <h3>‚ú® What's Included:</h3>
          <ul>
            <li>Employee management system</li>
            <li>Training modules & assessments</li>
            <li>Task management & checklists</li>
            <li>Team communication feed</li>
            <li>Recipe & menu management</li>
            <li>Analytics & reporting</li>
          </ul>
        </div>

        <button type="submit" class="btn" id="submitBtn">
          Create Brand
        </button>

        <a href="/backoffice/info" class="btn btn-secondary">
          Learn More
        </a>
      </form>
    </div>
  </div>

  <script>
    const form = document.getElementById('brandForm');
    const submitBtn = document.getElementById('submitBtn');
    const errorMessage = document.getElementById('errorMessage');

    form.addEventListener('submit', async (e) => {
      e.preventDefault();

      const name = document.getElementById('name').value.trim();
      if (!name) {
        showError('Brand name is required');
        return;
      }

      submitBtn.disabled = true;
      submitBtn.textContent = 'Creating...';
      errorMessage.classList.remove('show');

      try {
        const formData = new FormData(form);
        const response = await fetch('/backoffice/brands/create', {
          method: 'POST',
          headers: {
            'Content-Type': 'application/x-www-form-urlencoded',
          },
          body: new URLSearchParams(formData)
        });

        if (response.redirected) {
          window.location.href = response.url;
        } else if (!response.ok) {
          const data = await response.json();
          throw new Error(data.error || 'Failed to create brand');
        } else {
          // Success - wait for redirect
          window.location.href = '/backoffice';
        }
      } catch (error) {
        console.error('Error creating brand:', error);
        showError(error.message || 'An error occurred. Please try again.');
        submitBtn.disabled = false;
        submitBtn.textContent = 'Create Brand';
      }
    });

    function showError(message) {
      errorMessage.textContent = message;
      errorMessage.classList.add('show');
      window.scrollTo({ top: 0, behavior: 'smooth' });
    }
  </script>

  <%-include('../mainContent/adminNav.ejs')%>
</body>
</html>
