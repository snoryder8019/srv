<div id="toast"></div>

<script>
// ‚îÄ‚îÄ Tabs ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ
document.querySelectorAll('.tab-btn').forEach(btn => {
  btn.addEventListener('click', () => {
    document.querySelectorAll('.tab-btn').forEach(b => b.classList.remove('active'));
    document.querySelectorAll('.tab-panel').forEach(p => p.style.display = 'none');
    btn.classList.add('active');
    document.getElementById('tab-' + btn.dataset.tab).style.display = 'grid';
  });
});

// ‚îÄ‚îÄ Drag/drop visual ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ
document.querySelectorAll('.drop-zone').forEach(zone => {
  zone.addEventListener('dragover', e => { e.preventDefault(); zone.classList.add('drag-over'); });
  zone.addEventListener('dragleave', () => zone.classList.remove('drag-over'));
  zone.addEventListener('drop', e => {
    e.preventDefault();
    zone.classList.remove('drag-over');
    const input = zone.querySelector('input[type="file"]');
    if (e.dataTransfer.files.length) {
      input.files = e.dataTransfer.files;
      showFileChosen(zone, e.dataTransfer.files[0].name);
    }
  });
  zone.querySelector('input[type="file"]')?.addEventListener('change', function() {
    if (this.files[0]) showFileChosen(zone, this.files[0].name);
  });
});

function showFileChosen(zone, name) {
  let el = zone.querySelector('.file-chosen');
  if (!el) { el = document.createElement('div'); el.className = 'file-chosen'; zone.appendChild(el); }
  el.textContent = 'üìé ' + name;
  el.style.display = 'block';
}

// ‚îÄ‚îÄ Upload forms ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ
document.querySelectorAll('.upload-form').forEach(form => {
  form.addEventListener('submit', async e => {
    e.preventDefault();
    const statusEl = form.querySelector('.upload-status');
    const fileInput = form.querySelector('input[type="file"]');

    if (!fileInput?.files[0]) {
      statusEl.textContent = 'Please select a file first.';
      statusEl.className   = 'upload-status err';
      return;
    }

    statusEl.textContent = 'Uploading‚Ä¶';
    statusEl.className   = 'upload-status';

    const fd = new FormData();
    fd.append('statement', fileInput.files[0]);

    // Institution ‚Äì card data-institution OR custom text field
    const customInst = form.querySelector('input[name="institutionText"]')?.value;
    fd.append('institution', customInst || form.dataset.institution || 'Unknown');

    // Entity ‚Äì entityOverride select takes priority
    const entityOverride = form.querySelector('select[name="entityOverride"]')?.value;
    fd.append('entity',      entityOverride || form.querySelector('select[name="entity"]')?.value || 'Personal / Home');
    fd.append('taxYear',     form.querySelector('select[name="taxYear"]')?.value  || new Date().getFullYear());
    fd.append('accountType', form.querySelector('select[name="accountType"]')?.value || 'Other');
    fd.append('notes',       form.querySelector('input[name="notes"]')?.value     || '');

    try {
      const res  = await fetch('/finances/upload', { method: 'POST', body: fd });
      const json = await res.json();
      if (json.success) {
        statusEl.innerHTML = `‚úì ${json.message} ‚Äî <a href="${json.viewUrl || '/finances/uploads'}" style="color:#000;font-weight:700">View ‚Üí</a>`;
        statusEl.className = 'upload-status ok';
        showToast(json.message);
        fileInput.value = '';
        const chosen = form.querySelector('.file-chosen');
        if (chosen) chosen.style.display = 'none';
      } else {
        statusEl.textContent = '‚úó ' + json.message;
        statusEl.className   = 'upload-status err';
        showToast(json.message, true);
      }
    } catch (err) {
      statusEl.textContent = '‚úó Upload failed';
      statusEl.className   = 'upload-status err';
      showToast('Upload failed', true);
    }
  });
});

// ‚îÄ‚îÄ Generic form: preview button ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ
document.getElementById('previewBtn').addEventListener('click', async () => {
  const form      = document.getElementById('genericForm');
  const fileInput = form.querySelector('input[type="file"]');
  const statusEl  = document.getElementById('genericStatus');

  if (!fileInput?.files[0]) {
    statusEl.textContent = 'Select a file first.';
    statusEl.className   = 'upload-status err';
    return;
  }

  statusEl.textContent = 'Parsing‚Ä¶';
  statusEl.className   = 'upload-status';

  const fd = new FormData();
  fd.append('statement',   fileInput.files[0]);
  fd.append('institution', form.querySelector('input[name="institutionText"]')?.value || '');
  fd.append('entity',      form.querySelector('select[name="entity"]')?.value || '');
  fd.append('taxYear',     form.querySelector('select[name="taxYear"]')?.value || '');
  fd.append('accountType', form.querySelector('select[name="accountType"]')?.value || '');

  try {
    const res  = await fetch('/finances/api/preview', { method: 'POST', body: fd });
    const json = await res.json();

    if (!json.success) {
      statusEl.textContent = '‚úó ' + json.message;
      statusEl.className   = 'upload-status err';
      return;
    }

    const preview = document.getElementById('genericPreview');
    const body    = document.getElementById('previewBody');
    const msg     = document.getElementById('previewMsg');

    body.innerHTML = '';
    if (json.rows.length === 0) {
      msg.textContent = 'No rows detected. Check that the file has a recognizable header row.';
    } else {
      json.rows.forEach(r => {
        const amt = parseFloat(r.amount);
        const tr  = document.createElement('tr');
        tr.innerHTML = `
          <td>${new Date(r.date).toLocaleDateString('en-US')}</td>
          <td>${r.description}</td>
          <td class="${amt < 0 ? 'neg' : 'pos'}">${amt < 0 ? '-' : '+'}$${Math.abs(amt).toFixed(2)}</td>
        `;
        body.appendChild(tr);
      });
      msg.textContent = `Detected ${json.total} total rows. Showing first ${json.rows.length}.`;
    }

    preview.style.display = 'block';
    statusEl.textContent  = '';
    statusEl.className    = 'upload-status';
  } catch (err) {
    statusEl.textContent = '‚úó Preview failed';
    statusEl.className   = 'upload-status err';
  }
});

// ‚îÄ‚îÄ Generic form: file chosen display ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ
document.getElementById('file-generic').addEventListener('change', function () {
  if (this.files[0]) {
    showFileChosen(document.getElementById('genericDropZone'), this.files[0].name);
    document.getElementById('genericPreview').style.display = 'none';
    document.getElementById('genericStatus').textContent    = '';
  }
});

function showToast(msg, isError = false) {
  const t = document.getElementById('toast');
  t.textContent = msg;
  t.className   = isError ? 'error' : '';
  t.style.display = 'block';
  setTimeout(() => { t.style.display = 'none'; }, 4000);
}
</script>
