<%
  // Defaults
  const _defaultType = (typeof defaultType !== 'undefined') ? defaultType : 'Checking';
%>
<div class="form-row">
  <div class="form-group">
    <label>Tax Year</label>
    <select name="taxYear">
      <option value="2024">2024</option>
      <option value="2023">2023</option>
      <option value="2022">2022</option>
      <option value="2021">2021</option>
    </select>
  </div>
  <div class="form-group">
    <label>Account Type</label>
    <select name="accountType">
      <option value="Checking"    <%= _defaultType === 'Checking'     ? 'selected' : '' %>>Checking</option>
      <option value="Savings"     <%= _defaultType === 'Savings'      ? 'selected' : '' %>>Savings</option>
      <option value="Credit Card" <%= _defaultType === 'Credit Card'  ? 'selected' : '' %>>Credit Card</option>
      <option value="Other"       <%= _defaultType === 'Other'        ? 'selected' : '' %>>Other</option>
    </select>
  </div>
</div>
<div class="form-row">
  <div class="form-group">
    <label>Entity</label>
    <select name="entity">
      <option value="W2 Marketing LLC">W2 Marketing LLC</option>
      <option value="madladslab LLC">madladslab LLC</option>
      <option value="Scott Employment">Scott Employment</option>
      <option value="Oil Royalties">Oil Royalties</option>
      <option value="VRBO">VRBO</option>
      <option value="Airbnb">Airbnb</option>
      <option value="Personal / Home" selected>Personal / Home</option>
    </select>
  </div>
</div>
<div class="form-row">
  <div class="form-group">
    <label>Notes (optional)</label>
    <input type="text" name="notes" placeholder="e.g. Jan-Mar 2023">
  </div>
</div>
