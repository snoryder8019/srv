<%
  const _accept = (typeof accept !== 'undefined') ? accept : '.csv,.pdf';
  const _id     = (typeof id     !== 'undefined') ? id     : 'file';
%>
<div class="drop-zone" style="margin-top:0.75rem">
  <input type="file" name="statement" id="file-<%= _id %>" accept="<%= _accept %>">
  <div class="drop-label">
    <strong>Drop file here or click to browse</strong>
    Accepted: <%= _accept %>
  </div>
</div>
