       { site: 'fb', link: 'https://www.facebook.com/profile.php?id=61566661305036' },
       { site: 'ig', link: 'https://www.instagram.com/madladslab/' },
       { site: 'tt', link: 'https://www.tiktok.com/@madladslab?_t=8qgCoRbPvAd&_r=1' },
       { site: 'x', link: 'https://x.com/madladlabs44' }
    ];

    function linkTo(site) {
