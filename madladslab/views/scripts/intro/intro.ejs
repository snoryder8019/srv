<script>
document.addEventListener('DOMContentLoaded',()=>{
     // Script to move bubbles in the SVG
     const bubble1 = document.getElementById('bubble1');
    const bubble2 = document.getElementById('bubble2');

    // Function to animate the bubbles
    function moveBubble(bubble, initialX, initialY, amplitudeX, amplitudeY, speed) {
        let angle = 0;

        function animate() {
            const x = initialX + Math.sin(angle) * amplitudeX;
            const y = initialY + Math.cos(angle) * amplitudeY;

            bubble.setAttribute('cx', x);
            bubble.setAttribute('cy', y);

            angle += speed;

            requestAnimationFrame(animate);
        }

        animate();
    }

    // Start animation for each bubble
    moveBubble(bubble1, 78.82, 163, 10, 15, 0.03); // Bubble 1 moves in a circular path
    moveBubble(bubble2, 46.32, 168.5, 8, 10, 0.04); // Bubble 2 moves with different amplitude
})





