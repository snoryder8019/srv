<%= inviteOffer %><br>

<form id="claimOffer" method="post" action="/grafitti/claim">
  <input type="hidden" name="offer" value="<%= inviteOffer %>">
  <input type="email" name="email" placeholder="you@email.com" required>
  <button type="submit">Claim Offer</button>
</form>

<script>
  // minimal ajax
  document.getElementById('claimOffer').addEventListener('submit', async (e) => {
    e.preventDefault();
    const fd = new FormData(e.target);
    const r = await fetch(e.target.action, { method:'POST', body: fd });
    const j = await r.json();
    alert(j.ok ? 'Offer claimed. Check your email.' : (j.error || 'Try again.'));
  });
</script>



