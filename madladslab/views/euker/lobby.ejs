<!DOCTYPE html>
<html>
<head>
  <title>Euker - Lobby</title>
  <style>
    * { box-sizing: border-box; }
    body {
      font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
      margin: 0;
      padding: 20px;
      background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
      min-height: 100vh;
    }

    .container {
      max-width: 1200px;
      margin: 0 auto;
    }

    .header {
      background: white;
      padding: 30px;
      border-radius: 16px;
      margin-bottom: 30px;
      box-shadow: 0 10px 30px rgba(0,0,0,0.2);
    }

    h1 {
      margin: 0 0 10px 0;
      color: #333;
      font-size: 36px;
    }

    .subtitle {
      color: #666;
      font-size: 16px;
    }

    .stats-bar {
      display: flex;
      gap: 20px;
      margin-top: 20px;
      padding-top: 20px;
      border-top: 2px solid #f0f0f0;
    }

    .stat {
      display: flex;
      flex-direction: column;
      gap: 5px;
    }

    .stat-label {
      font-size: 12px;
      text-transform: uppercase;
      color: #999;
      font-weight: 600;
    }

    .stat-value {
      font-size: 24px;
      font-weight: bold;
      color: #667eea;
    }

    .actions {
      display: flex;
      gap: 12px;
      margin-top: 20px;
    }

    button {
      background: linear-gradient(145deg, #667eea, #764ba2);
      color: white;
      border: none;
      border-radius: 8px;
      padding: 12px 24px;
      cursor: pointer;
      font-weight: 600;
      font-size: 14px;
      transition: all 0.3s;
      box-shadow: 0 4px 12px rgba(102, 126, 234, 0.3);
    }

    button:hover {
      transform: translateY(-2px);
      box-shadow: 0 6px 20px rgba(102, 126, 234, 0.4);
    }

    button.secondary {
      background: white;
      color: #667eea;
      border: 2px solid #667eea;
      box-shadow: none;
    }

    button.secondary:hover {
      background: #f8f9ff;
    }

    .tables-section {
      background: white;
      padding: 30px;
      border-radius: 16px;
      box-shadow: 0 10px 30px rgba(0,0,0,0.2);
    }

    h2 {
      margin: 0 0 20px 0;
      color: #333;
      font-size: 24px;
    }

    .table-grid {
      display: grid;
      grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
      gap: 20px;
    }

    .table-card {
      background: linear-gradient(145deg, #f8f9ff, #ffffff);
      border: 2px solid #e0e7ff;
      border-radius: 12px;
      padding: 20px;
      transition: all 0.3s;
      cursor: pointer;
    }

    .table-card:hover {
      border-color: #667eea;
      transform: translateY(-4px);
      box-shadow: 0 8px 20px rgba(102, 126, 234, 0.2);
    }

    .table-name {
      font-size: 18px;
      font-weight: bold;
      color: #333;
      margin-bottom: 12px;
    }

    .table-status {
      display: inline-block;
      padding: 4px 12px;
      border-radius: 20px;
      font-size: 12px;
      font-weight: 600;
      margin-bottom: 12px;
    }

    .status-waiting {
      background: #fef3c7;
      color: #92400e;
    }

    .status-playing {
      background: #d1fae5;
      color: #065f46;
    }

    .players-grid {
      display: grid;
      grid-template-columns: 1fr 1fr;
      gap: 8px;
      margin-top: 12px;
    }

    .player-slot {
      background: #f8f9fa;
      padding: 8px;
      border-radius: 6px;
      font-size: 13px;
      display: flex;
      align-items: center;
      gap: 6px;
    }

    .player-slot.filled {
      background: #e0e7ff;
      color: #3730a3;
      font-weight: 600;
    }

    .player-slot.empty {
      color: #999;
      font-style: italic;
    }

    .player-icon {
      width: 20px;
      height: 20px;
      border-radius: 50%;
      background: #667eea;
      color: white;
      display: flex;
      align-items: center;
      justify-content: center;
      font-size: 10px;
      font-weight: bold;
    }

    .empty-state {
      text-align: center;
      padding: 60px 20px;
      color: #999;
    }

    .empty-state-icon {
      font-size: 64px;
      margin-bottom: 16px;
    }

    /* Modal */
    .modal {
      display: none;
      position: fixed;
      top: 0;
      left: 0;
      right: 0;
      bottom: 0;
      background: rgba(0,0,0,0.7);
      align-items: center;
      justify-content: center;
      z-index: 1000;
    }

    .modal.active {
      display: flex;
    }

    .modal-content {
      background: white;
      padding: 30px;
      border-radius: 16px;
      max-width: 500px;
      width: 90%;
    }

    .modal h3 {
      margin: 0 0 20px 0;
      color: #333;
    }

    .form-group {
      margin-bottom: 16px;
    }

    .form-group label {
      display: block;
      margin-bottom: 8px;
      font-weight: 600;
      color: #555;
    }

    .form-group input,
    .form-group select {
      width: 100%;
      padding: 10px;
      border: 2px solid #e0e0e0;
      border-radius: 8px;
      font-size: 14px;
    }

    .form-group input:focus,
    .form-group select:focus {
      outline: none;
      border-color: #667eea;
    }

    .form-actions {
      display: flex;
      gap: 12px;
      margin-top: 24px;
    }

    .user-info {
      background: #f8f9ff;
      padding: 12px 16px;
      border-radius: 8px;
      margin-top: 16px;
      display: flex;
      align-items: center;
      gap: 10px;
    }

    .user-avatar {
      width: 36px;
      height: 36px;
      border-radius: 50%;
      background: #667eea;
      color: white;
      display: flex;
      align-items: center;
      justify-content: center;
      font-weight: bold;
    }
  </style>
</head>
<body>
  <div class="container">
    <div class="header">
      <h1>üÉè <%= message %></h1>
      <p class="subtitle">Play Euker with friends online. First to 10 points wins!</p>

      <% if (user) { %>
        <div class="user-info">
          <div class="user-avatar"><%= (user.displayName || user.email).charAt(0).toUpperCase() %></div>
          <div>
            <strong><%= user.displayName || user.email %></strong>
            <% if (playerData) { %>
              <div style="font-size: 12px; color: #666;">
                Win Rate: <%= playerData.getWinRate() %>% | Games: <%= playerData.stats.gamesPlayed %>
              </div>
            <% } %>
          </div>
        </div>
      <% } %>

      <div class="actions">
        <button onclick="showCreateTableModal()">Create New Table</button>
        <button onclick="createQuickGame()">Quick Game vs Bots</button>
        <button class="secondary" onclick="location.reload()">Refresh</button>
      </div>
    </div>

    <div class="tables-section">
      <h2>Available Tables</h2>

      <% if (tables && tables.length > 0) { %>
        <div class="table-grid">
          <% tables.forEach(table => { %>
            <div class="table-card" onclick="joinTable('<%= table._id %>')">
              <div class="table-name"><%= table.name %></div>
              <span class="table-status status-<%= table.status %>"><%= table.status %></span>

              <div class="players-grid">
                <% ['North', 'East', 'South', 'West'].forEach(pos => { %>
                  <div class="player-slot <%= table.seats[pos].user ? 'filled' : 'empty' %>">
                    <% if (table.seats[pos].user) { %>
                      <% const displayName = table.seats[pos].user.displayName || table.seats[pos].user.email.split('@')[0]; %>
                      <div class="player-icon"><%= displayName.charAt(0).toUpperCase() %></div>
                      <%= pos %>: <%= displayName %>
                      <% if (table.seats[pos].isReady) { %>‚úì<% } %>
                    <% } else { %>
                      <%= pos %>: Empty
                    <% } %>
                  </div>
                <% }) %>
              </div>
            </div>
          <% }) %>
        </div>
      <% } else { %>
        <div class="empty-state">
          <div class="empty-state-icon">üé¥</div>
          <h3>No tables available</h3>
          <p>Be the first to create a table!</p>
        </div>
      <% } %>
    </div>
  </div>

  <!-- Create Table Modal -->
  <div id="createTableModal" class="modal">
    <div class="modal-content">
      <h3>Create New Table</h3>
      <form id="createTableForm">
        <div class="form-group">
          <label>Table Name</label>
          <input type="text" name="name" placeholder="My Awesome Table" required>
        </div>
        <div class="form-group">
          <label>
            <input type="checkbox" name="private">
            Private Table (requires password)
          </label>
        </div>
        <div class="form-group" id="passwordGroup" style="display: none;">
          <label>Password</label>
          <input type="password" name="password">
        </div>
        <div class="form-actions">
          <button type="submit">Create Table</button>
          <button type="button" class="secondary" onclick="hideCreateTableModal()">Cancel</button>
        </div>
      </form>
    </div>
  </div>

  <script>
    function showCreateTableModal() {
      document.getElementById('createTableModal').classList.add('active');
    }

    function hideCreateTableModal() {
      document.getElementById('createTableModal').classList.remove('active');
    }

    document.querySelector('input[name="private"]').addEventListener('change', (e) => {
      document.getElementById('passwordGroup').style.display = e.target.checked ? 'block' : 'none';
    });

    document.getElementById('createTableForm').addEventListener('submit', async (e) => {
      e.preventDefault();
      const formData = new FormData(e.target);
      const data = {
        name: formData.get('name'),
        private: formData.get('private') === 'on',
        password: formData.get('password')
      };

      try {
        const response = await fetch('/euker/tables/create', {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify(data)
        });

        const result = await response.json();

        if (result.success) {
          window.location.href = `/euker/tables/${result.tableId}`;
        } else {
          alert(result.error || 'Failed to create table');
        }
      } catch (error) {
        console.error('Error creating table:', error);
        alert('Failed to create table');
      }
    });

    function joinTable(tableId) {
      window.location.href = `/euker/tables/${tableId}`;
    }

    // Quick game vs bots - creates table, joins, fills with bots
    async function createQuickGame() {
      try {
        // Create table
        const createRes = await fetch('/euker/tables/create', {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({ name: 'Quick Game vs Bots' })
        });

        const createData = await createRes.json();
        if (!createData.success) {
          alert('Failed to create table');
          return;
        }

        const tableId = createData.tableId;

        // Join table
        const joinRes = await fetch(`/euker/tables/${tableId}/join`, {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({})
        });

        const joinData = await joinRes.json();
        if (!joinData.success) {
          alert('Failed to join table');
          return;
        }

        // Fill with bots
        await fetch(`/euker/tables/${tableId}/fill-with-bots`, {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' }
        });

        // Redirect to table
        window.location.href = `/euker/tables/${tableId}`;
      } catch (error) {
        console.error('Quick game error:', error);
        alert('Failed to create quick game');
      }
    }

    // Auto-refresh every 10 seconds
    setTimeout(() => location.reload(), 10000);
  </script>

  <%-include('../mainContent/adminNav.ejs')%>
</body>
</html>
