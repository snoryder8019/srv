<!-- views/table.ejs -->
<table>
  <thead>
    <tr><th>Player</th><th>Hand (tap to play)</th></tr>
  </thead>
  <tbody>
    <% if (gameState && gameState.hands) { %>
      <% Object.keys(gameState.hands).forEach(p => { %>
        <tr>
          <td><%= p %></td>
          <td>
            <% (gameState.hands[p] || []).forEach(c => { %>
              <button class="card" data-player="<%= p %>" data-card="<%= c %>"><%= c %></button>
            <% }) %>
            <% if ((gameState.hands[p] || []).length === 0) { %>â€”<% } %>
          </td>
        </tr>
      <% }) %>
    <% } %>
  </tbody>
</table>

<h3>Score</h3>
<p>North/South: <%= gameState.score.teamNS %> | East/West: <%= gameState.score.teamEW %></p>

<h3>Games Won</h3>
<p>North/South: <%= gameState.gamesWon.teamNS %> | East/West: <%= gameState.gamesWon.teamEW %></p>
