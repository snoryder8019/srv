<!DOCTYPE html>
<html>
<head>
    <link rel="icon" type="image/png" href="/images/beaker_logo_no_stash.png">
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no">
    <title>Analytics - madLadsLab Admin</title>
    <script src="https://cdn.jsdelivr.net/npm/chart.js@4.4.0/dist/chart.umd.min.js"></script>
</head>
<body>
  <%-include('../mainContent/adminHeader.ejs')%>

  <div class="admin-container">
    <%-include('../mainContent/adminSidebar.ejs')%>

    <main class="admin-main">
      <div class="admin-header">
        <h1>ðŸ“Š Analytics Dashboard</h1>
        <p class="admin-subtitle">Real-time site performance and usage statistics</p>
        <div class="time-filter">
          <button class="filter-btn active" data-days="1">24H</button>
          <button class="filter-btn" data-days="7">7D</button>
          <button class="filter-btn" data-days="30">30D</button>
          <button class="refresh-btn" onclick="refreshData()">ðŸ”„ Refresh</button>
        </div>
      </div>

      <!-- Stats Overview -->
      <div class="dashboard-grid">
        <div class="stat-card">
          <div class="stat-icon" style="color: #00ff88;">
            <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M16 21v-2a4 4 0 0 0-4-4H5a4 4 0 0 0-4 4v2"></path>
              <circle cx="8.5" cy="7" r="4"></circle>
              <line x1="20" y1="8" x2="20" y2="14"></line>
              <line x1="23" y1="11" x2="17" y2="11"></line>
            </svg>
          </div>
          <div class="stat-content">
            <p class="stat-label">Page Views (24h)</p>
            <p class="stat-value" id="pageViews24h">Loading...</p>
            <p class="stat-change" id="pageViewsTotal">Total: ...</p>
          </div>
        </div>

        <div class="stat-card">
          <div class="stat-icon" style="color: #00aaff;">
            <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <polyline points="22 12 18 12 15 21 9 3 6 12 2 12"></polyline>
            </svg>
          </div>
          <div class="stat-content">
            <p class="stat-label">Unique Visitors (24h)</p>
            <p class="stat-value" id="uniqueVisitors">Loading...</p>
            <p class="stat-change">Live tracking</p>
          </div>
        </div>

        <div class="stat-card">
          <div class="stat-icon" style="color: #ff9500;">
            <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <polyline points="23 6 13.5 15.5 8.5 10.5 1 18"></polyline>
              <polyline points="17 6 23 6 23 12"></polyline>
            </svg>
          </div>
          <div class="stat-content">
            <p class="stat-label">API Calls (24h)</p>
            <p class="stat-value" id="apiCalls24h">Loading...</p>
            <p class="stat-change" id="apiCallsTotal">Total: ...</p>
          </div>
        </div>

        <div class="stat-card">
          <div class="stat-icon" style="color: #ff375f;">
            <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <circle cx="12" cy="12" r="10"></circle>
              <line x1="12" y1="8" x2="12" y2="12"></line>
              <line x1="12" y1="16" x2="12.01" y2="16"></line>
            </svg>
          </div>
          <div class="stat-content">
            <p class="stat-label">Errors (24h)</p>
            <p class="stat-value" id="errors24h">Loading...</p>
            <p class="stat-change" id="errorsTotal">Total: ...</p>
          </div>
        </div>
      </div>

      <!-- Traffic Chart -->
      <div class="content-section">
        <h2>Traffic Over Time</h2>
        <div class="chart-container">
          <canvas id="trafficChart"></canvas>
        </div>
      </div>

      <!-- Top Pages and Devices Row -->
      <div class="two-column-grid">
        <div class="content-section">
          <h2>Top Pages</h2>
          <div class="table-container">
            <table class="admin-table">
              <thead>
                <tr>
                  <th>Page</th>
                  <th>Views</th>
                </tr>
              </thead>
              <tbody id="topPagesTable">
                <tr>
                  <td colspan="2" class="empty-cell">Loading...</td>
                </tr>
              </tbody>
            </table>
          </div>
        </div>

        <div class="content-section">
          <h2>Device Breakdown</h2>
          <div id="deviceStats">
            <p class="loading-text">Loading device data...</p>
          </div>
        </div>
      </div>

      <!-- API Performance -->
      <div class="content-section">
        <h2>API Performance</h2>
        <div class="table-container">
          <table class="admin-table">
            <thead>
              <tr>
                <th>Endpoint</th>
                <th>Calls</th>
                <th>Avg Response</th>
                <th>Max Response</th>
                <th>Errors</th>
              </tr>
            </thead>
            <tbody id="performanceTable">
              <tr>
                <td colspan="5" class="empty-cell">Loading...</td>
              </tr>
            </tbody>
          </table>
        </div>
      </div>

      <!-- Recent Errors -->
      <div class="content-section">
        <h2>Recent Errors</h2>
        <div id="errorsList">
          <p class="loading-text">Loading errors...</p>
        </div>
      </div>

    </main>
  </div>

  <style>
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }

    body {
      font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, sans-serif;
      background: #0a0a0a;
      color: #e0e0e0;
      line-height: 1.6;
    }

    .admin-container {
      display: flex;
      min-height: 100vh;
    }

    .admin-main {
      flex: 1;
      padding: 2rem;
      margin-left: 250px;
      margin-top: 60px;
    }

    .admin-header {
      margin-bottom: 2rem;
      display: flex;
      justify-content: space-between;
      align-items: flex-start;
      flex-wrap: wrap;
      gap: 1rem;
    }

    .admin-header h1 {
      font-size: 2rem;
      font-weight: 600;
      color: #ffffff;
      margin-bottom: 0.5rem;
    }

    .admin-subtitle {
      color: #888;
      font-size: 1rem;
      width: 100%;
    }

    .time-filter {
      display: flex;
      gap: 0.5rem;
    }

    .filter-btn, .refresh-btn {
      padding: 0.5rem 1rem;
      border: 1px solid #2a2a2a;
      background: #1a1a1a;
      color: #888;
      border-radius: 6px;
      cursor: pointer;
      transition: all 0.2s;
      font-size: 0.9rem;
    }

    .filter-btn:hover, .refresh-btn:hover {
      background: #2a2a2a;
      color: #fff;
    }

    .filter-btn.active {
      background: #00ff88;
      color: #000;
      border-color: #00ff88;
    }

    .refresh-btn {
      background: #1a3a1a;
      border-color: #00ff88;
      color: #00ff88;
    }

    .dashboard-grid {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(240px, 1fr));
      gap: 1.5rem;
      margin-bottom: 2rem;
    }

    .stat-card {
      background: #1a1a1a;
      border: 1px solid #2a2a2a;
      border-radius: 8px;
      padding: 1.5rem;
      display: flex;
      gap: 1rem;
      transition: transform 0.2s;
    }

    .stat-card:hover {
      transform: translateY(-2px);
      border-color: #3a3a3a;
    }

    .stat-icon {
      width: 48px;
      height: 48px;
      background: rgba(0, 255, 136, 0.1);
      border-radius: 8px;
      display: flex;
      align-items: center;
      justify-content: center;
      flex-shrink: 0;
    }

    .stat-content {
      flex: 1;
    }

    .stat-label {
      font-size: 0.85rem;
      color: #888;
      margin-bottom: 0.5rem;
    }

    .stat-value {
      font-size: 2rem;
      font-weight: 700;
      color: #fff;
      margin-bottom: 0.25rem;
    }

    .stat-change {
      font-size: 0.85rem;
      color: #888;
    }

    .content-section {
      background: #1a1a1a;
      border: 1px solid #2a2a2a;
      border-radius: 8px;
      padding: 1.5rem;
      margin-bottom: 1.5rem;
    }

    .content-section h2 {
      font-size: 1.25rem;
      color: #fff;
      margin-bottom: 1.5rem;
    }

    .chart-container {
      position: relative;
      height: 300px;
    }

    .two-column-grid {
      display: grid;
      grid-template-columns: 1fr 1fr;
      gap: 1.5rem;
      margin-bottom: 1.5rem;
    }

    .table-container {
      overflow-x: auto;
    }

    .admin-table {
      width: 100%;
      border-collapse: collapse;
    }

    .admin-table th {
      background: #0a0a0a;
      color: #888;
      text-align: left;
      padding: 0.75rem;
      font-weight: 600;
      font-size: 0.85rem;
      text-transform: uppercase;
      letter-spacing: 0.5px;
      border-bottom: 2px solid #2a2a2a;
    }

    .admin-table td {
      padding: 1rem 0.75rem;
      border-bottom: 1px solid #2a2a2a;
      color: #e0e0e0;
    }

    .empty-cell, .loading-text {
      text-align: center;
      color: #666;
      padding: 2rem;
    }

    .device-item {
      padding: 0.75rem;
      background: #0a0a0a;
      border-radius: 6px;
      margin-bottom: 0.5rem;
      display: flex;
      justify-content: space-between;
    }

    .error-item {
      padding: 1rem;
      background: rgba(255, 55, 95, 0.1);
      border-left: 3px solid #ff375f;
      border-radius: 4px;
      margin-bottom: 1rem;
    }

    .error-path {
      font-weight: 600;
      color: #ff375f;
      margin-bottom: 0.5rem;
    }

    .error-message {
      color: #e0e0e0;
      margin-bottom: 0.5rem;
      font-size: 0.9rem;
    }

    .error-time {
      color: #888;
      font-size: 0.85rem;
    }

    @media (max-width: 1024px) {
      .two-column-grid {
        grid-template-columns: 1fr;
      }
    }

    @media (max-width: 768px) {
      .admin-main {
        margin-left: 0;
        padding: 1rem;
      }

      .dashboard-grid {
        grid-template-columns: 1fr;
      }

      .admin-header {
        flex-direction: column;
      }
    }
  </style>

  <script>
    let currentDays = 7;
    let trafficChart = null;

    // Load initial data
    document.addEventListener('DOMContentLoaded', () => {
      loadDashboardData();

      // Setup filter buttons
      document.querySelectorAll('.filter-btn').forEach(btn => {
        btn.addEventListener('click', () => {
          document.querySelectorAll('.filter-btn').forEach(b => b.classList.remove('active'));
          btn.classList.add('active');
          currentDays = parseInt(btn.dataset.days);
          loadDashboardData();
        });
      });

      // Auto-refresh every 30 seconds
      setInterval(loadDashboardData, 30000);
    });

    async function loadDashboardData() {
      try {
        await Promise.all([
          loadStats(),
          loadTopPages(),
          loadTrafficChart(),
          loadDevices(),
          loadPerformance(),
          loadErrors()
        ]);
      } catch (error) {
        console.error('Error loading dashboard:', error);
      }
    }

    async function loadStats() {
      const res = await fetch('/admin/analytics/api/stats');
      const data = await res.json();

      if (data.success) {
        document.getElementById('pageViews24h').textContent = data.stats.pageViews.last24h.toLocaleString();
        document.getElementById('pageViewsTotal').textContent = `Total: ${data.stats.pageViews.total.toLocaleString()}`;

        document.getElementById('apiCalls24h').textContent = data.stats.apiCalls.last24h.toLocaleString();
        document.getElementById('apiCallsTotal').textContent = `Total: ${data.stats.apiCalls.total.toLocaleString()}`;

        document.getElementById('errors24h').textContent = data.stats.errors.last24h.toLocaleString();
        document.getElementById('errorsTotal').textContent = `Total: ${data.stats.errors.total.toLocaleString()}`;

        document.getElementById('uniqueVisitors').textContent = data.stats.uniqueVisitors.last24h.toLocaleString();
      }
    }

    async function loadTopPages() {
      const res = await fetch(`/admin/analytics/api/top-pages?days=${currentDays}`);
      const data = await res.json();

      const tbody = document.getElementById('topPagesTable');

      if (data.success && data.topPages.length > 0) {
        tbody.innerHTML = data.topPages.map(page => `
          <tr>
            <td><code>${page._id}</code></td>
            <td><strong>${page.count}</strong></td>
          </tr>
        `).join('');
      } else {
        tbody.innerHTML = '<tr><td colspan="2" class="empty-cell">No data available</td></tr>';
      }
    }

    async function loadTrafficChart() {
      const res = await fetch(`/admin/analytics/api/traffic?days=${currentDays}`);
      const data = await res.json();

      if (data.success) {
        const labels = data.traffic.map(t => {
          const date = new Date(t._id.year, t._id.month - 1, t._id.day, t._id.hour);
          return date.toLocaleString('en-US', { month: 'short', day: 'numeric', hour: '2-digit' });
        });

        const counts = data.traffic.map(t => t.count);

        const ctx = document.getElementById('trafficChart');

        if (trafficChart) {
          trafficChart.destroy();
        }

        trafficChart = new Chart(ctx, {
          type: 'line',
          data: {
            labels: labels,
            datasets: [{
              label: 'Page Views',
              data: counts,
              borderColor: '#00ff88',
              backgroundColor: 'rgba(0, 255, 136, 0.1)',
              tension: 0.4,
              fill: true
            }]
          },
          options: {
            responsive: true,
            maintainAspectRatio: false,
            plugins: {
              legend: {
                labels: {
                  color: '#e0e0e0'
                }
              }
            },
            scales: {
              y: {
                beginAtZero: true,
                ticks: {
                  color: '#888'
                },
                grid: {
                  color: '#2a2a2a'
                }
              },
              x: {
                ticks: {
                  color: '#888',
                  maxTicksLimit: 12
                },
                grid: {
                  color: '#2a2a2a'
                }
              }
            }
          }
        });
      }
    }

    async function loadDevices() {
      const res = await fetch(`/admin/analytics/api/devices?days=${currentDays}`);
      const data = await res.json();

      const container = document.getElementById('deviceStats');

      if (data.success && data.devices.length > 0) {
        container.innerHTML = data.devices.slice(0, 10).map(device => `
          <div class="device-item">
            <span>${device._id.browser || 'Unknown'} on ${device._id.os || 'Unknown'}</span>
            <strong>${device.count}</strong>
          </div>
        `).join('');
      } else {
        container.innerHTML = '<p class="loading-text">No device data available</p>';
      }
    }

    async function loadPerformance() {
      const res = await fetch(`/admin/analytics/api/performance?days=${currentDays}`);
      const data = await res.json();

      const tbody = document.getElementById('performanceTable');

      if (data.success && data.performance.length > 0) {
        tbody.innerHTML = data.performance.map(perf => `
          <tr>
            <td><code>${perf._id}</code></td>
            <td>${perf.count}</td>
            <td>${perf.avgResponseTime.toFixed(0)}ms</td>
            <td>${perf.maxResponseTime}ms</td>
            <td style="color: ${perf.errorCount > 0 ? '#ff375f' : '#00ff88'}">${perf.errorCount}</td>
          </tr>
        `).join('');
      } else {
        tbody.innerHTML = '<tr><td colspan="5" class="empty-cell">No API data available</td></tr>';
      }
    }

    async function loadErrors() {
      const res = await fetch('/admin/analytics/api/errors?limit=10');
      const data = await res.json();

      const container = document.getElementById('errorsList');

      if (data.success && data.errors.length > 0) {
        container.innerHTML = data.errors.map(error => `
          <div class="error-item">
            <div class="error-path">${error.method} ${error.path}</div>
            <div class="error-message">${error.error.message}</div>
            <div class="error-time">${new Date(error.timestamp).toLocaleString()}</div>
          </div>
        `).join('');
      } else {
        container.innerHTML = '<p class="loading-text">No recent errors</p>';
      }
    }

    function refreshData() {
      loadDashboardData();

      // Visual feedback
      const btn = event.target;
      btn.textContent = 'âŸ³ Refreshing...';
      setTimeout(() => {
        btn.textContent = 'ðŸ”„ Refresh';
      }, 1000);
    }
  </script>

  <%-include('../mainContent/adminNav.ejs')%>
</body>
</html>
