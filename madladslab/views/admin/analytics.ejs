<!DOCTYPE html>
<html>
<head>
    <link rel="icon" type="image/png" href="/images/beaker_logo_no_stash.png">
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no">
    <title>Analytics - madLadsLab Admin</title>
</head>
<body>
  <%-include('../mainContent/adminHeader.ejs')%>

  <div class="admin-container">
    <%-include('../mainContent/adminSidebar.ejs')%>

    <main class="admin-main">
      <div class="admin-header">
        <h1>Analytics</h1>
        <p class="admin-subtitle">Monitor site performance and usage statistics</p>
      </div>

      <!-- Stats Overview -->
      <div class="dashboard-grid">
        <div class="stat-card">
          <div class="stat-icon" style="color: #00ff00;">
            <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor">
              <path d="M16 21v-2a4 4 0 0 0-4-4H5a4 4 0 0 0-4 4v2"></path>
              <circle cx="8.5" cy="7" r="4"></circle>
              <line x1="20" y1="8" x2="20" y2="14"></line>
              <line x1="23" y1="11" x2="17" y2="11"></line>
            </svg>
          </div>
          <div class="stat-content">
            <p class="stat-label">Total Visitors</p>
            <p class="stat-value">0</p>
            <p class="stat-change positive">Coming soon</p>
          </div>
        </div>

        <div class="stat-card">
          <div class="stat-icon" style="color: #00aaff;">
            <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor">
              <polyline points="22 12 18 12 15 21 9 3 6 12 2 12"></polyline>
            </svg>
          </div>
          <div class="stat-content">
            <p class="stat-label">Active Sessions</p>
            <p class="stat-value">0</p>
            <p class="stat-change">Live tracking coming soon</p>
          </div>
        </div>

        <div class="stat-card">
          <div class="stat-icon" style="color: #ff9500;">
            <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor">
              <polyline points="23 6 13.5 15.5 8.5 10.5 1 18"></polyline>
              <polyline points="17 6 23 6 23 12"></polyline>
            </svg>
          </div>
          <div class="stat-content">
            <p class="stat-label">Page Views</p>
            <p class="stat-value">0</p>
            <p class="stat-change">Analytics pending</p>
          </div>
        </div>

        <div class="stat-card">
          <div class="stat-icon" style="color: #ff375f;">
            <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor">
              <circle cx="12" cy="12" r="10"></circle>
              <polyline points="12 6 12 12 16 14"></polyline>
            </svg>
          </div>
          <div class="stat-content">
            <p class="stat-label">Avg. Session</p>
            <p class="stat-value">0m</p>
            <p class="stat-change">Metrics coming soon</p>
          </div>
        </div>
      </div>

      <!-- Chart Placeholder -->
      <div class="content-section">
        <h2>Traffic Overview</h2>
        <div class="chart-placeholder">
          <svg width="64" height="64" viewBox="0 0 24 24" fill="none" stroke="currentColor">
            <line x1="12" y1="20" x2="12" y2="10"></line>
            <line x1="18" y1="20" x2="18" y2="4"></line>
            <line x1="6" y1="20" x2="6" y2="16"></line>
          </svg>
          <p>Analytics dashboard coming soon</p>
          <p class="chart-subtext">Integrate with Google Analytics or custom tracking solution</p>
        </div>
      </div>

      <!-- Recent Activity -->
      <div class="content-section">
        <h2>Recent Activity</h2>
        <div class="activity-list">
          <div class="activity-item">
            <div class="activity-icon">
              <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor">
                <circle cx="12" cy="12" r="10"></circle>
                <polyline points="12 6 12 12 16 14"></polyline>
              </svg>
            </div>
            <div class="activity-content">
              <p class="activity-text">Activity tracking will appear here</p>
              <p class="activity-time">Future feature</p>
            </div>
          </div>
        </div>
      </div>

      <!-- Top Pages -->
      <div class="content-section">
        <h2>Top Pages</h2>
        <div class="table-container">
          <table class="admin-table">
            <thead>
              <tr>
                <th>Page</th>
                <th>Views</th>
                <th>Unique Visitors</th>
                <th>Avg. Time</th>
              </tr>
            </thead>
            <tbody>
              <tr>
                <td colspan="4" class="empty-cell">No analytics data available yet</td>
              </tr>
            </tbody>
          </table>
        </div>
      </div>
    </main>
  </div>

  <style>
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }

    body {
      font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, sans-serif;
      background: #0a0a0a;
      color: #e0e0e0;
      line-height: 1.6;
    }

    .admin-container {
      display: flex;
      min-height: 100vh;
    }

    .admin-main {
      flex: 1;
      padding: 2rem;
      margin-left: 250px;
      margin-top: 60px;
    }

    .admin-header {
      margin-bottom: 2rem;
    }

    .admin-header h1 {
      font-size: 2rem;
      font-weight: 600;
      color: #ffffff;
      margin-bottom: 0.5rem;
    }

    .admin-subtitle {
      color: #888;
      font-size: 1rem;
    }

    .dashboard-grid {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(240px, 1fr));
      gap: 1.5rem;
      margin-bottom: 2rem;
    }

    .stat-card {
      background: #1a1a1a;
      border: 1px solid #2a2a2a;
      border-radius: 8px;
      padding: 1.5rem;
      display: flex;
      gap: 1rem;
    }

    .stat-icon {
      width: 48px;
      height: 48px;
      background: rgba(0, 255, 0, 0.1);
      border-radius: 8px;
      display: flex;
      align-items: center;
      justify-content: center;
      flex-shrink: 0;
    }

    .stat-content {
      flex: 1;
    }

    .stat-label {
      font-size: 0.85rem;
      color: #888;
      margin-bottom: 0.5rem;
    }

    .stat-value {
      font-size: 2rem;
      font-weight: 700;
      color: #fff;
      margin-bottom: 0.25rem;
    }

    .stat-change {
      font-size: 0.85rem;
      color: #888;
    }

    .stat-change.positive {
      color: #00ff00;
    }

    .content-section {
      background: #1a1a1a;
      border: 1px solid #2a2a2a;
      border-radius: 8px;
      padding: 1.5rem;
      margin-bottom: 1.5rem;
    }

    .content-section h2 {
      font-size: 1.5rem;
      color: #fff;
      margin-bottom: 1.5rem;
    }

    .chart-placeholder {
      text-align: center;
      padding: 4rem 2rem;
      color: #888;
    }

    .chart-placeholder svg {
      margin-bottom: 1rem;
      opacity: 0.3;
      stroke-width: 2;
    }

    .chart-placeholder p {
      margin-bottom: 0.5rem;
    }

    .chart-subtext {
      font-size: 0.85rem;
      color: #666;
    }

    .activity-list {
      display: flex;
      flex-direction: column;
      gap: 1rem;
    }

    .activity-item {
      display: flex;
      gap: 1rem;
      padding: 1rem;
      background: #0a0a0a;
      border-radius: 6px;
    }

    .activity-icon {
      width: 32px;
      height: 32px;
      background: rgba(0, 255, 0, 0.1);
      border-radius: 6px;
      display: flex;
      align-items: center;
      justify-content: center;
      color: #00ff00;
      flex-shrink: 0;
    }

    .activity-content {
      flex: 1;
    }

    .activity-text {
      color: #e0e0e0;
      margin-bottom: 0.25rem;
    }

    .activity-time {
      font-size: 0.85rem;
      color: #666;
    }

    .table-container {
      overflow-x: auto;
    }

    .admin-table {
      width: 100%;
      border-collapse: collapse;
    }

    .admin-table th {
      background: #0a0a0a;
      color: #888;
      text-align: left;
      padding: 0.75rem;
      font-weight: 600;
      font-size: 0.85rem;
      text-transform: uppercase;
      letter-spacing: 0.5px;
      border-bottom: 2px solid #2a2a2a;
    }

    .admin-table td {
      padding: 1rem 0.75rem;
      border-bottom: 1px solid #2a2a2a;
      color: #e0e0e0;
    }

    .empty-cell {
      text-align: center;
      color: #666;
      padding: 2rem !important;
    }

    @media (max-width: 768px) {
      .admin-main {
        margin-left: 0;
        padding: 1rem;
      }

      .dashboard-grid {
        grid-template-columns: 1fr;
      }
    }
  </style>
</body>
</html>
