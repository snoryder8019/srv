<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %> - Coinbase Trader Bot</title>
    <link rel="icon" type="image/png" href="/images/beaker_logo_no_stash.png">
    <style>
        * { box-sizing: border-box; margin: 0; padding: 0; }
        body {
            font-family: 'Courier New', 'Consolas', monospace;
            background: #0a0e27;
            padding: 0;
            min-height: 100vh;
            color: #00ff41;
        }
        .container {
            max-width: 1600px;
            margin: 0 auto;
            padding: 0;
        }
        h1 {
            color: #00ff41;
            text-align: left;
            margin: 0;
            padding: 20px 24px;
            font-size: 1.8rem;
            font-weight: 700;
            background: #0f1429;
            border-bottom: 2px solid #00ff41;
            letter-spacing: 2px;
            text-transform: uppercase;
        }
        .grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(350px, 1fr));
            gap: 1px;
            margin-bottom: 1px;
            background: #00ff41;
        }
        .card {
            background: #0f1429;
            border: none;
            border-radius: 0;
            padding: 20px;
            box-shadow: none;
            border-left: 3px solid #00ff41;
        }
        .card h2 {
            color: #00ff41;
            margin-bottom: 16px;
            font-size: 1.1rem;
            border: none;
            padding-bottom: 8px;
            font-weight: 700;
            text-transform: uppercase;
            letter-spacing: 1px;
            border-bottom: 1px solid #1a2040;
        }
        .btn {
            background: #00ff41;
            color: #0a0e27;
            border: 2px solid #00ff41;
            padding: 8px 16px;
            border-radius: 0;
            cursor: pointer;
            font-size: 0.85rem;
            font-weight: 700;
            font-family: 'Courier New', monospace;
            transition: all 0.2s;
            text-transform: uppercase;
            letter-spacing: 1px;
        }
        .btn:hover {
            background: transparent;
            color: #00ff41;
            border-color: #00ff41;
        }
        .btn-danger {
            background: #ff0040;
            border-color: #ff0040;
            color: #fff;
        }
        .btn-danger:hover {
            background: transparent;
            color: #ff0040;
        }
        .btn-success {
            background: #00ff41;
            border-color: #00ff41;
            color: #0a0e27;
        }
        .btn-small {
            padding: 4px 12px;
            font-size: 0.75rem;
        }
        .form-group {
            margin-bottom: 16px;
        }
        .form-group label {
            display: block;
            margin-bottom: 6px;
            font-weight: 700;
            color: #00ff41;
            font-size: 0.8rem;
            text-transform: uppercase;
            letter-spacing: 1px;
        }
        .form-group input, .form-group select {
            width: 100%;
            padding: 8px 12px;
            border: 1px solid #1a2040;
            border-radius: 0;
            font-size: 0.9rem;
            background: #0a0e27;
            color: #00ff41;
            font-family: 'Courier New', monospace;
        }
        .form-group input:focus, .form-group select:focus {
            outline: none;
            border-color: #00ff41;
            box-shadow: 0 0 0 1px #00ff41;
        }
        .list-item {
            background: #0a0e27;
            padding: 10px;
            margin-bottom: 6px;
            border-radius: 0;
            border-left: 2px solid #00ff41;
            border: 1px solid #1a2040;
        }
        .list-item strong {
            color: #00ff41;
        }
        .empty-state {
            text-align: center;
            color: #999;
            padding: 40px;
            font-style: italic;
        }
        .status-badge {
            display: inline-block;
            padding: 2px 8px;
            border-radius: 0;
            font-size: 0.7rem;
            font-weight: 700;
            border: 1px solid;
            font-family: 'Courier New', monospace;
            letter-spacing: 1px;
        }
        .status-active { background: transparent; color: #00ff41; border-color: #00ff41; }
        .status-inactive { background: transparent; color: #666; border-color: #666; }
        .status-pending { background: transparent; color: #ffaa00; border-color: #ffaa00; }
        .status-completed { background: transparent; color: #00ff41; border-color: #00ff41; }
        .status-failed { background: transparent; color: #ff0040; border-color: #ff0040; }
        .status-cancelled { background: transparent; color: #666; border-color: #666; }
        .trade-buy { color: #00ff41; font-weight: bold; }
        .trade-sell { color: #ff0040; font-weight: bold; }
        .actions {
            display: flex;
            gap: 8px;
            margin-top: 12px;
        }
        .user-info {
            background: #0f1429;
            padding: 12px 24px;
            border-radius: 0;
            margin: 0;
            text-align: left;
            border-bottom: 1px solid #1a2040;
            color: #666;
            font-size: 0.85rem;
        }
        .warning {
            background: #1a1400;
            border: 1px solid #ffaa00;
            border-left: 3px solid #ffaa00;
            color: #ffaa00;
            padding: 12px 20px;
            border-radius: 0;
            margin: 0;
            font-size: 0.85rem;
            font-family: 'Courier New', monospace;
        }
        .modal {
            display: none;
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: rgba(0,0,0,0.9);
            z-index: 1000;
            align-items: center;
            justify-content: center;
        }
        .modal.active {
            display: flex;
        }
        .modal-content {
            background: #0f1429;
            padding: 24px;
            border-radius: 0;
            border: 2px solid #00ff41;
            max-width: 600px;
            width: 90%;
            max-height: 90vh;
            overflow-y: auto;
        }
        .modal-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 20px;
            border-bottom: 1px solid #1a2040;
            padding-bottom: 12px;
        }
        .modal-header h2 {
            color: #00ff41;
            font-size: 1.1rem;
        }
        .modal-close {
            background: #ff0040;
            color: white;
            border: none;
            width: 28px;
            height: 28px;
            border-radius: 0;
            cursor: pointer;
            font-size: 1.2rem;
            font-weight: bold;
        }
        .ticker {
            background: #0f1429;
            border-radius: 0;
            padding: 20px;
            margin: 0 0 1px 0;
            box-shadow: none;
            border-left: 3px solid #00ff41;
            border-bottom: 1px solid #1a2040;
        }
        .ticker-scroll {
            display: flex;
            gap: 20px;
            overflow-x: auto;
            padding: 10px 0;
        }
        .ticker-item {
            min-width: 220px;
            background: #0a0e27;
            color: #00ff41;
            padding: 12px;
            border-radius: 0;
            border: 1px solid #1a2040;
            text-align: center;
        }
        .ticker-symbol {
            font-size: 1.2rem;
            font-weight: bold;
            margin-bottom: 8px;
        }
        .ticker-price {
            font-size: 1.5rem;
            font-weight: bold;
        }
        .ticker-change {
            font-size: 0.9rem;
            margin-top: 4px;
            font-weight: 600;
        }
        .ticker-change.positive {
            color: #81c784;
        }
        .ticker-change.negative {
            color: #e57373;
        }
        .stat-item {
            display: flex;
            justify-content: space-between;
            padding: 8px 0;
            border-bottom: 1px solid #1a2040;
        }
        .stat-label {
            color: #666;
            font-size: 0.75rem;
            text-transform: uppercase;
        }
        .stat-value {
            color: #00ff41;
            font-weight: 700;
        }
        .stat-value.positive {
            color: #00ff41;
        }
        .stat-value.negative {
            color: #ff0040;
        }
        .balance-item {
            display: flex;
            justify-content: space-between;
            padding: 8px 0;
            border-bottom: 1px solid #1a2040;
        }
    </style>
</head>
<body>
    <div class="container">
        <h1>üöÄ Coinbase Trader Bot</h1>

        <div class="user-info">
            <strong>User:</strong> <%= user ? user.firstName + ' ' + user.lastName : 'Guest' %>
            <% if (user && user.email) { %> | <strong>Email:</strong> <%= user.email %><% } %>
        </div>

        <!-- Market Ticker -->
        <div class="ticker">
            <h2>üìà Live Market & Active Trades</h2>
            <div class="ticker-scroll" id="tickerContainer">
                <div class="ticker-item">
                    <div class="ticker-symbol">Loading...</div>
                    <div class="ticker-price">--</div>
                </div>
            </div>
        </div>

        <div class="warning">
            ‚ö†Ô∏è <strong>Security Notice:</strong> This is a trading bot interface. Your API keys will be stored encrypted. Never share your API keys with anyone.
        </div>

        <!-- Main Grid -->
        <div class="grid">
            <!-- Account Balances -->
            <div class="card">
                <h2>üíµ Account Balances</h2>
                <div id="accountBalances">
                    <div class="empty-state">Loading balances...</div>
                </div>
            </div>

            <!-- Trading Pool -->
            <div class="card">
                <h2>üí∞ Trading Pool</h2>
                <div id="poolStats">
                    <div class="stat-item">
                        <span class="stat-label">Total Invested</span>
                        <span class="stat-value" id="totalInvested">$0.00</span>
                    </div>
                    <div class="stat-item">
                        <span class="stat-label">Current Value</span>
                        <span class="stat-value" id="currentValue">$0.00</span>
                    </div>
                    <div class="stat-item">
                        <span class="stat-label">Total P/L</span>
                        <span class="stat-value" id="totalPL">$0.00</span>
                    </div>
                </div>
            </div>

        </div>

        <!-- API Keys -->
        <div class="card">
            <h2>üîë API Keys</h2>
            <% if (apiKeys && apiKeys.length > 0) { %>
                <% apiKeys.forEach(key => { %>
                    <div class="list-item">
                        <strong><%= key.name %></strong> - <%= key.exchange %>
                        <span class="status-badge <%= key.isActive ? 'status-active' : 'status-inactive' %>">
                            <%= key.isActive ? 'Active' : 'Inactive' %>
                        </span>
                        <div class="actions">
                            <button class="btn btn-danger btn-small" onclick="deleteApiKey('<%= key._id %>')">Delete</button>
                        </div>
                    </div>
                <% }) %>
            <% } else { %>
                <div class="empty-state">No API keys configured yet.</div>
            <% } %>

            <h3 style="margin-top: 24px; color: #00ff41;">Add New API Key</h3>
            <form id="addApiKeyForm">
                <div class="form-group">
                    <label>Name:</label>
                    <input type="text" name="name" required>
                </div>
                <div class="form-group">
                    <label>Exchange:</label>
                    <select name="exchange" required>
                        <option value="Coinbase">Coinbase</option>
                        <option value="Coinbase Pro">Coinbase Pro</option>
                    </select>
                </div>
                <div class="form-group">
                    <label>API Key:</label>
                    <input type="text" name="apiKey" required>
                </div>
                <div class="form-group">
                    <label>API Secret:</label>
                    <input type="password" name="apiSecret" required>
                </div>
                <button type="submit" class="btn">Add API Key</button>
            </form>
        </div>

        <!-- Strategies and Trades -->
        <div class="grid">
            <!-- Strategies -->
            <div class="card">
                <h2>üìä Trading Strategies</h2>
                <% if (strategies && strategies.length > 0) { %>
                    <% strategies.forEach(strategy => { %>
                        <div class="list-item">
                            <div style="display: flex; justify-content: space-between; align-items: center; margin-bottom: 8px;">
                                <strong><%= strategy.name %></strong>
                                <div style="display: flex; gap: 8px;">
                                    <span class="status-badge <%= strategy.isActive ? 'status-active' : 'status-inactive' %>">
                                        <%= strategy.isActive ? 'ACTIVE' : 'INACTIVE' %>
                                    </span>
                                    <% if (strategy.isRunning) { %>
                                        <span class="status-badge" style="background: #00ff41; color: #0a0e27;">ü§ñ RUNNING</span>
                                    <% } %>
                                </div>
                            </div>
                            <div style="font-size: 0.8rem; color: #666; margin-bottom: 8px;">
                                <%= strategy.pair %> | $<%= strategy.tradeAmount %>/trade | Check: <%= strategy.checkInterval %>s
                                <% if (strategy.totalRuns > 0) { %>
                                    <br>Runs: <%= strategy.totalRuns %> | Success: <%= strategy.successfulTrades %> | Failed: <%= strategy.failedTrades %>
                                <% } %>
                            </div>
                            <div class="actions">
                                <% if (strategy.isRunning) { %>
                                    <button class="btn btn-danger btn-small" onclick="stopStrategyMonitor('<%= strategy._id %>')">‚èπ Stop</button>
                                <% } else { %>
                                    <button class="btn btn-success btn-small" onclick="startStrategyMonitor('<%= strategy._id %>')">‚ñ∂ Start</button>
                                <% } %>
                                <button class="btn btn-small" onclick="showEditStrategyModal('<%= strategy._id %>')">Edit</button>
                                <button class="btn btn-danger btn-small" onclick="deleteStrategy('<%= strategy._id %>')">Delete</button>
                            </div>
                        </div>
                    <% }) %>
                <% } else { %>
                    <div class="empty-state">No strategies created yet.</div>
                <% } %>
                <div style="margin-top: 16px;">
                    <button class="btn" onclick="showCreateStrategyModal()">Create New Strategy</button>
                </div>
            </div>

            <!-- Recent Trades -->
            <div class="card">
                <h2>üíπ Recent Trades</h2>
                <% const recentTrades = trades ? trades.slice(0, 10) : []; %>
                <% if (recentTrades.length > 0) { %>
                    <% recentTrades.forEach(trade => { %>
                        <div class="list-item">
                            <span class="<%= trade.side === 'buy' ? 'trade-buy' : 'trade-sell' %>">
                                <%= trade.side.toUpperCase() %>
                            </span>
                            <%= trade.pair %> - <%= trade.amount %>
                            <span class="status-badge status-<%= trade.status %>">
                                <%= trade.status %>
                            </span>
                        </div>
                    <% }) %>
                <% } else { %>
                    <div class="empty-state">No trades yet.</div>
                <% } %>
            </div>
        </div>
    </div>

    <!-- Create Strategy Modal -->
    <div id="createStrategyModal" class="modal">
        <div class="modal-content">
            <div class="modal-header">
                <h2>Create New Strategy</h2>
                <button class="modal-close" onclick="closeCreateStrategyModal()">√ó</button>
            </div>
            <form id="createStrategyForm">
                <div class="form-group">
                    <label>Strategy Name:</label>
                    <input type="text" name="name" required>
                </div>
                <div class="form-group">
                    <label>Strategy Type:</label>
                    <select name="strategyType" required>
                        <option value="Manual">Manual</option>
                        <option value="DCA">DCA (Dollar Cost Average)</option>
                        <option value="Grid">Grid Trading</option>
                        <option value="Momentum">Momentum</option>
                    </select>
                </div>
                <div class="form-group">
                    <label>Trading Pair:</label>
                    <input type="text" name="pair" value="BTC-USD" required>
                </div>
                <div class="form-group">
                    <label>API Key:</label>
                    <select name="apiKeyId" required>
                        <option value="">Select API Key</option>
                        <% if (apiKeys && apiKeys.length > 0) { %>
                            <% apiKeys.filter(k => k.isActive).forEach(key => { %>
                                <option value="<%= key._id %>"><%= key.name %></option>
                            <% }) %>
                        <% } %>
                    </select>
                </div>

                <h3 style="margin: 16px 0 8px 0; color: #00ff41; font-size: 0.9rem;">BOT PARAMETERS</h3>
                <div class="form-group">
                    <label>Trade Amount (USD per trade):</label>
                    <input type="number" name="tradeAmount" value="10" step="0.01" required>
                </div>
                <div class="form-group">
                    <label>Max Concurrent Trades:</label>
                    <input type="number" name="maxTrades" value="10" min="1" required>
                </div>
                <div class="form-group">
                    <label>Check Interval (seconds):</label>
                    <input type="number" name="checkInterval" value="60" min="10" required>
                </div>

                <h3 style="margin: 16px 0 8px 0; color: #00ff41; font-size: 0.9rem;">BUY CONDITIONS</h3>
                <div class="form-group">
                    <label>Buy when price drops BELOW ($):</label>
                    <input type="number" name="buyPriceBelow" step="0.01" placeholder="e.g., 95000">
                </div>
                <div class="form-group">
                    <label>Buy when price rises ABOVE ($):</label>
                    <input type="number" name="buyPriceAbove" step="0.01" placeholder="e.g., 100000">
                </div>

                <h3 style="margin: 16px 0 8px 0; color: #ff0040; font-size: 0.9rem;">SELL CONDITIONS</h3>
                <div class="form-group">
                    <label>Sell when price rises ABOVE ($):</label>
                    <input type="number" name="sellPriceAbove" step="0.01" placeholder="e.g., 98000">
                </div>
                <div class="form-group">
                    <label>Sell when price drops BELOW ($):</label>
                    <input type="number" name="sellPriceBelow" step="0.01" placeholder="e.g., 93000">
                </div>

                <h3 style="margin: 16px 0 8px 0; color: #00ff41; font-size: 0.9rem;">RISK MANAGEMENT</h3>
                <div class="form-group">
                    <label>Max Investment ($):</label>
                    <input type="number" name="maxInvestment" value="100" step="0.01" required>
                </div>
                <div class="form-group">
                    <label>Stop Loss (%):</label>
                    <input type="number" name="stopLoss" step="0.1" placeholder="e.g., 5">
                </div>
                <div class="form-group">
                    <label>Take Profit (%):</label>
                    <input type="number" name="takeProfit" step="0.1" placeholder="e.g., 10">
                </div>

                <button type="submit" class="btn">Create Strategy</button>
            </form>
        </div>
    </div>

    <!-- Edit Strategy Modal -->
    <div id="editStrategyModal" class="modal">
        <div class="modal-content">
            <div class="modal-header">
                <h2>Edit Strategy</h2>
                <button class="modal-close" onclick="closeEditStrategyModal()">√ó</button>
            </div>
            <form id="editStrategyForm">
                <input type="hidden" id="editStrategyId">
                <div class="form-group">
                    <label>Strategy Name:</label>
                    <input type="text" id="editStrategyName" name="name" required>
                </div>
                <div class="form-group">
                    <label>Trading Pair:</label>
                    <input type="text" id="editStrategyPair" name="pair" required>
                </div>

                <h3 style="margin: 16px 0 8px 0; color: #00ff41; font-size: 0.9rem;">BOT PARAMETERS</h3>
                <div class="form-group">
                    <label>Trade Amount (USD):</label>
                    <input type="number" id="editTradeAmount" name="tradeAmount" step="0.01" required>
                </div>
                <div class="form-group">
                    <label>Max Trades:</label>
                    <input type="number" id="editMaxTrades" name="maxTrades" min="1" required>
                </div>
                <div class="form-group">
                    <label>Check Interval (seconds):</label>
                    <input type="number" id="editCheckInterval" name="checkInterval" min="10" required>
                </div>

                <h3 style="margin: 16px 0 8px 0; color: #00ff41; font-size: 0.9rem;">BUY CONDITIONS</h3>
                <div class="form-group">
                    <label>Buy when price drops BELOW ($):</label>
                    <input type="number" id="editBuyPriceBelow" name="buyPriceBelow" step="0.01">
                </div>
                <div class="form-group">
                    <label>Buy when price rises ABOVE ($):</label>
                    <input type="number" id="editBuyPriceAbove" name="buyPriceAbove" step="0.01">
                </div>

                <h3 style="margin: 16px 0 8px 0; color: #ff0040; font-size: 0.9rem;">SELL CONDITIONS</h3>
                <div class="form-group">
                    <label>Sell when price rises ABOVE ($):</label>
                    <input type="number" id="editSellPriceAbove" name="sellPriceAbove" step="0.01">
                </div>
                <div class="form-group">
                    <label>Sell when price drops BELOW ($):</label>
                    <input type="number" id="editSellPriceBelow" name="sellPriceBelow" step="0.01">
                </div>

                <h3 style="margin: 16px 0 8px 0; color: #00ff41; font-size: 0.9rem;">RISK MANAGEMENT</h3>
                <div class="form-group">
                    <label>Max Investment ($):</label>
                    <input type="number" id="editStrategyMaxInvestment" name="maxInvestment" step="0.01" required>
                </div>
                <div class="form-group">
                    <label>Stop Loss (%):</label>
                    <input type="number" id="editStopLoss" name="stopLoss" step="0.1">
                </div>
                <div class="form-group">
                    <label>Take Profit (%):</label>
                    <input type="number" id="editTakeProfit" name="takeProfit" step="0.1">
                </div>

                <button type="submit" class="btn">Save Changes</button>
            </form>
        </div>
    </div>

    <script>
        let allStrategies = <%- JSON.stringify(strategies || []) %>;

        // Update ticker
        async function updateTicker() {
            try {
                const response = await fetch('/trader/ticker');
                
                if (!response.ok) {
                    console.error('Ticker fetch failed:', response.status);
                    const container = document.getElementById('tickerContainer');
                    container.innerHTML = '<div class="ticker-item" style="border-color: #ff0040;"><div class="ticker-symbol">Error ' + response.status + '</div><div class="ticker-price">Failed to load</div></div>';
                    return;
                }

                const result = await response.json();

                if (result.success && result.data) {
                    const container = document.getElementById('tickerContainer');
                    const data = result.data;
                    let html = '';

                    if (data.topCoins && data.topCoins.length > 0) {
                        data.topCoins.forEach((coin) => {
                            const changeClass = coin.change24h >= 0 ? 'positive' : 'negative';
                            const changeSymbol = coin.change24h >= 0 ? '‚ñ≤' : '‚ñº';
                            html += `
                                <div class="ticker-item">
                                    <div class="ticker-symbol">${coin.symbol}</div>
                                    <div class="ticker-price">$${coin.price.toLocaleString('en-US', {minimumFractionDigits: 2, maximumFractionDigits: 2})}</div>
                                    <div class="ticker-change ${changeClass}">
                                        ${changeSymbol} ${Math.abs(coin.change24h).toFixed(2)}%
                                    </div>
                                </div>
                            `;
                        });
                    }

                    if (html) {
                        container.innerHTML = html;
                    } else {
                        container.innerHTML = '<div class="ticker-item"><div class="ticker-symbol">No Data</div></div>';
                    }
                }
            } catch (error) {
                console.error('Ticker error:', error);
                const container = document.getElementById('tickerContainer');
                container.innerHTML = '<div class="ticker-item" style="border-color: #ff0040;"><div class="ticker-symbol">Network Error</div><div class="ticker-price">' + error.message + '</div></div>';
            }
        }

        // Update portfolio
        async function updatePortfolio() {
            try {
                const response = await fetch('/trader/portfolio');
                const result = await response.json();
                
                if (result.success && result.data) {
                    const data = result.data;
                    document.getElementById('totalInvested').textContent = '$' + data.totalInvested.toFixed(2);
                    document.getElementById('currentValue').textContent = '$' + data.currentValue.toFixed(2);
                    
                    const plEl = document.getElementById('totalPL');
                    const pl = data.profitLoss;
                    plEl.textContent = (pl >= 0 ? '+' : '') + '$' + pl.toFixed(2);
                    plEl.className = 'stat-value ' + (pl >= 0 ? 'positive' : 'negative');
                }
            } catch (error) {
                console.error('Portfolio error:', error);
            }
        }

        // Update balances
        async function updateBalances() {
            try {
                const response = await fetch('/trader/balances');
                const result = await response.json();
                
                const container = document.getElementById('accountBalances');
                if (result.success && result.data && result.data.balances && result.data.balances.length > 0) {
                    let html = '';
                    result.data.balances.forEach(bal => {
                        html += `
                            <div class="balance-item">
                                <span>${bal.currency}</span>
                                <span class="stat-value">${bal.available.toFixed(8)}</span>
                            </div>
                        `;
                    });
                    container.innerHTML = html;
                } else {
                    container.innerHTML = '<div class="empty-state">No balances</div>';
                }
            } catch (error) {
                console.error('Balances error:', error);
            }
        }

        // API Key functions
        document.getElementById('addApiKeyForm').addEventListener('submit', async (e) => {
            e.preventDefault();
            const formData = new FormData(e.target);
            const data = Object.fromEntries(formData);

            try {
                const response = await fetch('/trader/api-keys', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify(data)
                });

                const result = await response.json();
                if (result.success) {
                    alert('API key added successfully!');
                    location.reload();
                } else {
                    alert('Error: ' + (result.error || 'Failed to add API key'));
                }
            } catch (error) {
                alert('Error: ' + error.message);
            }
        });

        async function deleteApiKey(id) {
            if (!confirm('Delete this API key?')) return;

            try {
                const response = await fetch(`/trader/api-keys/${id}`, { method: 'DELETE' });
                const result = await response.json();
                if (result.success) {
                    alert('API key deleted!');
                    location.reload();
                }
            } catch (error) {
                alert('Error: ' + error.message);
            }
        }

        // Strategy functions
        function showCreateStrategyModal() {
            document.getElementById('createStrategyModal').classList.add('active');
        }

        function closeCreateStrategyModal() {
            document.getElementById('createStrategyModal').classList.remove('active');
        }

        function showEditStrategyModal(id) {
            const strategy = allStrategies.find(s => s._id === id);
            if (!strategy) return;

            document.getElementById('editStrategyId').value = strategy._id;
            document.getElementById('editStrategyName').value = strategy.name || '';
            document.getElementById('editStrategyPair').value = strategy.pair || '';
            document.getElementById('editStrategyMaxInvestment').value = strategy.maxInvestment || '';
            document.getElementById('editTradeAmount').value = strategy.tradeAmount || 10;
            document.getElementById('editMaxTrades').value = strategy.maxTrades || 10;
            document.getElementById('editCheckInterval').value = strategy.checkInterval || 60;
            document.getElementById('editStopLoss').value = strategy.stopLoss || '';
            document.getElementById('editTakeProfit').value = strategy.takeProfit || '';

            // Populate buy/sell conditions
            const buyConditions = strategy.buyConditions || {};
            const sellConditions = strategy.sellConditions || {};

            document.getElementById('editBuyPriceBelow').value = buyConditions.priceBelow || '';
            document.getElementById('editBuyPriceAbove').value = buyConditions.priceAbove || '';
            document.getElementById('editSellPriceAbove').value = sellConditions.priceAbove || '';
            document.getElementById('editSellPriceBelow').value = sellConditions.priceBelow || '';

            document.getElementById('editStrategyModal').classList.add('active');
        }

        function closeEditStrategyModal() {
            document.getElementById('editStrategyModal').classList.remove('active');
        }

        document.getElementById('createStrategyForm').addEventListener('submit', async (e) => {
            e.preventDefault();
            const formData = new FormData(e.target);
            const data = Object.fromEntries(formData);

            // Build buy conditions object
            const buyConditions = {};
            if (data.buyPriceBelow) buyConditions.priceBelow = parseFloat(data.buyPriceBelow);
            if (data.buyPriceAbove) buyConditions.priceAbove = parseFloat(data.buyPriceAbove);

            // Build sell conditions object
            const sellConditions = {};
            if (data.sellPriceAbove) sellConditions.priceAbove = parseFloat(data.sellPriceAbove);
            if (data.sellPriceBelow) sellConditions.priceBelow = parseFloat(data.sellPriceBelow);

            // Remove individual price fields and add structured conditions
            delete data.buyPriceBelow;
            delete data.buyPriceAbove;
            delete data.sellPriceAbove;
            delete data.sellPriceBelow;

            data.buyConditions = buyConditions;
            data.sellConditions = sellConditions;

            try {
                const response = await fetch('/trader/strategies', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify(data)
                });

                const result = await response.json();
                if (result.success) {
                    alert('Strategy created!');
                    closeCreateStrategyModal();
                    location.reload();
                }
            } catch (error) {
                alert('Error: ' + error.message);
            }
        });

        document.getElementById('editStrategyForm').addEventListener('submit', async (e) => {
            e.preventDefault();
            const formData = new FormData(e.target);
            const data = Object.fromEntries(formData);
            const id = document.getElementById('editStrategyId').value;

            // Build buy conditions object
            const buyConditions = {};
            if (data.buyPriceBelow) buyConditions.priceBelow = parseFloat(data.buyPriceBelow);
            if (data.buyPriceAbove) buyConditions.priceAbove = parseFloat(data.buyPriceAbove);

            // Build sell conditions object
            const sellConditions = {};
            if (data.sellPriceAbove) sellConditions.priceAbove = parseFloat(data.sellPriceAbove);
            if (data.sellPriceBelow) sellConditions.priceBelow = parseFloat(data.sellPriceBelow);

            // Remove individual price fields and add structured conditions
            delete data.buyPriceBelow;
            delete data.buyPriceAbove;
            delete data.sellPriceAbove;
            delete data.sellPriceBelow;

            data.buyConditions = buyConditions;
            data.sellConditions = sellConditions;

            try {
                const response = await fetch(`/trader/strategies/${id}`, {
                    method: 'PUT',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify(data)
                });

                const result = await response.json();
                if (result.success) {
                    alert('Strategy updated!');
                    closeEditStrategyModal();
                    location.reload();
                }
            } catch (error) {
                alert('Error: ' + error.message);
            }
        });

        async function deleteStrategy(id) {
            if (!confirm('Delete this strategy?')) return;

            try {
                const response = await fetch(`/trader/strategies/${id}`, { method: 'DELETE' });
                const result = await response.json();
                if (result.success) {
                    alert('Strategy deleted!');
                    location.reload();
                }
            } catch (error) {
                alert('Error: ' + error.message);
            }
        }

        async function startStrategyMonitor(id) {
            try {
                const response = await fetch(`/trader/strategies/${id}/start-monitor`, { method: 'POST' });
                const result = await response.json();
                if (result.success) {
                    alert('Strategy monitor started!');
                    location.reload();
                } else {
                    alert('Error: ' + (result.error || 'Failed to start monitor'));
                }
            } catch (error) {
                alert('Error: ' + error.message);
            }
        }

        async function stopStrategyMonitor(id) {
            if (!confirm('Stop strategy monitor?')) return;

            try {
                const response = await fetch(`/trader/strategies/${id}/stop-monitor`, { method: 'POST' });
                const result = await response.json();
                if (result.success) {
                    alert('Strategy monitor stopped!');
                    location.reload();
                } else {
                    alert('Error: ' + (result.error || 'Failed to stop monitor'));
                }
            } catch (error) {
                alert('Error: ' + error.message);
            }
        }

        // Close modals on outside click
        document.getElementById('createStrategyModal').addEventListener('click', (e) => {
            if (e.target.id === 'createStrategyModal') closeCreateStrategyModal();
        });

        document.getElementById('editStrategyModal').addEventListener('click', (e) => {
            if (e.target.id === 'editStrategyModal') closeEditStrategyModal();
        });

        // Initialize
        updateTicker();
        updatePortfolio();
        updateBalances();

        // Update every 30 seconds
        setInterval(updateTicker, 30000);
        setInterval(updatePortfolio, 30000);
        setInterval(updateBalances, 60000);
    </script>
    <%-include('../mainContent/adminNav.ejs')%>
</body>
</html>
