<!DOCTYPE html>
<html>
  <head>
    <title>madLadsLab in 3D!!</title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no">

    <meta property="og:title" content="madLadsLab.com" />

<meta property="og:description" content="Web Applications, Video, Email, IT" />
<meta property="og:image" content="https://madladslab.com/images/madTitle.jpg" />
<meta property="og:url" content="https://madladslab.com" />
<meta property="og:type" content="website" />
   <style>
      body {
        margin: 0;
        overflow: hidden;
        /* Cosmic space gradient background */
        background: linear-gradient(
          135deg,
          #0a0015 0%,      /* Deep space purple-black */
          #1a0033 15%,     /* Dark purple */
          #2d1b4e 30%,     /* Purple-blue */
          #1c2951 45%,     /* Deep blue */
          #0f4c75 60%,     /* Ocean blue */
          #3282b8 75%,     /* Light blue */
          #1c2951 85%,     /* Back to deep blue */
          #0a0015 100%     /* Back to deep space */
        );
        background-size: 400% 400%;
        animation: cosmicGradient 30s ease infinite;
      }

      @keyframes cosmicGradient {
        0% {
          background-position: 0% 50%;
        }
        50% {
          background-position: 100% 50%;
        }
        100% {
          background-position: 0% 50%;
        }
      }
    </style>
    

    <script src="https://cdnjs.cloudflare.com/ajax/libs/three.js/r128/three.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/three@0.128.0/examples/js/loaders/GLTFLoader.js"></script>
    
   
  </head>
  <body>
    <h1 style="display: none;"><%= title %></h1> <!-- Hidden for a clean background -->
    <p style="display: none;">Welcome to <%= title %></p> <!-- Hidden as well -->

<%-include('controls/sceneControls.ejs')%>
<%-include('three/firstScene.ejs')%>

  </body>
</html>
