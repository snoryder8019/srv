{
  "watch": [
    "api/",
    "routes/",
    "services/",
    "middlewares/",
    "plugins/",
    "config/",
    "app.js",
    "bin/"
  ],
  "ignore": [
    "node_modules/",
    "public/",
    "views/",
    "docs/",
    "zMDREADME/",
    "scripts/",
    "archive/",
    "*.md",
    "*.log",
    "*.txt",
    "*.json",
    "!package.json",
    "!nodemon.json",
    ".git/",
    "temp/",
    "tmp/",
    "uploads/",
    "session-notes/"
  ],
  "ext": "js,mjs",
  "delay": 1000,
  "verbose": false,
  "env": {
    "NODE_ENV": "development"
  }
}
