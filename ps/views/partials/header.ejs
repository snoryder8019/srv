<header>
  <nav class="navbar">
    <div class="nav-brand">
      <a href="/">Project Stringborne</a>
      <!-- Loading Indicator -->
      <div class="universe-loading-indicator" id="universeLoadingIndicator" style="display: none;">
        <div class="loading-spinner"></div>
        <span class="loading-text">Loading...</span>
      </div>
    </div>

    <button class="mobile-menu-toggle" onclick="toggleMobileMenu()" aria-label="Toggle menu">
      <span></span>
      <span></span>
      <span></span>
    </button>

    <ul class="nav-links" id="navLinks">
      <% if (user) { %>
        <% if (typeof character !== 'undefined' && character) { %>
          <li class="active-character character-dropdown" data-character-id="<%= character._id %>">
            <button class="character-link" onclick="toggleCharacterMenu(event)" title="Character Menu">
              <span class="character-icon">‚öîÔ∏è</span>
              <div class="character-details">
                <span class="character-label">Player:</span>
                <span class="character-name"><%= character.name %></span>
                <span class="character-level">Lvl <%= character.level %></span>
                <% if (character.locationAsset) { %>
                  <span class="character-location">@ <%= character.locationAsset.title %></span>
                <% } %>
              </div>
              <span class="character-dropdown-arrow">‚ñº</span>
            </button>
            <div class="character-menu-dropdown" id="characterMenuDropdown">
              <a href="#" onclick="event.preventDefault(); window.openPWAModal && window.openPWAModal('charactersModal');" class="character-dropdown-item">üìä Character Sheet</a>
              <a href="#" onclick="openInventory(event)" class="character-dropdown-item">üéí Inventory</a>
              <hr class="character-dropdown-divider">
              <a href="/universe/sprite-creator" class="character-dropdown-item">üåç World Sprites</a>
              <a href="#" onclick="event.preventDefault(); window.openPWAModal && window.openPWAModal('charactersModal');" class="character-dropdown-item">üîÑ Switch Character</a>
            </div>
          </li>
        <% } else { %>
          <li><a href="#" onclick="event.preventDefault(); window.toggleOverlayMenu && window.toggleOverlayMenu();" class="btn btn-game">Characters</a></li>
        <% } %>
        <li><a href="#" onclick="event.preventDefault(); window.toggleOverlayMenu && window.toggleOverlayMenu();" class="btn btn-game">Menu</a></li>
        <li class="user-dropdown">
          <button class="user-button" onclick="toggleUserMenu()">
            <span class="user-icon">‚öôÔ∏è</span>
            <span class="user-name">@<%= user.username %></span>
            <span class="dropdown-arrow">‚ñº</span>
          </button>
          <div class="user-menu-dropdown" id="userMenuDropdown">
            <a href="#" onclick="event.preventDefault(); window.openPWAModal && window.openPWAModal('profileModal');" class="dropdown-item">üë§ Profile</a>
            <a href="/settings" class="dropdown-item">‚öôÔ∏è Settings</a>
            <hr class="dropdown-divider">
            <button onclick="logout()" class="dropdown-item logout-btn">üö™ Logout</button>
          </div>
        </li>
      <% } else { %>
        <li><a href="/auth" class="btn btn-game">Login</a></li>
      <% } %>
    </ul>
  </nav>

  <style>
    /* Game-style navigation */
    .nav-links {
      display: flex;
      list-style: none;
      gap: 0.5rem;
      align-items: center;
    }

    /* Game button style */
    .btn-game {
      background: rgba(0, 255, 159, 0.1);
      border: 1px solid rgba(0, 255, 159, 0.3);
      color: #00ff9f;
      padding: 0.25rem 0.6rem;
      border-radius: 3px;
      font-size: 0.7rem;
      font-weight: 500;
      transition: all 0.2s;
      text-transform: uppercase;
      letter-spacing: 0.3px;
    }

    .btn-game:hover {
      background: rgba(0, 255, 159, 0.2);
      border-color: #00ff9f;
      box-shadow: 0 0 10px rgba(0, 255, 159, 0.3);
    }

    .btn-admin {
      background: rgba(0, 255, 159, 0.2);
      border-color: #00ff9f;
    }

    /* Active character display */
    .active-character {
      margin-right: 0.5rem;
    }

    .character-dropdown {
      position: relative;
    }

    .character-link {
      display: flex;
      align-items: center;
      gap: 0.25rem;
      background: rgba(0, 255, 159, 0.1);
      border: 1px solid rgba(0, 255, 159, 0.3);
      padding: 0.1rem 0.3rem;
      border-radius: 3px;
      transition: all 0.2s;
      text-decoration: none;
      line-height: 0.9;
      height: 22px;
      cursor: pointer;
      color: inherit;
      font-family: inherit;
    }

    .character-link:hover {
      background: rgba(0, 255, 159, 0.15);
      border-color: #00ff9f;
    }

    .character-link.active {
      background: rgba(0, 255, 159, 0.2);
      border-color: #00ff9f;
    }

    .character-dropdown-arrow {
      font-size: 0.5rem;
      color: #666;
      transition: transform 0.2s;
      margin-left: 0.2rem;
    }

    .character-link.active .character-dropdown-arrow {
      transform: rotate(180deg);
    }

    .character-icon {
      font-size: 0.8rem;
      line-height: 0.9;
    }

    .character-details {
      display: flex;
      align-items: center;
      gap: 0.25rem;
      line-height: 0.9;
      margin: 0;
      padding: 0;
    }

    .character-label {
      color: #666;
      font-size: 0.6rem;
      font-weight: 400;
      line-height: 0.9;
    }

    .character-name {
      color: #00ff9f;
      font-weight: 600;
      font-size: 0.7rem;
      line-height: 0.9;
    }

    .character-level {
      color: #666;
      font-size: 0.6rem;
      line-height: 0.9;
    }

    .character-location {
      color: #888;
      font-size: 0.55rem;
      font-family: 'Courier New', monospace;
      line-height: 0.9;
    }

    /* Character dropdown menu */
    .character-menu-dropdown {
      position: absolute;
      top: calc(100% + 0.5rem);
      left: 0;
      background: rgba(10, 10, 26, 0.98);
      border: 1px solid rgba(0, 255, 159, 0.3);
      border-radius: 4px;
      min-width: 200px;
      display: none;
      flex-direction: column;
      box-shadow: 0 4px 20px rgba(0, 0, 0, 0.5);
      z-index: 1000;
      backdrop-filter: blur(10px);
    }

    .character-menu-dropdown.active {
      display: flex;
    }

    .character-dropdown-item {
      padding: 0.6rem 1rem;
      color: #e0e0e0;
      text-decoration: none;
      font-size: 0.85rem;
      transition: all 0.2s;
      display: flex;
      align-items: center;
      gap: 0.5rem;
      border: none;
      background: transparent;
      text-align: left;
      cursor: pointer;
    }

    .character-dropdown-item:hover {
      background: rgba(0, 255, 159, 0.1);
      color: #00ff9f;
    }

    .character-dropdown-divider {
      border: none;
      border-top: 1px solid rgba(0, 255, 159, 0.2);
      margin: 0.3rem 0;
    }

    /* User dropdown */
    .user-dropdown {
      position: relative;
    }

    .user-button {
      display: flex;
      align-items: center;
      gap: 0.3rem;
      background: rgba(0, 255, 159, 0.05);
      border: 1px solid rgba(0, 255, 159, 0.2);
      color: #00ff9f;
      padding: 0.25rem 0.5rem;
      border-radius: 3px;
      font-size: 0.7rem;
      cursor: pointer;
      transition: all 0.2s;
    }

    .user-button:hover {
      background: rgba(0, 255, 159, 0.1);
      border-color: rgba(0, 255, 159, 0.4);
    }

    .user-icon {
      font-size: 0.85rem;
    }

    .dropdown-arrow {
      font-size: 0.5rem;
      transition: transform 0.2s;
    }

    .user-button.active .dropdown-arrow {
      transform: rotate(180deg);
    }

    .user-menu-dropdown {
      position: absolute;
      top: calc(100% + 0.5rem);
      right: 0;
      background: rgba(10, 10, 26, 0.98);
      border: 1px solid rgba(0, 255, 159, 0.3);
      border-radius: 4px;
      min-width: 180px;
      display: none;
      flex-direction: column;
      box-shadow: 0 4px 20px rgba(0, 0, 0, 0.5);
      z-index: 1000;
      backdrop-filter: blur(10px);
    }

    .user-menu-dropdown.active {
      display: flex;
    }

    .dropdown-item {
      padding: 0.6rem 1rem;
      color: #e0e0e0;
      text-decoration: none;
      font-size: 0.85rem;
      transition: all 0.2s;
      border: none;
      background: transparent;
      text-align: left;
      cursor: pointer;
      display: flex;
      align-items: center;
      gap: 0.5rem;
    }

    .dropdown-item:hover {
      background: rgba(0, 255, 159, 0.1);
      color: #00ff9f;
    }

    .dropdown-divider {
      border: none;
      border-top: 1px solid rgba(0, 255, 159, 0.2);
      margin: 0.3rem 0;
    }

    .logout-btn {
      color: #ff6b6b;
    }

    .logout-btn:hover {
      background: rgba(255, 107, 107, 0.1);
      color: #ff8080;
    }

    /* Mobile menu toggle button */
    .mobile-menu-toggle {
      display: none;
      flex-direction: column;
      gap: 4px;
      background: none;
      border: none;
      cursor: pointer;
      padding: 8px;
      z-index: 1001;
    }

    .mobile-menu-toggle span {
      width: 25px;
      height: 3px;
      background: #00ff9f;
      transition: all 0.3s;
      border-radius: 2px;
    }

    .mobile-menu-toggle.active span:nth-child(1) {
      transform: rotate(45deg) translate(5px, 5px);
    }

    .mobile-menu-toggle.active span:nth-child(2) {
      opacity: 0;
    }

    .mobile-menu-toggle.active span:nth-child(3) {
      transform: rotate(-45deg) translate(7px, -6px);
    }

    /* Mobile responsive styles */
    @media (max-width: 768px) {
      .navbar {
        padding: 1rem;
        position: relative;
      }

      .mobile-menu-toggle {
        display: flex;
        z-index: 1001;
      }

      .nav-links {
        position: fixed;
        top: 0;
        left: 0;
        right: 0;
        background: rgba(10, 10, 26, 0.98);
        backdrop-filter: blur(10px);
        flex-direction: column;
        gap: 0;
        padding-top: 70px;
        max-height: 0;
        overflow: hidden;
        transition: max-height 0.3s ease;
        border-bottom: 1px solid rgba(0, 255, 159, 0.2);
        z-index: 1000;
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.5);
      }

      .nav-links.active {
        max-height: 100vh;
        overflow-y: auto;
      }

      .nav-links li {
        width: 100%;
        padding: 0.5rem 1rem;
        border-bottom: 1px solid rgba(255, 255, 255, 0.05);
      }

      .nav-links li:last-child {
        border-bottom: none;
      }

      .nav-links a,
      .nav-links .btn {
        width: 100%;
        text-align: center;
        display: block;
      }

      .character-info {
        display: flex;
        justify-content: space-between;
        padding: 1rem;
        background: rgba(0, 255, 159, 0.05);
      }

      .user-menu {
        display: flex;
        flex-direction: column;
        gap: 0.5rem;
        padding: 1rem !important;
      }

      .user-name {
        color: #00ff9f;
        font-weight: bold;
        text-align: center;
      }

      .nav-brand a {
        font-size: 1.2rem;
      }
    }

    @media (max-width: 480px) {
      .nav-brand a {
        font-size: 1rem;
      }

      .navbar {
        padding: 0.75rem;
      }

      .btn-small {
        padding: 0.4rem 0.8rem;
        font-size: 0.85rem;
      }
    }

    /* Ensure desktop navigation works */
    @media (min-width: 769px) {
      .mobile-menu-toggle {
        display: none !important;
      }

      .nav-links {
        position: static !important;
        display: flex !important;
        flex-direction: row !important;
        max-height: none !important;
        overflow: visible !important;
        background: transparent !important;
        padding: 0 !important;
        gap: 2rem !important;
      }

      .nav-links li {
        width: auto !important;
        padding: 0 !important;
        border-bottom: none !important;
      }

      .user-menu {
        flex-direction: row !important;
        gap: 1rem !important;
        align-items: center;
      }
    }

    /* Universe Loading Indicator */
    .universe-loading-indicator {
      display: inline-flex;
      align-items: center;
      gap: 8px;
      margin-left: 15px;
      padding: 4px 10px;
      background: rgba(0, 255, 159, 0.1);
      border: 1px solid rgba(0, 255, 159, 0.3);
      border-radius: 3px;
      font-size: 11px;
      color: #00ff9f;
    }

    .loading-spinner {
      width: 12px;
      height: 12px;
      border: 2px solid rgba(0, 255, 159, 0.2);
      border-top-color: #00ff9f;
      border-radius: 50%;
      animation: spin 0.8s linear infinite;
    }

    @keyframes spin {
      to { transform: rotate(360deg); }
    }

    .loading-text {
      font-family: 'Courier New', monospace;
      font-size: 10px;
      text-transform: uppercase;
      letter-spacing: 0.5px;
    }

    @media (max-width: 768px) {
      .universe-loading-indicator {
        margin-left: 8px;
        padding: 3px 6px;
        font-size: 9px;
      }

      .loading-spinner {
        width: 10px;
        height: 10px;
      }

      .loading-text {
        display: none;
      }
    }
  </style>

  <script>
    function toggleMobileMenu() {
      const navLinks = document.getElementById('navLinks');
      const toggle = document.querySelector('.mobile-menu-toggle');
      navLinks.classList.toggle('active');
      toggle.classList.toggle('active');
    }

    function toggleUserMenu() {
      const dropdown = document.getElementById('userMenuDropdown');
      const button = document.querySelector('.user-button');
      dropdown.classList.toggle('active');
      button.classList.toggle('active');
    }

    function openInventory(e) {
      e.preventDefault();
      // Close both dropdowns
      const userDropdown = document.getElementById('userMenuDropdown');
      const charDropdown = document.getElementById('characterMenuDropdown');
      if (userDropdown) userDropdown.classList.remove('active');
      if (charDropdown) charDropdown.classList.remove('active');

      // Get character ID from data attribute
      const characterDropdown = document.querySelector('.character-dropdown');
      const characterId = characterDropdown?.dataset.characterId;

      if (characterId && window.inventoryModal) {
        window.inventoryModal.open(characterId);
      } else {
        console.error('Character ID not found or inventory modal not initialized');
        alert('Failed to open inventory. Please refresh the page.');
      }
    }

    function toggleCharacterMenu(e) {
      e.preventDefault();
      e.stopPropagation();
      const dropdown = document.getElementById('characterMenuDropdown');
      const button = document.querySelector('.character-link');

      // Close user menu if open
      const userDropdown = document.getElementById('userMenuDropdown');
      const userButton = document.querySelector('.user-button');
      if (userDropdown) userDropdown.classList.remove('active');
      if (userButton) userButton.classList.remove('active');

      // Toggle character menu
      dropdown.classList.toggle('active');
      button.classList.toggle('active');
    }

    // Close dropdowns when clicking outside
    document.addEventListener('click', (e) => {
      // Close user dropdown
      const userDropdown = document.querySelector('.user-dropdown');
      if (userDropdown && !userDropdown.contains(e.target)) {
        const dropdown = document.getElementById('userMenuDropdown');
        const button = document.querySelector('.user-button');
        if (dropdown) dropdown.classList.remove('active');
        if (button) button.classList.remove('active');
      }

      // Close character dropdown
      const charDropdown = document.querySelector('.character-dropdown');
      if (charDropdown && !charDropdown.contains(e.target)) {
        const dropdown = document.getElementById('characterMenuDropdown');
        const button = document.querySelector('.character-link');
        if (dropdown) dropdown.classList.remove('active');
        if (button) button.classList.remove('active');
      }
    });

    // Close mobile menu when clicking a link
    document.addEventListener('DOMContentLoaded', () => {
      const links = document.querySelectorAll('.nav-links a');
      links.forEach(link => {
        link.addEventListener('click', () => {
          const navLinks = document.getElementById('navLinks');
          const toggle = document.querySelector('.mobile-menu-toggle');
          if (navLinks && navLinks.classList.contains('active')) {
            navLinks.classList.remove('active');
            if (toggle) toggle.classList.remove('active');
          }
        });
      });
    });

    // Universe loading indicator utilities
    window.showUniverseLoading = function() {
      const indicator = document.getElementById('universeLoadingIndicator');
      if (indicator) {
        indicator.style.display = 'inline-flex';
      }
    };

    window.hideUniverseLoading = function() {
      const indicator = document.getElementById('universeLoadingIndicator');
      if (indicator) {
        indicator.style.display = 'none';
      }
    };
  </script>
</header>
