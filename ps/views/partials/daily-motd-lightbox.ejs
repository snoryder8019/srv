<script>
  // MOTD Lightbox Management
  const MOTD_STORAGE_KEY = 'stringborn_motd_last_shown';
  const MOTD_24_HOURS = 24 * 60 * 60 * 1000; // 24 hours in milliseconds

  async function initMOTDLightbox() {
    try {
      // Check if we should show the lightbox
      const lastShown = localStorage.getItem(MOTD_STORAGE_KEY);
      const now = Date.now();

      if (lastShown && (now - parseInt(lastShown)) < MOTD_24_HOURS) {
        console.log('MOTD already shown today');
        return;
      }

      // Fetch current MOTD from API
      const response = await fetch('/api/v1/motd/current');
      const data = await response.json();

      if (!data.success || !data.motd) {
        console.log('No active MOTD found');
        return;
      }

      // Populate the lightbox with data
      const motd = data.motd;

      if (motd.welcomeMessage) {
        document.getElementById('motdWelcome').textContent = motd.welcomeMessage;
      }

      if (motd.message) {
        document.getElementById('motdMessage').textContent = motd.message;
      }

      if (motd.ctaText) {
        document.getElementById('motdCTAText').textContent = motd.ctaText;
      }

      if (motd.ctaLink) {
        document.getElementById('motdCTALink').href = motd.ctaLink;
      }

      if (motd.ctaLinkText) {
        document.getElementById('motdCTALinkText').textContent = motd.ctaLinkText;
      }

      // Show the lightbox
      document.getElementById('dailyMOTDLightbox').style.display = 'flex';

    } catch (error) {
      console.error('Error loading MOTD:', error);
    }
  }

  function closeMOTDLightbox() {
    const lightbox = document.getElementById('dailyMOTDLightbox');
    lightbox.style.display = 'none';
  }

  function dismissMOTDLightbox() {
    const dontShowCheckbox = document.getElementById('motdDontShowToday');

    if (dontShowCheckbox.checked) {
      // Mark as shown for 24 hours
      localStorage.setItem(MOTD_STORAGE_KEY, Date.now().toString());
    }

    closeMOTDLightbox();
  }

  // Initialize on page load
  if (document.readyState === 'loading') {
    document.addEventListener('DOMContentLoaded', initMOTDLightbox);
  } else {
    initMOTDLightbox();
  }
</script>
