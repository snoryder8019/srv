<!-- Cookie Consent Banner -->
<div id="cookieConsent" class="cookie-consent" style="display: none;">
  <div class="cookie-content">
    <div class="cookie-icon">üç™</div>
    <div class="cookie-text">
      <h3>We Use Cookies</h3>
      <p>
        We use cookies to enhance your browsing experience, remember your preferences, and analyze our traffic.
        By clicking "Accept", you consent to our use of cookies.
        <a href="#" onclick="toggleCookieDetails(event)" class="cookie-learn-more">Learn more</a>
      </p>
      <div id="cookieDetails" class="cookie-details" style="display: none;">
        <p><strong>Essential Cookies:</strong> Required for authentication and session management.</p>
        <p><strong>Analytics Cookies:</strong> Help us understand how you interact with our platform to improve your experience.</p>
      </div>
    </div>
    <div class="cookie-actions">
      <button onclick="acceptCookies()" class="btn-accept">Accept</button>
      <button onclick="declineCookies()" class="btn-decline">Decline</button>
    </div>
  </div>
</div>

<style>
  .cookie-consent {
    position: fixed;
    bottom: 0;
    left: 0;
    right: 0;
    background: linear-gradient(135deg, rgba(10, 10, 26, 0.98) 0%, rgba(20, 20, 40, 0.98) 100%);
    border-top: 2px solid rgba(0, 255, 159, 0.3);
    padding: 1.5rem;
    z-index: 9999;
    box-shadow: 0 -4px 30px rgba(0, 0, 0, 0.5);
    backdrop-filter: blur(10px);
    animation: slideUp 0.4s ease-out;
  }

  @keyframes slideUp {
    from {
      transform: translateY(100%);
      opacity: 0;
    }
    to {
      transform: translateY(0);
      opacity: 1;
    }
  }

  .cookie-content {
    max-width: 1200px;
    margin: 0 auto;
    display: flex;
    align-items: center;
    gap: 1.5rem;
  }

  .cookie-icon {
    font-size: 2.5rem;
    flex-shrink: 0;
  }

  .cookie-text {
    flex: 1;
  }

  .cookie-text h3 {
    color: #00ff9f;
    font-size: 1.1rem;
    margin: 0 0 0.5rem 0;
    font-weight: 600;
  }

  .cookie-text p {
    color: #e0e0e0;
    margin: 0;
    font-size: 0.9rem;
    line-height: 1.5;
  }

  .cookie-learn-more {
    color: #00ff9f;
    text-decoration: underline;
    cursor: pointer;
    transition: color 0.2s;
  }

  .cookie-learn-more:hover {
    color: #00d080;
  }

  .cookie-details {
    margin-top: 1rem;
    padding: 1rem;
    background: rgba(0, 0, 0, 0.3);
    border-left: 3px solid rgba(0, 255, 159, 0.5);
    border-radius: 4px;
  }

  .cookie-details p {
    margin: 0.5rem 0;
    font-size: 0.85rem;
    color: #ccc;
  }

  .cookie-details strong {
    color: #00ff9f;
  }

  .cookie-actions {
    display: flex;
    gap: 0.75rem;
    flex-shrink: 0;
  }

  .cookie-actions button {
    padding: 0.75rem 1.5rem;
    border: none;
    border-radius: 4px;
    font-weight: 600;
    cursor: pointer;
    transition: all 0.3s;
    font-size: 0.9rem;
    white-space: nowrap;
  }

  .btn-accept {
    background: linear-gradient(135deg, rgba(0, 255, 159, 0.3), rgba(138, 79, 255, 0.3));
    color: #00ff9f;
    border: 1px solid rgba(0, 255, 159, 0.4);
  }

  .btn-accept:hover {
    background: linear-gradient(135deg, rgba(0, 255, 159, 0.4), rgba(138, 79, 255, 0.4));
    box-shadow: 0 0 20px rgba(0, 255, 159, 0.3);
    transform: translateY(-2px);
  }

  .btn-decline {
    background: rgba(128, 128, 128, 0.2);
    color: #888;
    border: 1px solid rgba(128, 128, 128, 0.4);
  }

  .btn-decline:hover {
    background: rgba(128, 128, 128, 0.3);
    color: #aaa;
  }

  /* Mobile responsive */
  @media (max-width: 768px) {
    .cookie-content {
      flex-direction: column;
      gap: 1rem;
      text-align: center;
    }

    .cookie-actions {
      width: 100%;
      flex-direction: column;
    }

    .cookie-actions button {
      width: 100%;
    }

    .cookie-icon {
      font-size: 2rem;
    }

    .cookie-text h3 {
      font-size: 1rem;
    }

    .cookie-text p {
      font-size: 0.85rem;
    }
  }
</style>

<script>
  // Cookie Consent Management
  const COOKIE_CONSENT_KEY = 'stringborn_cookie_consent';

  function checkCookieConsent() {
    const consent = localStorage.getItem(COOKIE_CONSENT_KEY);

    if (!consent) {
      // Show cookie banner after a brief delay to not interfere with page load
      setTimeout(() => {
        document.getElementById('cookieConsent').style.display = 'block';
      }, 1000);
    }
  }

  function acceptCookies() {
    localStorage.setItem(COOKIE_CONSENT_KEY, JSON.stringify({
      accepted: true,
      timestamp: Date.now()
    }));

    // Hide the banner with animation
    const banner = document.getElementById('cookieConsent');
    banner.style.animation = 'slideDown 0.3s ease-out';
    setTimeout(() => {
      banner.style.display = 'none';
    }, 300);

    // Track acceptance if analytics is available
    if (window.trackAction) {
      window.trackAction('cookie_consent', { accepted: true });
    }
  }

  function declineCookies() {
    localStorage.setItem(COOKIE_CONSENT_KEY, JSON.stringify({
      accepted: false,
      timestamp: Date.now()
    }));

    // Hide the banner with animation
    const banner = document.getElementById('cookieConsent');
    banner.style.animation = 'slideDown 0.3s ease-out';
    setTimeout(() => {
      banner.style.display = 'none';
    }, 300);

    // Track decline if analytics is available
    if (window.trackAction) {
      window.trackAction('cookie_consent', { accepted: false });
    }
  }

  function toggleCookieDetails(e) {
    e.preventDefault();
    const details = document.getElementById('cookieDetails');
    if (details.style.display === 'none') {
      details.style.display = 'block';
    } else {
      details.style.display = 'none';
    }
  }

  // Add slide down animation for hiding
  const style = document.createElement('style');
  style.textContent = `
    @keyframes slideDown {
      from {
        transform: translateY(0);
        opacity: 1;
      }
      to {
        transform: translateY(100%);
        opacity: 0;
      }
    }
  `;
  document.head.appendChild(style);

  // Check consent status on page load
  if (document.readyState === 'loading') {
    document.addEventListener('DOMContentLoaded', checkCookieConsent);
  } else {
    checkCookieConsent();
  }
</script>
