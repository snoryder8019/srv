<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= title %></title>
  <link rel="stylesheet" href="/stylesheets/style.css">
  <style>
    .monitor-container {
      max-width: 1400px;
      margin: 2rem auto;
      padding: 2rem;
    }

    .monitor-header {
      margin-bottom: 2rem;
    }

    .monitor-header h1 {
      font-size: 2rem;
      margin-bottom: 0.5rem;
      color: #333;
    }

    .monitor-header p {
      color: #666;
    }

    .stats-overview {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
      gap: 1.5rem;
      margin-bottom: 2rem;
    }

    .stat-card {
      background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
      color: white;
      padding: 2rem;
      border-radius: 12px;
      box-shadow: 0 4px 12px rgba(102, 126, 234, 0.3);
    }

    .stat-card h3 {
      font-size: 0.875rem;
      text-transform: uppercase;
      letter-spacing: 0.5px;
      margin: 0 0 1rem 0;
      opacity: 0.9;
    }

    .stat-value {
      font-size: 3rem;
      font-weight: 700;
      margin: 0;
    }

    .monitor-section {
      background: white;
      padding: 2rem;
      border-radius: 12px;
      box-shadow: 0 2px 8px rgba(0,0,0,0.1);
      margin-bottom: 2rem;
    }

    .monitor-section h2 {
      margin-top: 0;
      margin-bottom: 1.5rem;
      color: #333;
      border-bottom: 3px solid #667eea;
      padding-bottom: 0.5rem;
    }

    .control-grid {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
      gap: 1.5rem;
    }

    .control-card {
      background: #f8f9fa;
      padding: 1.5rem;
      border-radius: 8px;
      border-left: 4px solid #667eea;
    }

    .control-card h3 {
      margin: 0 0 1rem 0;
      font-size: 1.1rem;
      color: #333;
    }

    .control-card p {
      color: #666;
      font-size: 0.875rem;
      margin-bottom: 1rem;
    }

    .btn {
      display: inline-block;
      padding: 0.75rem 1.5rem;
      border-radius: 6px;
      text-decoration: none;
      font-weight: 600;
      transition: all 0.3s;
      border: none;
      cursor: pointer;
      font-size: 0.875rem;
    }

    .btn-primary {
      background: #667eea;
      color: white;
    }

    .btn-primary:hover {
      background: #5568d3;
    }

    .btn-secondary {
      background: #6c757d;
      color: white;
    }

    .btn-secondary:hover {
      background: #5a6268;
    }

    .btn-danger {
      background: #dc3545;
      color: white;
    }

    .btn-danger:hover {
      background: #c82333;
    }

    .btn-success {
      background: #28a745;
      color: white;
    }

    .btn-success:hover {
      background: #218838;
    }

    .action-buttons {
      display: flex;
      gap: 1rem;
      flex-wrap: wrap;
    }

    .systems-list {
      margin-top: 1.5rem;
    }

    .system-item {
      background: white;
      padding: 1rem;
      border-radius: 8px;
      margin-bottom: 1rem;
      border: 1px solid #e0e0e0;
      display: flex;
      justify-content: space-between;
      align-items: center;
    }

    .system-info h4 {
      margin: 0 0 0.5rem 0;
      font-size: 1rem;
      color: #333;
    }

    .system-info p {
      margin: 0;
      font-size: 0.875rem;
      color: #666;
    }

    .system-actions {
      display: flex;
      gap: 0.5rem;
    }

    .loading {
      text-align: center;
      color: #666;
      padding: 2rem;
    }

    .alert {
      padding: 1rem 1.5rem;
      border-radius: 6px;
      margin-bottom: 1rem;
    }

    .alert-success {
      background: #d4edda;
      color: #155724;
      border: 1px solid #c3e6cb;
    }

    .alert-error {
      background: #f8d7da;
      color: #721c24;
      border: 1px solid #f5c6cb;
    }

    .alert-info {
      background: #d1ecf1;
      color: #0c5460;
      border: 1px solid #bee5eb;
    }
  </style>
</head>
<body>
  <%- include('../partials/header', { user: user }) %>

  <div class="monitor-container">
    <div class="monitor-header">
      <h1>üõ∞Ô∏è Orbital Systems Monitor</h1>
      <p>Admin controls for managing orbital bodies, planets, and zones</p>
    </div>

    <!-- Stats Overview -->
    <div class="stats-overview">
      <div class="stat-card">
        <h3>Orbital Bodies</h3>
        <p class="stat-value"><%= stats.orbitals %></p>
      </div>
      <div class="stat-card" style="background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);">
        <h3>Planets</h3>
        <p class="stat-value"><%= stats.planets %></p>
      </div>
      <div class="stat-card" style="background: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%);">
        <h3>Zones</h3>
        <p class="stat-value"><%= stats.zones %></p>
      </div>
    </div>

    <!-- Quick Actions -->
    <div class="monitor-section">
      <h2>Quick Actions</h2>
      <div class="control-grid">
        <div class="control-card">
          <h3>üåç Generate Planets</h3>
          <p>Create new planets for existing orbital bodies</p>
          <div class="action-buttons">
            <button class="btn btn-primary" onclick="generatePlanets()">Generate Planets</button>
            <a href="/admin/generate" class="btn btn-secondary">Asset Builder</a>
          </div>
        </div>

        <div class="control-card">
          <h3>üó∫Ô∏è Create Zones</h3>
          <p>Add new discoverable zones to the universe</p>
          <div class="action-buttons">
            <button class="btn btn-primary" onclick="createZone()">New Zone</button>
            <a href="/zones" class="btn btn-secondary">View Zones</a>
          </div>
        </div>

        <div class="control-card">
          <h3>üìä View Systems</h3>
          <p>Monitor all orbital systems and their status</p>
          <div class="action-buttons">
            <button class="btn btn-primary" onclick="loadSystems()">Load Systems</button>
            <a href="/universe/galactic-state" class="btn btn-secondary">Galactic State</a>
          </div>
        </div>

        <div class="control-card">
          <h3>üóëÔ∏è Maintenance</h3>
          <p>Clean up orphaned data and reset systems</p>
          <div class="action-buttons">
            <button class="btn btn-danger" onclick="cleanupOrphans()">Cleanup</button>
            <button class="btn btn-secondary" onclick="verifyIntegrity()">Verify</button>
          </div>
        </div>
      </div>
    </div>

    <!-- Systems List -->
    <div class="monitor-section">
      <h2>Orbital Systems</h2>
      <div id="alertContainer"></div>
      <div id="systemsList" class="systems-list">
        <div class="loading">Click "Load Systems" to view all orbital systems...</div>
      </div>
    </div>
  </div>

  <%- include('../partials/footer') %>

  <script>
    // Load orbital systems
    async function loadSystems() {
      const container = document.getElementById('systemsList');
      const alertContainer = document.getElementById('alertContainer');

      container.innerHTML = '<div class="loading">Loading orbital systems...</div>';
      alertContainer.innerHTML = '';

      try {
        const response = await fetch('/api/v1/assets/approved/list?limit=100');
        const data = await response.json();

        if (!data.success) {
          throw new Error('Failed to load systems');
        }

        const orbitals = data.assets.filter(a => a.assetType === 'orbital');
        const planets = data.assets.filter(a => a.assetType === 'planet');

        if (orbitals.length === 0) {
          container.innerHTML = '<div class="loading">No orbital systems found</div>';
          return;
        }

        container.innerHTML = orbitals.map(orbital => {
          const orbitalPlanets = planets.filter(p => p.orbitalId === orbital._id);

          return `
            <div class="system-item">
              <div class="system-info">
                <h4>üõ∞Ô∏è ${orbital.title}</h4>
                <p>${orbital.description || 'No description'}</p>
                <p><strong>Planets:</strong> ${orbitalPlanets.length} | <strong>Votes:</strong> ${orbital.votes || 0} | <strong>Position:</strong> ${orbital.initialPosition ? `(${orbital.initialPosition.x}, ${orbital.initialPosition.y})` : 'Unknown'}</p>
              </div>
              <div class="system-actions">
                <a href="/universe/galactic-map?focus=${orbital._id}" class="btn btn-primary">View on Map</a>
              </div>
            </div>
          `;
        }).join('');

        alertContainer.innerHTML = '<div class="alert alert-success">Successfully loaded ' + orbitals.length + ' orbital systems</div>';

      } catch (error) {
        console.error('Error loading systems:', error);
        container.innerHTML = '<div class="loading">Error loading systems. Check console for details.</div>';
        alertContainer.innerHTML = '<div class="alert alert-error">Failed to load orbital systems: ' + error.message + '</div>';
      }
    }

    // Generate new planets
    async function generatePlanets() {
      const alertContainer = document.getElementById('alertContainer');

      if (!confirm('This will generate new planets for orbital bodies that have fewer than 3 planets. Continue?')) {
        return;
      }

      alertContainer.innerHTML = '<div class="alert alert-info">Generating planets...</div>';

      // In a real implementation, you would call a backend endpoint here
      alertContainer.innerHTML = '<div class="alert alert-info">Planet generation feature coming soon. Use the scripts folder for now.</div>';

      setTimeout(() => {
        alertContainer.innerHTML = '';
      }, 5000);
    }

    // Create new zone
    function createZone() {
      const alertContainer = document.getElementById('alertContainer');
      alertContainer.innerHTML = '<div class="alert alert-info">Zone creation UI coming soon. Use the scripts folder for now.</div>';

      setTimeout(() => {
        alertContainer.innerHTML = '';
      }, 5000);
    }

    // Cleanup orphaned data
    async function cleanupOrphans() {
      const alertContainer = document.getElementById('alertContainer');

      if (!confirm('This will remove planets without valid orbital references and zones without valid assets. Continue?')) {
        return;
      }

      alertContainer.innerHTML = '<div class="alert alert-info">Cleanup feature coming soon.</div>';

      setTimeout(() => {
        alertContainer.innerHTML = '';
      }, 5000);
    }

    // Verify data integrity
    async function verifyIntegrity() {
      const alertContainer = document.getElementById('alertContainer');

      alertContainer.innerHTML = '<div class="alert alert-info">Verifying data integrity...</div>';

      try {
        const response = await fetch('/api/v1/assets/approved/list?limit=100');
        const data = await response.json();

        const orbitals = data.assets.filter(a => a.assetType === 'orbital');
        const planets = data.assets.filter(a => a.assetType === 'planet');

        let orphanedPlanets = 0;
        planets.forEach(planet => {
          if (!planet.orbitalId || !orbitals.find(o => o._id === planet.orbitalId)) {
            orphanedPlanets++;
          }
        });

        const report = `
          <div class="alert alert-success">
            <strong>Integrity Check Complete</strong><br>
            Orbitals: ${orbitals.length}<br>
            Planets: ${planets.length}<br>
            Orphaned Planets: ${orphanedPlanets}
          </div>
        `;

        alertContainer.innerHTML = report;

      } catch (error) {
        alertContainer.innerHTML = '<div class="alert alert-error">Verification failed: ' + error.message + '</div>';
      }
    }
  </script>
</body>
</html>
