<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= title %></title>
  <link rel="stylesheet" href="/stylesheets/style.css">
  <style>
    .user-analytics-container {
      padding: 20px;
      max-width: 1400px;
      margin: 0 auto;
    }

    .page-header {
      margin-bottom: 30px;
    }

    .page-header h1 {
      margin: 0 0 10px 0;
      color: #00ff9f;
    }

    .back-link {
      color: #00ff9f;
      text-decoration: none;
      display: inline-block;
      margin-bottom: 20px;
    }

    .back-link:hover {
      text-decoration: underline;
    }

    .user-profile-card {
      background: rgba(0, 255, 159, 0.05);
      border: 1px solid #00ff9f;
      border-radius: 8px;
      padding: 30px;
      margin-bottom: 30px;
      display: flex;
      gap: 30px;
      align-items: center;
    }

    .user-avatar-large {
      width: 100px;
      height: 100px;
      border-radius: 50%;
      background: linear-gradient(135deg, #00ff9f, #00cc7f);
      display: flex;
      align-items: center;
      justify-content: center;
      font-size: 48px;
      font-weight: bold;
      color: #000;
    }

    .user-info-details h2 {
      margin: 0 0 10px 0;
      color: #00ff9f;
    }

    .user-info-details p {
      margin: 5px 0;
      color: rgba(255, 255, 255, 0.7);
    }

    .stats-grid {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
      gap: 20px;
      margin-bottom: 30px;
    }

    .stat-card {
      background: rgba(0, 255, 159, 0.05);
      border: 1px solid #00ff9f;
      border-radius: 8px;
      padding: 20px;
      text-align: center;
    }

    .stat-card h3 {
      margin: 0 0 10px 0;
      color: #00ff9f;
      font-size: 14px;
      text-transform: uppercase;
    }

    .stat-value {
      font-size: 36px;
      font-weight: bold;
      color: #fff;
      margin: 0;
    }

    .section {
      background: rgba(0, 255, 159, 0.05);
      border: 1px solid #00ff9f;
      border-radius: 8px;
      padding: 30px;
      margin-bottom: 20px;
    }

    .section h2 {
      margin: 0 0 20px 0;
      color: #00ff9f;
    }

    .achievements-grid {
      display: grid;
      grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
      gap: 15px;
    }

    .achievement-card {
      background: rgba(0, 255, 159, 0.1);
      border: 2px solid #00ff9f;
      border-radius: 8px;
      padding: 20px;
      text-align: center;
    }

    .achievement-icon {
      font-size: 48px;
      margin-bottom: 10px;
    }

    .achievement-name {
      font-size: 16px;
      font-weight: bold;
      color: #00ff9f;
      margin: 0 0 5px 0;
    }

    .achievement-description {
      font-size: 14px;
      color: rgba(255, 255, 255, 0.7);
      margin: 0 0 10px 0;
    }

    .achievement-date {
      font-size: 12px;
      color: rgba(0, 255, 159, 0.6);
    }

    .actions-table {
      width: 100%;
      border-collapse: collapse;
    }

    .actions-table th {
      background: rgba(0, 255, 159, 0.2);
      padding: 12px;
      text-align: left;
      color: #00ff9f;
      font-weight: bold;
      border-bottom: 1px solid #00ff9f;
    }

    .actions-table td {
      padding: 12px;
      border-bottom: 1px solid rgba(0, 255, 159, 0.1);
      color: #fff;
    }

    .loading {
      text-align: center;
      padding: 40px;
      color: rgba(255, 255, 255, 0.6);
    }

    .badge {
      display: inline-block;
      padding: 4px 8px;
      border-radius: 4px;
      font-size: 12px;
      background: rgba(0, 255, 159, 0.2);
      color: #00ff9f;
      border: 1px solid #00ff9f;
    }
  </style>
</head>
<body>
  <%- include('../partials/header', { user: user }) %>

  <div class="user-analytics-container">
    <a href="/admin/users" class="back-link">‚Üê Back to Users</a>

    <div class="page-header">
      <h1>User Analytics</h1>
    </div>

    <div id="loading" class="loading">
      Loading user analytics...
    </div>

    <div id="content" style="display: none;">
      <!-- User Profile Card -->
      <div class="user-profile-card" id="userProfile">
        <!-- Will be populated by JavaScript -->
      </div>

      <!-- Stats Grid -->
      <div class="stats-grid" id="statsGrid">
        <!-- Will be populated by JavaScript -->
      </div>

      <!-- Achievements Section -->
      <div class="section">
        <h2>Achievements (<span id="achievementCount">0</span>)</h2>
        <div class="achievements-grid" id="achievementsGrid">
          <!-- Will be populated by JavaScript -->
        </div>
      </div>

      <!-- Action Breakdown -->
      <div class="section">
        <h2>Action Breakdown</h2>
        <div id="actionBreakdown">
          <!-- Will be populated by JavaScript -->
        </div>
      </div>

      <!-- Recent Actions -->
      <div class="section">
        <h2>Recent Actions (Last 50)</h2>
        <table class="actions-table" id="actionsTable">
          <thead>
            <tr>
              <th>Action Type</th>
              <th>Details</th>
              <th>Timestamp</th>
            </tr>
          </thead>
          <tbody id="actionsTableBody">
            <!-- Will be populated by JavaScript -->
          </tbody>
        </table>
      </div>
    </div>
  </div>

  <%- include('../partials/footer') %>

  <script>
    const userId = '<%= userId %>';

    const achievementIcons = {
      'first_asset': 'üé®',
      'asset_creator_5': '‚ú®',
      'asset_creator_10': 'üèÜ',
      'asset_creator_25': 'üëë',
      'first_submission': 'üì§',
      'prolific_contributor': 'üåü',
      'first_vote': 'üëç',
      'voter_25': 'üó≥Ô∏è',
      'voter_100': 'üèõÔ∏è',
      'first_suggestion': 'üí°',
      'suggestions_10': 'ü§ù',
      'first_character': 'üßô',
      'character_master': '‚öîÔ∏è',
      'explorer': 'üó∫Ô∏è',
      'galactic_tourist': 'üöÄ',
      'early_adopter': '‚≠ê'
    };

    async function loadUserAnalytics() {
      const loading = document.getElementById('loading');
      const content = document.getElementById('content');

      try {
        const response = await fetch(`/admin/api/analytics/user/${userId}`);
        const data = await response.json();

        if (!data.success) {
          throw new Error(data.error || 'Failed to load analytics');
        }

        renderAnalytics(data.analytics);

        loading.style.display = 'none';
        content.style.display = 'block';
      } catch (error) {
        console.error('Error loading analytics:', error);
        loading.textContent = 'Error: ' + error.message;
      }
    }

    function renderAnalytics(analytics) {
      const user = analytics.user;
      const stats = user.stats || {};
      const achievements = user.achievements || [];
      const recentActions = analytics.recentActions || [];
      const actionBreakdown = analytics.actionBreakdown || [];

      // Render user profile
      const userProfile = document.getElementById('userProfile');
      userProfile.innerHTML = `
        <div class="user-avatar-large">${user.username.charAt(0).toUpperCase()}</div>
        <div class="user-info-details">
          <h2>${user.username}</h2>
          <p><strong>Email:</strong> ${user.email || 'N/A'}</p>
          <p><strong>Joined:</strong> ${new Date(user.createdAt).toLocaleDateString()}</p>
          <p><strong>Last Active:</strong> ${user.lastActive ? new Date(user.lastActive).toLocaleDateString() : 'Never'}</p>
        </div>
      `;

      // Render stats
      const statsGrid = document.getElementById('statsGrid');
      statsGrid.innerHTML = `
        <div class="stat-card">
          <h3>Total Actions</h3>
          <p class="stat-value">${stats.totalActions || 0}</p>
        </div>
        <div class="stat-card">
          <h3>Assets Created</h3>
          <p class="stat-value">${stats.assetsCreated || 0}</p>
        </div>
        <div class="stat-card">
          <h3>Assets Submitted</h3>
          <p class="stat-value">${stats.assetsSubmitted || 0}</p>
        </div>
        <div class="stat-card">
          <h3>Votes Cast</h3>
          <p class="stat-value">${stats.votesCast || 0}</p>
        </div>
        <div class="stat-card">
          <h3>Suggestions Made</h3>
          <p class="stat-value">${stats.suggestionsMade || 0}</p>
        </div>
        <div class="stat-card">
          <h3>Page Views</h3>
          <p class="stat-value">${stats.pageViews || 0}</p>
        </div>
        <div class="stat-card">
          <h3>Logins</h3>
          <p class="stat-value">${stats.logins || 0}</p>
        </div>
        <div class="stat-card">
          <h3>Characters</h3>
          <p class="stat-value">${stats.charactersCreated || 0}</p>
        </div>
      `;

      // Render achievements
      document.getElementById('achievementCount').textContent = achievements.length;
      const achievementsGrid = document.getElementById('achievementsGrid');

      if (achievements.length === 0) {
        achievementsGrid.innerHTML = '<p style="color: rgba(255,255,255,0.5);">No achievements unlocked yet</p>';
      } else {
        achievementsGrid.innerHTML = achievements.map(achievement => `
          <div class="achievement-card">
            <div class="achievement-icon">${achievementIcons[achievement.id] || 'üèÖ'}</div>
            <h3 class="achievement-name">${achievement.name}</h3>
            <p class="achievement-description">${achievement.description}</p>
            <p class="achievement-date">Unlocked: ${new Date(achievement.unlockedAt).toLocaleDateString()}</p>
          </div>
        `).join('');
      }

      // Render action breakdown
      const actionBreakdownDiv = document.getElementById('actionBreakdown');
      if (actionBreakdown.length === 0) {
        actionBreakdownDiv.innerHTML = '<p style="color: rgba(255,255,255,0.5);">No actions recorded</p>';
      } else {
        actionBreakdownDiv.innerHTML = `
          <div style="display: grid; grid-template-columns: repeat(auto-fit, minmax(200px, 1fr)); gap: 15px;">
            ${actionBreakdown.map(action => `
              <div style="background: rgba(0,255,159,0.1); padding: 15px; border-radius: 4px; border: 1px solid rgba(0,255,159,0.3);">
                <strong style="color: #00ff9f;">${formatActionType(action._id)}</strong>
                <br>
                <span style="font-size: 24px; font-weight: bold;">${action.count}</span>
              </div>
            `).join('')}
          </div>
        `;
      }

      // Render recent actions
      const actionsTableBody = document.getElementById('actionsTableBody');
      if (recentActions.length === 0) {
        actionsTableBody.innerHTML = '<tr><td colspan="3" style="text-align: center; color: rgba(255,255,255,0.5);">No recent actions</td></tr>';
      } else {
        actionsTableBody.innerHTML = recentActions.map(action => `
          <tr>
            <td><span class="badge">${formatActionType(action.actionType)}</span></td>
            <td>${formatMetadata(action.metadata)}</td>
            <td>${new Date(action.timestamp).toLocaleString()}</td>
          </tr>
        `).join('');
      }
    }

    function formatActionType(type) {
      return type.split('_').map(word =>
        word.charAt(0).toUpperCase() + word.slice(1)
      ).join(' ');
    }

    function formatMetadata(metadata) {
      if (!metadata || Object.keys(metadata).length === 0) return '-';

      const important = ['page', 'assetType', 'assetId', 'zoneName', 'characterId'];
      const values = important
        .filter(key => metadata[key])
        .map(key => `${key}: ${metadata[key]}`)
        .slice(0, 2);

      return values.join(', ') || 'No details';
    }

    // Load analytics on page load
    loadUserAnalytics();
  </script>
</body>
</html>
