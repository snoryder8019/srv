<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= title %></title>
  <link rel="stylesheet" href="/stylesheets/style.css">
  <link rel="stylesheet" href="/stylesheets/asset-builder.css">
</head>
<body>
  <%- include('../partials/header', { user: user }) %>

  <div class="approval-container">
    <div class="approval-header">
      <h1>Asset Approvals</h1>
      <div class="approval-stats" id="statsContainer">
        <div class="stat-box">
          <div class="stat-value" id="pendingCount">0</div>
          <div class="stat-label">Pending</div>
        </div>
        <div class="stat-box">
          <div class="stat-value" id="approvedCount">0</div>
          <div class="stat-label">Approved</div>
        </div>
        <div class="stat-box">
          <div class="stat-value" id="rejectedCount">0</div>
          <div class="stat-label">Rejected</div>
        </div>
      </div>
    </div>

    <div id="alertContainer"></div>

    <div id="pendingAssets">
      <p>Loading pending assets...</p>
    </div>
  </div>

  <%- include('../partials/footer') %>

  <script src="/javascripts/admin-assets.js"></script>
</body>
</html>
