<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= title %></title>
  <link rel="stylesheet" href="/stylesheets/style.css">
  <link rel="stylesheet" href="/stylesheets/galactic-state.css">
</head>
<body>
  <%- include('../partials/header', { user: user }) %>

  <div class="galactic-container">
    <h1>Galactic State Monitor</h1>
    <p class="subtitle">Real-time universe state streaming from Game State Service</p>

    <div class="connection-status" id="connectionStatus">
      <span class="status-indicator"></span>
      <span class="status-text">Connecting...</span>
    </div>

    <!-- Galactic Overview -->
    <div class="state-section">
      <h2>Galactic Overview</h2>
      <div class="stat-grid" id="galacticStats">
        <div class="stat-card">
          <div class="stat-label">Year</div>
          <div class="stat-value" id="year">---</div>
        </div>
        <div class="stat-card">
          <div class="stat-label">Cycle</div>
          <div class="stat-value" id="cycle">---</div>
        </div>
        <div class="stat-card">
          <div class="stat-label">Season</div>
          <div class="stat-value" id="season">---</div>
        </div>
        <div class="stat-card">
          <div class="stat-label">Dominant Faction</div>
          <div class="stat-value" id="dominant">---</div>
        </div>
        <div class="stat-card">
          <div class="stat-label">Threat Level</div>
          <div class="stat-value" id="threat">---</div>
        </div>
        <div class="stat-card">
          <div class="stat-label">Economy</div>
          <div class="stat-value" id="economy">---</div>
        </div>
        <div class="stat-card">
          <div class="stat-label">Total Population</div>
          <div class="stat-value" id="population">---</div>
        </div>
        <div class="stat-card">
          <div class="stat-label">Active Conflicts</div>
          <div class="stat-value" id="conflicts">---</div>
        </div>
      </div>
    </div>

    <!-- Faction Power -->
    <div class="state-section">
      <h2>Faction Power</h2>
      <div class="faction-grid" id="factionGrid">
        <!-- Populated by JavaScript -->
      </div>
    </div>

    <!-- Resources -->
    <div class="state-section">
      <h2>Universal Resources</h2>
      <div class="resource-grid" id="resourceGrid">
        <!-- Populated by JavaScript -->
      </div>
    </div>

    <!-- Orbital Bodies & Planets -->
    <div class="state-section">
      <h2>Orbital Bodies & Planetary Systems</h2>
      <div class="orbital-systems" id="orbitalSystems">
        <!-- Populated by JavaScript -->
      </div>
    </div>

    <!-- Zone Explorer -->
    <div class="state-section">
      <h2>Discoverable Zones</h2>
      <div class="zones-summary" id="zonesSummary">
        <!-- Populated by JavaScript -->
      </div>
    </div>

    <!-- Events Feed -->
    <div class="state-section">
      <h2>Live Events Feed</h2>
      <div class="events-feed" id="eventsFeed">
        <p class="no-events">Waiting for events...</p>
      </div>
    </div>
  </div>

  <%- include('../partials/footer') %>

  <script src="/javascripts/galactic-state-stream.js?v=5.0"></script>
</body>
</html>
