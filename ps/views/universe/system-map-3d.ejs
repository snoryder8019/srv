            if (data.players) {
              data.players.forEach(player => {
                if (player.characterId !== '<%= character._id %>') {
                  addOtherPlayerShip({
                    characterId: player.characterId,
                    characterName: player.characterName,
                    location: player.position
                  });
                }
              });
