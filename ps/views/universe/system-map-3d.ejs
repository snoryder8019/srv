        const temperature = asset.temperature || 'UNKNOWN';
        statsHTML = `
          <div style="margin-bottom: 2px;">SPECTRAL: ${spectralType}</div>
          <div style="margin-bottom: 2px;">TEMP: ${temperature} K</div>
          <div style="margin-bottom: 2px;">STATUS: ACTIVE</div>
        `;
      } else {
        statsHTML = `
          <div style="color: #888; font-style: italic;">NO DATA AVAILABLE</div>
        `;
