    // Touch gesture controls for camera and ship
    function initializeTouchGestures() {
      if (window.innerWidth > 768) return; // Only for mobile

      console.log('üì± Initializing touch gestures...');

      const canvas = document.querySelector('#mapContainer canvas');
      if (!canvas) {
        console.warn('‚ö†Ô∏è Canvas not found for touch gestures');
        return;
      }

      let touchState = {
        touches: [],
        initialDistance: 0,
        initialRotation: 0
      };

      // Helper to get touch distance for pinch-to-zoom
      function getTouchDistance(touch1, touch2) {
        const dx = touch2.clientX - touch1.clientX;
        const dy = touch2.clientY - touch1.clientY;
        return Math.sqrt(dx * dx + dy * dy);
      }

      // Helper to get angle between two touches
      function getTouchAngle(touch1, touch2) {
        return Math.atan2(touch2.clientY - touch1.clientY, touch2.clientX - touch1.clientX);
      }

      canvas.addEventListener('touchstart', (e) => {
        touchState.touches = Array.from(e.touches);

        if (e.touches.length === 2) {
          // Two finger gesture - save initial state for camera orbit
          touchState.initialDistance = getTouchDistance(e.touches[0], e.touches[1]);
          touchState.initialRotation = getTouchAngle(e.touches[0], e.touches[1]);
        }
      }, { passive: true });

      canvas.addEventListener('touchmove', (e) => {
        e.preventDefault(); // Prevent scrolling

        if (e.touches.length === 1) {
          // Single finger drag - rotate ship
          if (touchState.touches.length === 1 && window.shipCombatSystem && window.shipCombatSystem.playerShip) {
            const prevTouch = touchState.touches[0];
            const currTouch = e.touches[0];

            const deltaX = currTouch.clientX - prevTouch.clientX;
            const deltaY = currTouch.clientY - prevTouch.clientY;

            // Rotate ship based on drag
            const sensitivity = 0.01;
            window.shipCombatSystem.playerShip.rotation.y -= deltaX * sensitivity;
            window.shipCombatSystem.playerShip.rotation.x -= deltaY * sensitivity;

            // Update ship mesh rotation
            if (window.shipCombatSystem.shipMesh) {
              window.shipCombatSystem.shipMesh.rotation.copy(window.shipCombatSystem.playerShip.rotation);
            }
          }
        } else if (e.touches.length === 2 && window.galacticMap && window.galacticMap.controls) {
          // Two finger drag - orbit camera around focus
          const currDistance = getTouchDistance(e.touches[0], e.touches[1]);
          const currAngle = getTouchAngle(e.touches[0], e.touches[1]);

          // Calculate center point of both touches
          const centerX = (e.touches[0].clientX + e.touches[1].clientX) / 2;
          const centerY = (e.touches[0].clientY + e.touches[1].clientY) / 2;

          const prevCenterX = (touchState.touches[0].clientX + touchState.touches[1].clientX) / 2;
          const prevCenterY = (touchState.touches[0].clientY + touchState.touches[1].clientY) / 2;

          const deltaX = centerX - prevCenterX;
          const deltaY = centerY - prevCenterY;

          // Update orbit controls based on touch movement
          const controls = window.galacticMap.controls;
          const camera = window.galacticMap.camera;

          // Rotate camera around target
          const rotateSensitivity = 0.005;
          controls.rotateLeft(deltaX * rotateSensitivity);
          controls.rotateUp(deltaY * rotateSensitivity);

          // Pinch-to-zoom
          if (touchState.initialDistance > 0) {
            const zoomDelta = (currDistance - touchState.initialDistance) * 0.01;
            controls.dollyIn(1 - zoomDelta);
            touchState.initialDistance = currDistance;
          }
        }

        touchState.touches = Array.from(e.touches);
      }, { passive: false });

      canvas.addEventListener('touchend', (e) => {
        touchState.touches = Array.from(e.touches);

        if (e.touches.length < 2) {
          touchState.initialDistance = 0;
          touchState.initialRotation = 0;
        }
      }, { passive: true });

      console.log('‚úÖ Touch gestures initialized');
    }

