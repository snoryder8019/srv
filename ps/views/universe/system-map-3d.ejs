      <% if (character && character.name) { %>
      setTimeout(() => {
        if (window.shipCombatSystem) {
          // Use character name as pilot name
          window.shipCombatSystem.updateCharacterNameLabel('<%= character.name %>');
        }
      }, 1500); // Increased timeout to ensure ship combat system is loaded
      <% } %>

      // Initialize Socket.IO for multiplayer pilot tracking
      const socket = io();
      window.multiplayerSocket = socket;

