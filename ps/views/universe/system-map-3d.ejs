  <!-- Inline Script: Define sidebar functions IMMEDIATELY -->
  <script>
    // CRITICAL: Define these functions BEFORE any onclick handlers try to use them

    // Section toggle function
    window.toggleSidebarSection = function(sectionName) {
      const content = document.getElementById(sectionName + 'Content');
      const arrow = document.getElementById(sectionName + 'Arrow');

      if (!content || !arrow) {
        console.warn('‚ö†Ô∏è Section elements not found:', sectionName);
        return;
      }

      const isHidden = content.style.display === 'none';

      if (isHidden) {
        // Show section - use flex for certain sections, block for others
        if (sectionName === 'mapControls' || sectionName === 'debugAdmin') {
          content.style.display = 'flex';
        } else {
          content.style.display = 'block';
        }
        arrow.textContent = '‚ñº';
        arrow.style.transform = 'rotate(0deg)';
      } else {
        // Hide section
        content.style.display = 'none';
        arrow.textContent = '‚ñ∂';
        arrow.style.transform = 'rotate(-90deg)';
      }

      console.log(`‚úÖ Toggled ${sectionName}: ${isHidden ? 'shown' : 'hidden'}`);
    };

    // Quick access toolbar handlers
    let sidebarVisible = true;
    let zenModeActive = false;

    window.handleSidebarToggle = function() {
      console.log('‚¨ÖÔ∏è Sidebar toggle clicked');
      const sidebar = document.getElementById('unifiedSidebar');
      const showBtn = document.getElementById('showSidebarBtn');
      const toggleBtn = document.getElementById('toggleSidebarBtn');

      sidebarVisible = !sidebarVisible;

      if (sidebarVisible) {
        sidebar.style.transform = 'translateX(0)';
        showBtn.style.left = '-60px';
        showBtn.style.display = 'none';
        toggleBtn.textContent = '¬´';
        toggleBtn.title = 'Collapse Sidebar';
      } else {
        sidebar.style.transform = 'translateX(-320px)';
        showBtn.style.left = '0';
        showBtn.style.display = 'flex';
        toggleBtn.textContent = '¬ª';
        toggleBtn.title = 'Expand Sidebar';
      }
    };

    window.handleMenuToggle = function() {
      console.log('üçî Menu button clicked');
      if (window.toggleOverlayMenu) {
        window.toggleOverlayMenu();
      } else {
        console.warn('toggleOverlayMenu not available yet');
      }
    };

    window.handleZenToggle = function() {
      console.log('üëÅÔ∏è Zen mode clicked');
      zenModeActive = !zenModeActive;
      const zenBtn = document.getElementById('zenModeBtn');
      const hideables = document.querySelectorAll('.zen-hideable');
      const shipHUD = document.getElementById('shipHUD');
      const shapeControls = document.getElementById('shapeControls');

      if (zenModeActive) {
        hideables.forEach(el => {
          el.style.opacity = '0';
          el.style.pointerEvents = 'none';
        });
        if (shipHUD) shipHUD.style.display = 'none';
        if (shapeControls) shapeControls.style.display = 'none';
        zenBtn.style.background = 'rgba(255, 100, 100, 0.9)';
        zenBtn.style.borderColor = '#ff6464';
        zenBtn.textContent = 'üö´';
        zenBtn.title = 'Exit Zen Mode';
      } else {
        hideables.forEach(el => {
          el.style.opacity = '1';
          el.style.pointerEvents = 'auto';
        });
        if (shipHUD) shipHUD.style.display = 'block';
        if (shapeControls) shapeControls.style.display = 'block';
        zenBtn.style.background = 'rgba(100, 200, 255, 0.9)';
        zenBtn.style.borderColor = '#64c8ff';
        zenBtn.textContent = 'üëÅÔ∏è';
        zenBtn.title = 'Zen Mode';
      }
    };

    window.handleOrbitsToggle = function() {
      console.log('‚≠ï Orbital rings toggle clicked');
      if (window.galacticMap && window.galacticMap.connectionsGroup) {
        const orbitsVisible = window.galacticMap.connectionsGroup.visible;
        window.galacticMap.connectionsGroup.visible = !orbitsVisible;

        const btn = document.getElementById('toggleOrbitsBtn');
        if (orbitsVisible) {
          btn.style.background = 'rgba(100, 100, 100, 0.9)';
          btn.style.borderColor = '#666';
          btn.textContent = 'üö´';
          btn.title = 'Show Orbital Rings';
        } else {
          btn.style.background = 'rgba(0, 255, 255, 0.9)';
          btn.style.borderColor = '#00ffff';
          btn.textContent = '‚≠ï';
          btn.title = 'Hide Orbital Rings';
        }
      } else {
        console.warn('galacticMap not available yet');
      }
    };

    window.handleCenterPlayer = function() {
      console.log('üéØ Center on player clicked');
      if (window.shipCombatSystem && window.shipCombatSystem.playerShip) {
        const shipPos = window.shipCombatSystem.playerShip.position;
        console.log('Centering camera on player at:', shipPos);

        if (window.shipCombatSystem.camera) {
          window.shipCombatSystem.camera.position.set(
            shipPos.x,
            shipPos.y + 100,
            shipPos.z + 200
          );
          window.shipCombatSystem.camera.lookAt(shipPos);
        }
      } else {
        console.warn('shipCombatSystem not available yet');
      }
    };

    // Populate system object selector with planets, stations, and orbitals
    window.populateSystemObjectSelector = function() {
      console.log('üìã Populating system object selector...');
      const selector = document.getElementById('systemObjectSelector');

      if (!selector || !window.galacticMap) {
        console.warn('‚ö†Ô∏è System object selector or galactic map not ready');
        return;
      }

      // Clear existing options except the first one
      selector.innerHTML = '<option value="">ü™ê Select System Object</option>';

      // Get all planets, stations, and orbitals from the scene
      const planets = [];
      const stations = [];
      const orbitals = [];

      // Check both planets Map and assets Map
      if (window.galacticMap.planets) {
        window.galacticMap.planets.forEach((mesh, id) => {
          const userData = mesh.userData;
          planets.push({
            id: id,
            title: userData.title || 'Unknown Planet',
            type: userData.type || 'planet'
          });
        });
      }

      // Also check assets Map for stations and orbitals
      if (window.galacticMap.assets) {
        window.galacticMap.assets.forEach((assetObj, id) => {
          const userData = assetObj.mesh.userData;
          if (userData.type === 'station' || userData.type === 'orbital') {
            stations.push({
              id: id,
              title: userData.title || 'Unknown Station',
              type: userData.type
            });
          }
        });
      }

      // Add planets
      if (planets.length > 0) {
        const group = document.createElement('optgroup');
        group.label = 'ü™ê Planets';
        planets.forEach(planet => {
          const option = document.createElement('option');
          option.value = planet.id;
          option.textContent = `ü™ê ${planet.title}`;
          option.dataset.type = planet.type;
          group.appendChild(option);
        });
        selector.appendChild(group);
      }

      // Add stations and orbitals
      if (stations.length > 0) {
        const group = document.createElement('optgroup');
        group.label = 'üõ∞Ô∏è Stations & Orbitals';
        stations.forEach(station => {
          const option = document.createElement('option');
          option.value = station.id;
          option.textContent = `üõ∞Ô∏è ${station.title}`;
          option.dataset.type = station.type;
          group.appendChild(option);
        });
        selector.appendChild(group);
      }

      console.log(`‚úÖ System object selector populated: ${planets.length} planets, ${stations.length} stations/orbitals`);
    };

    console.log('‚úÖ All sidebar functions defined globally');
