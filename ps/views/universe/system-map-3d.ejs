        // Shields
        const shieldsPercent = (ship.shields / ship.maxShields) * 100;
        const shieldsBar = document.getElementById('shipShieldsBar');
        const shieldsText = document.getElementById('shipShieldsText');
        if (shieldsBar && shieldsText) {
          shieldsBar.style.width = `${shieldsPercent}%`;
          shieldsText.textContent = `${Math.round(shieldsPercent)}%`;
        }
      }
    };

