  <script>
    // toggleSidebarSection is already defined in inline script above (line 516)

    // Update breadcrumb with star name from URL
    document.addEventListener('DOMContentLoaded', () => {
      const urlParams = new URLSearchParams(window.location.search);
      let starId = urlParams.get('star');

      // If starId was passed from server (via path param), use that
      <% if (typeof starId !== 'undefined' && starId) { %>
        starId = '<%= starId %>';
        // Update URL to include star parameter for compatibility
        if (!urlParams.get('star')) {
          const newUrl = `${window.location.pathname}?star=${starId}`;
          window.history.replaceState({}, '', newUrl);
        }
      <% } %>

      if (starId && window.galacticMap) {
        // Wait for assets to load
        setTimeout(() => {
          const star = Array.from(window.galacticMap.assets.values()).find(a =>
            a.mesh.userData.id === starId && a.mesh.userData.type === 'star'
          );
          if (star) {
            document.getElementById('currentStarName').textContent = `‚≠ê ${star.mesh.userData.title}`;
          }
        }, 2000);
      }

      // Initialize tester toolbar
      <% if (user && user.userRole === 'tester') { %>
      const testerUser = {
        username: '<%= user.username %>',
        userRole: '<%= user.userRole %>',
        _id: '<%= user._id %>'
      };
      const testerCharacter = <%= character ? JSON.stringify(character) : 'null' %>;
      window.testerToolbar = new TesterToolbar(testerUser, testerCharacter);
      <% } %>
    });

    // Update UI based on map state - Now uses unified sidebar
    window.addEventListener('assetSelected', (e) => {
      const { title, type, data } = e.detail;
      const selectedAssetInfo = document.getElementById('selectedAssetInfo');
      const selectedAssetContent = document.getElementById('selectedAssetContent');
      const selectedAssetArrow = document.getElementById('selectedAssetArrow');

      if (!selectedAssetInfo) return;

      // Build asset info HTML
      let html = `
        <h2 style="margin: 0 0 8px 0; font-size: 14px; color: #ff6600;">${title || 'Unknown Asset'}</h2>
        <span style="display: inline-block; padding: 2px 8px; background: rgba(255, 102, 0, 0.2); border: 1px solid #ff6600; border-radius: 3px; font-size: 10px; margin-bottom: 10px; color: #ff6600; text-transform: uppercase;">${type || 'unknown'}</span>
      `;

      if (data && data.coordinates) {
        const { x, y, z } = data.coordinates;
        html += `
          <div style="display: flex; justify-content: space-between; margin-bottom: 5px;">
            <span style="color: #888;">Position:</span>
            <span style="color: #00ddff; font-weight: bold;">${x.toFixed(1)}, ${y.toFixed(1)}, ${z.toFixed(1)}</span>
          </div>
        `;
      }

      // Display stats if available
      if (data && data.stats) {
        Object.entries(data.stats).forEach(([key, value]) => {
          html += `
            <div style="display: flex; justify-content: space-between; margin-bottom: 5px;">
              <span style="color: #888;">${key}:</span>
              <span style="color: #00ddff; font-weight: bold;">${value}</span>
            </div>
          `;
        });
      }

      selectedAssetInfo.innerHTML = html;

      // Auto-expand the section
      if (selectedAssetContent.style.display === 'none') {
        selectedAssetContent.style.display = 'block';
        selectedAssetArrow.textContent = '‚ñº';
        selectedAssetArrow.style.transform = 'rotate(0deg)';
      }

      console.log('‚úÖ Asset selected in sidebar:', title);
    });

    window.addEventListener('assetDeselected', () => {
      const selectedAssetInfo = document.getElementById('selectedAssetInfo');
      if (selectedAssetInfo) {
        selectedAssetInfo.innerHTML = '<div style="text-align: center; color: #888; padding: 20px 0;">Click an asset to view details</div>';
      }
      console.log('‚úÖ Asset deselected in sidebar');
    });

    // FPS Counter
    let lastTime = performance.now();
    let frames = 0;

    function updateFPS() {
      frames++;
      const now = performance.now();
      if (now >= lastTime + 1000) {
        const fps = Math.round((frames * 1000) / (now - lastTime));
        document.getElementById('fpsCounter').textContent = fps;
        frames = 0;
        lastTime = now;
      }
      requestAnimationFrame(updateFPS);
    }
    updateFPS();

    // Update stats from map
    setInterval(() => {
      if (window.galacticMap) {
        document.getElementById('assetCount').textContent = window.galacticMap.assets.size;

        // Count orbital bodies (planets + orbitals + stations)
        let orbitalCount = 0;
        window.galacticMap.assets.forEach(asset => {
          if (asset.mesh.userData.type === 'planet' ||
              asset.mesh.userData.type === 'orbital' ||
              asset.mesh.userData.type === 'station') {
            orbitalCount++;
          }
        });
        document.getElementById('orbitalCount').textContent = orbitalCount;

        document.getElementById('connectionCount').textContent = window.galacticMap.connections.size;
        document.getElementById('zoomLevel').textContent = window.galacticMap.zoomLevel.toFixed(1) + 'x';
      }
    }, 500);

    // ESC to deselect
    document.addEventListener('keydown', (e) => {
      if (e.key === 'Escape' && window.galacticMap) {
        window.galacticMap.deselectObject();
      }
    });

    // Wire up control buttons
    document.getElementById('zoomInBtn').addEventListener('click', () => {
      if (window.galacticMap) {
        window.galacticMap.camera.zoom *= 1.2;
        window.galacticMap.camera.updateProjectionMatrix();
      }
    });

    document.getElementById('zoomOutBtn').addEventListener('click', () => {
      if (window.galacticMap) {
        window.galacticMap.camera.zoom /= 1.2;
        window.galacticMap.camera.updateProjectionMatrix();
      }
    });

    document.getElementById('resetViewBtn').addEventListener('click', () => {
      if (window.galacticMap) {
        window.galacticMap.camera.zoom = 1;
        window.galacticMap.camera.position.set(0, 200, 300);
        if (window.galacticMap.controls) {
          window.galacticMap.controls.target.set(0, 0, 0);
        }
        window.galacticMap.camera.updateProjectionMatrix();
        if (window.galacticMap.controls) {
          window.galacticMap.controls.update();
        }
      }
    });

    // Toggle Menu Button
    const toggleMenuBtn = document.getElementById('toggleMenuBtn');
    if (toggleMenuBtn) {
      toggleMenuBtn.addEventListener('click', () => {
        console.log('üçî Menu button clicked');
        window.toggleOverlayMenu();
      });
      console.log('‚úÖ Menu button listener attached');
    } else {
      console.error('‚ùå toggleMenuBtn not found');
    }

    // Sidebar Toggle Functionality
    let sidebarVisible = true;
    const toggleSidebarBtn = document.getElementById('toggleSidebarBtn');
    if (toggleSidebarBtn) {
      toggleSidebarBtn.addEventListener('click', () => {
        console.log('‚¨ÖÔ∏è Sidebar toggle clicked');
        const sidebar = document.getElementById('unifiedSidebar');
        const showBtn = document.getElementById('showSidebarBtn');

        sidebarVisible = !sidebarVisible;

        if (sidebarVisible) {
          sidebar.style.transform = 'translateX(0)';
          showBtn.style.left = '-60px';
          showBtn.style.display = 'none';
          toggleSidebarBtn.textContent = '¬´';
          toggleSidebarBtn.title = 'Collapse Sidebar';
        } else {
          sidebar.style.transform = 'translateX(-320px)';
          showBtn.style.left = '0';
          showBtn.style.display = 'flex';
          toggleSidebarBtn.textContent = '¬ª';
          toggleSidebarBtn.title = 'Expand Sidebar';
        }
      });
      console.log('‚úÖ Sidebar toggle listener attached');
    } else {
      console.error('‚ùå toggleSidebarBtn not found');
    }

    // Show Sidebar Button (when collapsed)
    const showSidebarBtn = document.getElementById('showSidebarBtn');
    if (showSidebarBtn) {
      showSidebarBtn.addEventListener('click', () => {
        console.log('‚û°Ô∏è Show sidebar clicked');
        if (toggleSidebarBtn) toggleSidebarBtn.click();
      });
      console.log('‚úÖ Show sidebar button listener attached');
    } else {
      console.error('‚ùå showSidebarBtn not found');
    }

    // Zen Mode Toggle
    let zenModeActive = false;
    const zenModeBtn = document.getElementById('zenModeBtn');
    if (zenModeBtn) {
      zenModeBtn.addEventListener('click', () => {
        console.log('üëÅÔ∏è Zen mode clicked');
        zenModeActive = !zenModeActive;
      const hideables = document.querySelectorAll('.zen-hideable');
      const shipHUD = document.getElementById('shipHUD');
      const shapeControls = document.getElementById('shapeControls');

      if (zenModeActive) {
        // Hide all HUD elements including ship controls
        hideables.forEach(el => {
          el.style.opacity = '0';
          el.style.pointerEvents = 'none';
        });

        // Hide ship HUD completely
        if (shipHUD) {
          shipHUD.style.display = 'none';
        }

        // Hide shape controls completely
        if (shapeControls) {
          shapeControls.style.display = 'none';
        }

        zenBtn.style.background = 'rgba(255, 100, 100, 0.9)';
        zenBtn.style.borderColor = '#ff6464';
        zenBtn.textContent = 'üö´';
        zenBtn.title = 'Exit Zen Mode (Show HUD)';
      } else {
        // Show all HUD elements
        hideables.forEach(el => {
          el.style.opacity = '1';
          el.style.pointerEvents = 'auto';
        });

        // Show ship HUD
        if (shipHUD) {
          shipHUD.style.display = 'block';
        }

        // Show shape controls
        if (shapeControls) {
          shapeControls.style.display = 'block';
        }

        zenModeBtn.style.background = 'rgba(100, 200, 255, 0.9)';
        zenModeBtn.style.borderColor = '#64c8ff';
        zenModeBtn.textContent = 'üëÅÔ∏è';
        zenModeBtn.title = 'Toggle Zen Mode (Hide All HUD)';
      }
      });
      console.log('‚úÖ Zen mode listener attached');
    } else {
      console.error('‚ùå zenModeBtn not found');
    }

    // Toggle Orbital Rings
    const toggleOrbitsBtn = document.getElementById('toggleOrbitsBtn');
    if (toggleOrbitsBtn) {
      toggleOrbitsBtn.addEventListener('click', () => {
        console.log('‚≠ï Orbital rings toggle clicked');
      if (window.galacticMap && window.galacticMap.connectionsGroup) {
        const orbitsVisible = window.galacticMap.connectionsGroup.visible;
        window.galacticMap.connectionsGroup.visible = !orbitsVisible;

        const btn = document.getElementById('toggleOrbitsBtn');
        if (orbitsVisible) {
          // Hiding orbits
          btn.style.background = 'rgba(100, 100, 100, 0.9)';
          btn.style.borderColor = '#666';
          btn.textContent = 'üö´';
          btn.title = 'Show Orbital Rings';
        } else {
          // Showing orbits
          btn.style.background = 'rgba(0, 255, 255, 0.9)';
          btn.style.borderColor = '#00ffff';
          btn.textContent = '‚≠ï';
          btn.title = 'Hide Orbital Rings';
        }
      }
      });
      console.log('‚úÖ Orbital rings toggle listener attached');
    } else {
      console.error('‚ùå toggleOrbitsBtn not found');
    }

    // Center camera on player
    const centerOnPlayerBtn = document.getElementById('centerOnPlayerBtn');
    if (centerOnPlayerBtn) {
      centerOnPlayerBtn.addEventListener('click', () => {
        console.log('üéØ Center on player clicked');
      if (window.shipCombatSystem && window.shipCombatSystem.playerShip) {
        const shipPos = window.shipCombatSystem.playerShip.position;
        console.log('Centering camera on player at:', shipPos);

        // Reset camera to follow ship
        if (window.shipCombatSystem.camera) {
          // The camera in ship-combat-system.js automatically follows the ship
          // Just need to reset any manual camera movements
          window.shipCombatSystem.camera.position.set(
            shipPos.x,
            shipPos.y + 100,
            shipPos.z + 200
          );
          window.shipCombatSystem.camera.lookAt(shipPos);
        }
      }
      });
      console.log('‚úÖ Center on player listener attached');
    } else {
      console.error('‚ùå centerOnPlayerBtn not found');
    }

    // Function to populate planet selector dropdown
    // Try to populate system object selector immediately (in case already loaded)
    if (window.populateSystemObjectSelector) {
      window.populateSystemObjectSelector();
    }

    // Also populate after a delay to ensure assets are loaded
    setTimeout(() => {
      if (window.populateSystemObjectSelector) {
        window.populateSystemObjectSelector();
      }
    }, 2000);

    // Handle system object selection - shows floating HUD
    const systemObjectSelectorElement = document.getElementById('systemObjectSelector');
    if (systemObjectSelectorElement) {
      systemObjectSelectorElement.addEventListener('change', (e) => {
        const objectId = e.target.value;
        if (!objectId) return;

        console.log('üîç System object selected from sidebar:', objectId);

        // Check planets Map first
        let objectMesh = null;
        let objectData = null;

        if (window.galacticMap && window.galacticMap.planets) {
          objectMesh = window.galacticMap.planets.get(objectId);
          if (objectMesh) {
            objectData = objectMesh.userData;
          }
        }

        // If not in planets, check assets Map
        if (!objectMesh && window.galacticMap && window.galacticMap.assets) {
          const assetObj = window.galacticMap.assets.get(objectId);
          if (assetObj && assetObj.mesh) {
            objectMesh = assetObj.mesh;
            objectData = objectMesh.userData;
          }
        }

        if (objectMesh && window.shipCombatSystem && window.shipCombatSystem.camera) {
          const objectPos = objectMesh.position;
          console.log(`üìç Viewing ${objectData.title} at (${objectPos.x}, ${objectPos.y}, ${objectPos.z})`);

          // Move camera to view the object
          const distance = 5000; // Zoom distance from object
          window.shipCombatSystem.camera.position.set(
            objectPos.x,
            objectPos.y + distance * 0.5,
            objectPos.z + distance
          );
          window.shipCombatSystem.camera.lookAt(objectPos);

          // Show the sleek floating HUD with object info
          if (window.showFloatingHUD) {
            // Create asset data object for HUD
            const assetData = {
              _id: objectId,
              title: objectData.title,
              assetType: objectData.type,
              coordinates: {
                x: objectPos.x,
                y: objectPos.y,
                z: objectPos.z
              }
            };
            window.showFloatingHUD(assetData);
          }

          // Update sidebar selected section
          window.dispatchEvent(new CustomEvent('assetSelected', {
            detail: {
              title: objectData.title,
              type: objectData.type,
              data: {
                _id: objectId,
                coordinates: objectPos
              }
            }
          }));
        } else {
          console.warn('‚ö†Ô∏è Object not found in scene:', objectId);
        }

        // Reset selector
        e.target.value = '';
      });
      console.log('‚úÖ System object selector event listener attached');
    } else {
      console.error('‚ùå systemObjectSelector element not found');
    }

    // Right HUD Container - REMOVED (now in unified sidebar)

    /**
     * Show floating HUD next to planet/object with piloting options
     */
    window.showFloatingHUD = function(asset) {
      const hud = document.getElementById('floatingHUD');
      const canvas = document.getElementById('hudLineCanvas');

      // Get object position in 3D space (check planets Map first, then assets Map)
      let objectMesh = null;
      if (window.galacticMap?.planets?.has(asset._id)) {
        objectMesh = window.galacticMap.planets.get(asset._id);
      } else if (window.galacticMap?.assets?.has(asset._id)) {
        const assetObj = window.galacticMap.assets.get(asset._id);
        objectMesh = assetObj?.mesh;
      }

      if (!objectMesh) return;

      const objectPos = objectMesh.position.clone();

      // Project 3D position to 2D screen coordinates
      const vector = objectPos.clone();
      vector.project(window.shipCombatSystem?.camera || window.galacticMap.camera);

      const x = (vector.x * 0.5 + 0.5) * window.innerWidth;
      const y = (vector.y * -0.5 + 0.5) * window.innerHeight;

      // Position HUD offset to the right and slightly up from object
      const offsetX = 120;
      const offsetY = -60;

      hud.style.left = (x + offsetX) + 'px';
      hud.style.top = (y + offsetY) + 'px';
      hud.style.display = 'block';

      // Animate HUD entrance
      hud.style.opacity = '0';
      hud.style.transform = 'translateX(-20px) scale(0.9)';
      hud.style.transition = 'all 0.2s ease-out';

      setTimeout(() => {
        hud.style.opacity = '1';
        hud.style.transform = 'translateX(0) scale(1)';
      }, 10);

      // Update HUD content
      document.getElementById('hudTitle').textContent = `[${asset.title.toUpperCase()}]`;
      document.getElementById('hudType').textContent = `TYPE: ${asset.assetType.toUpperCase()}`;

      const coords = asset.coordinates;
      document.getElementById('hudCoords').textContent =
        `COORDS: [${Math.floor(coords.x)}, ${Math.floor(coords.y)}, ${Math.floor(coords.z)}]`;

      // Build piloting options based on asset type
      const pilotingOptions = document.getElementById('hudPilotingOptions');
      let optionsHTML = '';

      if (asset.assetType === 'planet') {
        optionsHTML = `
          <div style="margin-bottom: 6px; font-size: 10px; font-weight: bold; color: #00ff00; text-transform: uppercase;">
            [PILOTING OPTIONS]
          </div>
          <button onclick="travelToPlanet('${asset._id}', '${asset.title}')" style="
            width: 100%;
            background: rgba(0, 255, 0, 0.2);
            border: 1px solid #00ff00;
            color: #00ff00;
            padding: 8px 12px;
            margin-bottom: 5px;
            border-radius: 3px;
            cursor: pointer;
            font-family: 'Courier New', monospace;
            font-size: 10px;
            transition: all 0.2s;
          " onmouseover="this.style.background='rgba(0, 255, 0, 0.3)'" onmouseout="this.style.background='rgba(0, 255, 0, 0.2)'">
            üöÄ TRAVEL TO PLANET
          </button>
          <button onclick="orbitPlanet('${asset._id}', '${asset.title}')" style="
            width: 100%;
            background: rgba(0, 170, 255, 0.2);
            border: 1px solid #00aaff;
            color: #00aaff;
            padding: 8px 12px;
            margin-bottom: 5px;
            border-radius: 3px;
            cursor: pointer;
            font-family: 'Courier New', monospace;
            font-size: 10px;
            transition: all 0.2s;
          " onmouseover="this.style.background='rgba(0, 170, 255, 0.3)'" onmouseout="this.style.background='rgba(0, 170, 255, 0.2)'">
            üåÄ ENTER ORBIT
          </button>
          <button onclick="landOnPlanet('${asset._id}', '${asset.title}')" style="
            width: 100%;
            background: rgba(255, 170, 0, 0.2);
            border: 1px solid #ffaa00;
            color: #ffaa00;
            padding: 8px 12px;
            border-radius: 3px;
            cursor: pointer;
            font-family: 'Courier New', monospace;
            font-size: 10px;
            transition: all 0.2s;
          " onmouseover="this.style.background='rgba(255, 170, 0, 0.3)'" onmouseout="this.style.background='rgba(255, 170, 0, 0.2)'">
            üõ¨ LAND ON SURFACE
          </button>
        `;
      } else if (asset.assetType === 'station' || asset.assetType === 'orbital') {
        optionsHTML = `
          <div style="margin-bottom: 6px; font-size: 10px; font-weight: bold; color: #00ff00; text-transform: uppercase;">
            [PILOTING OPTIONS]
          </div>
          <button onclick="travelToPlanet('${asset._id}', '${asset.title}')" style="
            width: 100%;
            background: rgba(0, 255, 0, 0.2);
            border: 1px solid #00ff00;
            color: #00ff00;
            padding: 8px 12px;
            margin-bottom: 5px;
            border-radius: 3px;
            cursor: pointer;
            font-family: 'Courier New', monospace;
            font-size: 10px;
            transition: all 0.2s;
          " onmouseover="this.style.background='rgba(0, 255, 0, 0.3)'" onmouseout="this.style.background='rgba(0, 255, 0, 0.2)'">
            üöÄ TRAVEL TO STATION
          </button>
          <button onclick="dockAtStation('${asset._id}', '${asset.title}')" style="
            width: 100%;
            background: rgba(255, 170, 0, 0.2);
            border: 1px solid #ffaa00;
            color: #ffaa00;
            padding: 8px 12px;
            border-radius: 3px;
            cursor: pointer;
            font-family: 'Courier New', monospace;
            font-size: 10px;
            transition: all 0.2s;
          " onmouseover="this.style.background='rgba(255, 170, 0, 0.3)'" onmouseout="this.style.background='rgba(255, 170, 0, 0.2)'">
            üîó DOCK AT STATION
          </button>
        `;
      } else {
        optionsHTML = `
          <div style="font-size: 10px; color: #888; font-style: italic;">
            &gt; NO PILOTING OPTIONS AVAILABLE
          </div>
        `;
      }

      pilotingOptions.innerHTML = optionsHTML;

      // Draw connection line
      canvas.width = window.innerWidth;
      canvas.height = window.innerHeight;
      canvas.style.display = 'block';

      const ctx = canvas.getContext('2d');
      ctx.clearRect(0, 0, canvas.width, canvas.height);

      // Draw line from object to HUD
      ctx.strokeStyle = 'rgba(0, 255, 0, 0.5)';
      ctx.lineWidth = 1;
      ctx.setLineDash([5, 5]);

      ctx.beginPath();
      ctx.moveTo(x, y);
      ctx.lineTo(x + offsetX, y + offsetY + 30); // Connect to middle of HUD
      ctx.stroke();

      // Draw dot at object position
      ctx.fillStyle = 'rgba(0, 255, 0, 0.8)';
      ctx.beginPath();
      ctx.arc(x, y, 3, 0, Math.PI * 2);
      ctx.fill();
    };

    /**
     * Hide floating HUD
     */
    window.hideFloatingHUD = function() {
      const hud = document.getElementById('floatingHUD');
      const canvas = document.getElementById('hudLineCanvas');

      hud.style.display = 'none';
      canvas.style.display = 'none';

      // Clear canvas
      const ctx = canvas.getContext('2d');
      ctx.clearRect(0, 0, canvas.width, canvas.height);
    };

    // Piloting action functions
    window.travelToPlanet = function(planetId, planetName) {
      console.log(`üöÄ Traveling to ${planetName}...`);
      alert(`Initiating travel to ${planetName}...\n\nThis feature will be implemented soon!`);
    };

