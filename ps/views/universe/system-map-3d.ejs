<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>System Map - 3D View</title>
  <link rel="stylesheet" href="/stylesheets/style.css">
  <link rel="stylesheet" href="/stylesheets/galactic-map.css">
  <link rel="stylesheet" href="/stylesheets/activity-monitor.css">
  <% if (user && user.userRole === 'tester') { %>
  <link rel="stylesheet" href="/stylesheets/tester-toolbar.css">
  <link rel="stylesheet" href="/stylesheets/global-chat.css">
  <link rel="stylesheet" href="/stylesheets/ship-info-pane.css">
  <% } %>
  <style>
    /* Show header for 3D map */
    header {
      display: block !important;
    }

    nav.navbar {
      display: flex !important;
    }

    body {
      margin: 0;
      overflow: hidden;
      font-family: 'Courier New', monospace;
      background: #000;
    }

    #mapContainer {
      width: 100vw;
      height: calc(100vh - 60px);
      position: relative;
      margin-top: 60px;
      z-index: 1; /* Three.js canvas base layer */
    }

    #mapContainer canvas {
      position: absolute;
      top: 0;
      left: 0;
      z-index: 1 !important; /* Force canvas to stay at base layer */
    }

    /* Critical Info Pane Styles */
    #infoPaneBackdrop.visible {
      opacity: 1 !important;
      pointer-events: auto !important;
    }

    #infoPane.visible,
    .side-panel.visible {
      right: 10px !important;
      transform: scale(1) !important;
      border-color: rgba(0, 212, 255, 0.6) !important;
      box-shadow: -5px 0 40px rgba(0, 0, 0, 0.7), 0 0 30px rgba(0, 212, 255, 0.4), 0 0 60px rgba(0, 212, 255, 0.6) !important;
    }

    /* Button styles within info pane */
    #infoPane button,
    #infoPane .travel-btn,
    #assetInfo button {
      font-family: 'Orbitron', monospace !important;
      background: linear-gradient(135deg, rgba(0, 212, 255, 0.2), rgba(0, 170, 255, 0.2)) !important;
      border: 1px solid rgba(0, 212, 255, 0.4) !important;
      color: #00d4ff !important;
      padding: 10px 15px !important;
      border-radius: 6px !important;
      cursor: pointer !important;
      transition: all 0.3s ease !important;
      font-size: 0.9em !important;
      width: 100% !important;
      display: flex !important;
      align-items: center !important;
      justify-content: space-between !important;
    }

    #infoPane button:hover,
    #infoPane .travel-btn:hover,
    #assetInfo button:hover {
      background: linear-gradient(135deg, rgba(0, 212, 255, 0.3), rgba(0, 170, 255, 0.3)) !important;
      border-color: #00d4ff !important;
      box-shadow: 0 0 15px rgba(0, 212, 255, 0.5) !important;
      transform: translateY(-1px) !important;
    }

    /* Travel Notification */
    .travel-notification {
      position: fixed;
      top: 50%;
      left: 50%;
      transform: translate(-50%, -50%) scale(0.8);
      background: rgba(10, 10, 26, 0.98);
      border: 2px solid #00ffaa;
      border-radius: 12px;
      padding: 20px 30px;
      color: #00ffaa;
      font-family: 'Orbitron', monospace;
      font-size: 18px;
      z-index: 10000;
      opacity: 0;
      transition: all 0.3s ease;
      backdrop-filter: blur(10px);
      box-shadow: 0 0 40px rgba(0, 255, 170, 0.3);
    }

    .travel-notification.show {
      opacity: 1;
      transform: translate(-50%, -50%) scale(1);
    }

    /* Info Overlay */
    .info-overlay {
      position: absolute;
      top: 20px;
      left: 20px;
      background: rgba(0, 20, 40, 0.9);
      border: 2px solid #00ffaa;
      border-radius: 8px;
      padding: 15px 20px;
      color: #00ffaa;
      font-size: 14px;
      z-index: 100;
      min-width: 250px;
      backdrop-filter: blur(10px);
    }

    .info-overlay h2 {
      margin: 0 0 10px 0;
      font-size: 18px;
      color: #ffaa00;
      text-shadow: 0 0 10px #ffaa00;
    }

    .info-row {
      display: flex;
      justify-content: space-between;
      margin: 5px 0;
      padding: 3px 0;
      border-bottom: 1px solid rgba(0, 255, 170, 0.2);
    }

    .info-label {
      color: #66ccff;
    }

    .info-value {
      color: #ffffff;
      font-weight: bold;
    }

    /* Control Instructions */
    .controls-overlay {
      position: absolute;
      bottom: 20px;
      left: 20px;
      background: rgba(0, 20, 40, 0.9);
      border: 2px solid #4488ff;
      border-radius: 8px;
      padding: 15px 20px;
      color: #4488ff;
      font-size: 12px;
      z-index: 100;
      backdrop-filter: blur(10px);
    }

    .controls-overlay h3 {
      margin: 0 0 10px 0;
      font-size: 14px;
      color: #ffaa00;
    }

    .controls-overlay p {
      margin: 5px 0;
      color: #aaccff;
    }

    .controls-overlay kbd {
      background: rgba(100, 150, 255, 0.3);
      padding: 2px 6px;
      border-radius: 3px;
      border: 1px solid #4488ff;
      color: #ffffff;
    }

    /* Selected Asset Panel */
    .selected-panel {
      position: absolute;
      top: 20px;
      right: 20px;
      background: rgba(0, 20, 40, 0.95);
      border: 2px solid #ff6600;
      border-radius: 8px;
      padding: 15px 20px;
      color: #ffffff;
      font-size: 13px;
      z-index: 100;
      min-width: 300px;
      max-width: 400px;
      display: none;
      backdrop-filter: blur(10px);
    }

    .selected-panel.visible {
      display: block;
    }

    .selected-panel h2 {
      margin: 0 0 10px 0;
      font-size: 16px;
      color: #ff6600;
      text-shadow: 0 0 10px #ff6600;
    }

    .selected-panel .asset-type {
      display: inline-block;
      background: rgba(255, 102, 0, 0.3);
      padding: 3px 10px;
      border-radius: 4px;
      font-size: 11px;
      text-transform: uppercase;
      margin-bottom: 10px;
      border: 1px solid #ff6600;
    }

    /* Toggle Button */
    .view-toggle {
      position: absolute;
      top: 20px;
      left: 50%;
      transform: translateX(-50%);
      background: rgba(138, 79, 255, 0.9);
      border: 2px solid #8a4fff;
      border-radius: 20px;
      padding: 10px 20px;
      color: #ffffff;
      font-size: 14px;
      cursor: pointer;
      z-index: 100;
      transition: all 0.3s;
      text-decoration: none;
      backdrop-filter: blur(10px);
    }

    .view-toggle:hover {
      background: rgba(138, 79, 255, 1);
      box-shadow: 0 0 20px rgba(138, 79, 255, 0.8);
      transform: translateX(-50%) scale(1.05);
    }

    /* Legend */
    .legend {
      position: absolute;
      bottom: 20px;
      right: 20px;
      background: rgba(0, 20, 40, 0.9);
      border: 2px solid #00ffaa;
      border-radius: 8px;
      padding: 15px;
      color: #ffffff;
      font-size: 12px;
      z-index: 100;
      backdrop-filter: blur(10px);
    }

    .legend h3 {
      margin: 0 0 10px 0;
      font-size: 14px;
      color: #ffaa00;
    }

    .legend-item {
      display: flex;
      align-items: center;
      margin: 5px 0;
    }

    .legend-color {
      width: 16px;
      height: 16px;
      border-radius: 50%;
      margin-right: 10px;
      border: 1px solid rgba(255, 255, 255, 0.3);
    }

    /* Mobile Ship Controls - Hidden by default, shown under 768px */
    #mobileShipControls {
      display: none;
    }

    @media (max-width: 768px) {
      #mobileShipControls {
        display: flex;
        position: fixed;
        bottom: 20px;
        left: 50%;
        transform: translateX(-50%);
        z-index: 1000;
        gap: 15px;
        flex-wrap: wrap;
        justify-content: center;
        width: 90%;
        max-width: 400px;
      }

      .mobile-btn-row {
        display: flex;
        gap: 10px;
        width: 100%;
        justify-content: center;
      }

      .mobile-ship-btn {
        width: 70px;
        height: 70px;
        border-radius: 50%;
        background: linear-gradient(135deg, rgba(0, 212, 255, 0.2), rgba(0, 170, 255, 0.3));
        border: 2px solid rgba(0, 212, 255, 0.6);
        color: #00d4ff;
        font-size: 24px;
        font-weight: bold;
        display: flex;
        align-items: center;
        justify-content: center;
        cursor: pointer;
        user-select: none;
        -webkit-user-select: none;
        touch-action: manipulation;
        transition: all 0.2s ease;
        backdrop-filter: blur(10px);
        box-shadow: 0 4px 15px rgba(0, 212, 255, 0.3);
        font-family: 'Orbitron', monospace;
      }

      .mobile-ship-btn:active {
        transform: scale(0.95);
        background: linear-gradient(135deg, rgba(0, 212, 255, 0.4), rgba(0, 170, 255, 0.5));
        box-shadow: 0 0 25px rgba(0, 212, 255, 0.6);
      }

      .mobile-ship-btn.rear {
        background: linear-gradient(135deg, rgba(255, 100, 100, 0.2), rgba(255, 80, 80, 0.3));
        border-color: rgba(255, 100, 100, 0.6);
        color: #ff6464;
      }

      .mobile-ship-btn.rear:active {
        background: linear-gradient(135deg, rgba(255, 100, 100, 0.4), rgba(255, 80, 80, 0.5));
        box-shadow: 0 0 25px rgba(255, 100, 100, 0.6);
      }

      /* Hide desktop controls on mobile */
      .controls-overlay {
        display: none !important;
      }

    }

    /* Mobile: Adjust UI for mobile view */
    @media (max-width: 768px) {

      /* Make info pane full-width on mobile when visible */
      #infoPane.visible {
        right: 0 !important;
        left: 0 !important;
        width: 100% !important;
        max-width: 100% !important;
        height: auto !important;
        max-height: 60vh !important;
        bottom: 0 !important;
        top: auto !important;
        border-radius: 16px 16px 0 0 !important;
        z-index: 10001 !important;
      }

      /* Hide info pane by default on mobile */
      #infoPane:not(.visible) {
        transform: translateY(100%) !important;
        right: auto !important;
      }

      /* Adjust floating HUD position on mobile */
      #floatingHUD {
        max-width: calc(100vw - 40px) !important;
        font-size: 9px !important;
      }

      /* Hide selected panel on mobile - redundant with info pane */
      .selected-panel {
        display: none !important;
      }

      /* Adjust controls overlay if shown */
      .info-overlay {
        max-width: calc(100vw - 40px) !important;
        font-size: 12px !important;
      }
    }

    /* Loading Spinner - Left of Breadcrumb */
    .loading-spinner {
      position: fixed;
      top: 43px;
      right: 380px;
      z-index: 95;
      display: none;
      width: 18px;
      height: 18px;
      border: 2px solid rgba(0, 255, 170, 0.2);
      border-top: 2px solid #00ffaa;
      border-radius: 50%;
      animation: spin 0.8s linear infinite;
    }

    .loading-spinner.active {
      display: block;
    }

    @keyframes spin {
      0% { transform: rotate(0deg); }
      100% { transform: rotate(360deg); }
    }

    /* Location Info Display - Below Breadcrumb */
    .location-info {
      position: fixed;
      top: 70px;
      right: 20px;
      z-index: 90;
      font-family: 'Courier New', monospace;
      text-align: right;
      pointer-events: none;
      user-select: none;
    }

    .location-name {
      font-size: 16px;
      font-weight: bold;
      color: #00ffaa;
      text-shadow: 0 0 8px rgba(0, 255, 170, 0.5);
      margin: 0;
      padding: 0;
      line-height: 1.2;
    }

    .location-children {
      font-size: 10px;
      color: #888;
      margin-top: 4px;
      padding: 0;
      line-height: 1.3;
    }

    .location-children span {
      margin-right: 8px;
    }

    @media (max-width: 768px) {
      .loading-spinner {
        top: 58px;
        right: 200px;
        width: 14px;
        height: 14px;
      }

      .location-info {
        top: 85px;
        right: 10px;
      }

      .location-name {
        font-size: 13px;
      }

      .location-children {
        font-size: 9px;
      }
    }

    @media (max-width: 480px) {
      .loading-spinner {
        right: 150px;
      }

      .location-name {
        font-size: 11px;
      }

      .location-children {
        font-size: 8px;
      }
    }
  </style>
</head>
<body>
  <%- include('../partials/header', { user: user }) %>
  <%- include('../partials/breadcrumb-nav', { currentView: 'system' }) %>

  <!-- Loading Spinner -->
  <div id="loadingSpinner" class="loading-spinner"></div>

  <!-- Location Info Display -->
  <div class="location-info">
    <div id="locationName" class="location-name">LOADING...</div>
    <div id="locationChildren" class="location-children">Initializing system...</div>
  </div>

  <!-- Main Map Container -->
  <div id="mapContainer"></div>

  <!-- Mobile Ship Controls (bottom center, 6 buttons) -->
  <div id="mobileShipControls">
    <!-- Top row: Left/Right thrust -->
    <div class="mobile-btn-row">
      <div class="mobile-ship-btn" id="mobileThrustLeft" data-key="ArrowLeft">
        ‚Üê
      </div>
      <div class="mobile-ship-btn" id="mobileThrustRight" data-key="ArrowRight">
        ‚Üí
      </div>
    </div>
    <!-- Middle row: Forward/Backward thrust -->
    <div class="mobile-btn-row">
      <div class="mobile-ship-btn" id="mobileThrustForward" data-key="ArrowUp">
        ‚Üë
      </div>
      <div class="mobile-ship-btn rear" id="mobileThrustBackward" data-key="ArrowDown">
        ‚Üì
      </div>
    </div>
    <!-- Bottom row: Up/Down thrust -->
    <div class="mobile-btn-row">
      <div class="mobile-ship-btn" id="mobileThrustUp" data-key="KeyW">
        ‚ñ≤
      </div>
      <div class="mobile-ship-btn rear" id="mobileThrustDown" data-key="KeyS">
        ‚ñº
      </div>
    </div>
  </div>

  <!-- Minimal Ship Status Panel (Bottom-Left) -->
  <div id="shipStatusPanel" class="zen-hideable" style="position: fixed; bottom: 20px; left: 20px; width: 200px; background: rgba(10, 10, 26, 0.95); backdrop-filter: blur(15px); border: 2px solid rgba(0, 255, 170, 0.4); border-radius: 8px; padding: 12px; z-index: 100; font-family: 'Courier New', monospace; font-size: 11px; color: #00ffaa; box-shadow: 0 0 20px rgba(0, 255, 170, 0.2); transition: all 0.3s ease;">
    <div style="font-size: 10px; font-weight: bold; color: #00ffaa; margin-bottom: 8px; text-transform: uppercase; letter-spacing: 1px; border-bottom: 1px solid rgba(0, 255, 170, 0.3); padding-bottom: 4px;">
      Ship Status
    </div>

    <!-- Hull -->
    <div style="margin-bottom: 6px;">
      <div style="display: flex; justify-content: space-between; font-size: 9px; color: #00ff9f; margin-bottom: 2px;">
        <span>Hull</span>
        <span id="shipHullText">100%</span>
      </div>
      <div style="width: 100%; height: 8px; background: rgba(0, 0, 0, 0.5); border: 1px solid rgba(0, 255, 170, 0.3); border-radius: 3px; overflow: hidden;">
        <div id="shipHullBar" style="height: 100%; background: linear-gradient(90deg, #00ff9f, #00ffaa); width: 100%; transition: width 0.3s ease, background 0.3s ease;"></div>
      </div>
    </div>

    <!-- Shields -->
    <div style="margin-bottom: 6px;">
      <div style="display: flex; justify-content: space-between; font-size: 9px; color: #00aaff; margin-bottom: 2px;">
        <span>Shields</span>
        <span id="shipShieldsText">100%</span>
      </div>
      <div style="width: 100%; height: 8px; background: rgba(0, 0, 0, 0.5); border: 1px solid rgba(0, 170, 255, 0.3); border-radius: 3px; overflow: hidden;">
        <div id="shipShieldsBar" style="height: 100%; background: linear-gradient(90deg, #0088ff, #00aaff); width: 100%; transition: width 0.3s ease;"></div>
      </div>
    </div>

    <!-- Speed -->
    <div style="margin-bottom: 6px;">
      <div style="display: flex; justify-content: space-between; font-size: 9px; color: #ffaa00;">
        <span>Speed</span>
        <span id="shipSpeedText">0 u/s</span>
      </div>
    </div>

    <!-- Position -->
    <div style="font-size: 8px; color: #888; margin-top: 8px; padding-top: 6px; border-top: 1px solid rgba(0, 255, 170, 0.2);">
      <div>Pos: <span id="shipPosText">0, 0, 0</span></div>
    </div>
  </div>

  <!-- Info Pane Backdrop (dimmed overlay) -->
  <div id="infoPaneBackdrop" style="position: fixed; top: 0; left: 0; right: 0; bottom: 0; background: rgba(0, 0, 0, 0.7); backdrop-filter: blur(5px); z-index: 9998; opacity: 0; pointer-events: none; transition: opacity 0.3s ease;"></div>

  <!-- Floating HUD Info (appears next to hovered objects) -->
  <div id="floatingHUD" style="position: fixed; display: none; z-index: 9999; pointer-events: none; font-family: 'Courier New', monospace; font-size: 10px; min-width: 180px; max-width: 240px;">
    <div style="background: rgba(0, 0, 0, 0.95); border: 1px solid #00ff00; border-radius: 3px; padding: 10px; box-shadow: 0 0 15px rgba(0, 255, 0, 0.3), inset 0 0 15px rgba(0, 255, 0, 0.05);">
      <div style="color: #00ff00; font-weight: bold; margin-bottom: 6px; font-size: 11px; text-transform: uppercase; letter-spacing: 0.5px;" id="hudTitle">[OBJECT]</div>
      <div style="color: #00ff00; opacity: 0.7; margin-bottom: 3px; font-size: 9px;" id="hudType">TYPE: UNKNOWN</div>
      <div style="color: #00ff00; opacity: 0.7; margin-bottom: 3px; font-size: 9px;" id="hudCoords">COORDS: [0, 0, 0]</div>
      <div style="color: #00ff00; opacity: 0.7; margin-bottom: 3px; font-size: 9px;" id="hudDistance">DISTANCE: 0 KM</div>
      <div style="color: #00ff00; opacity: 0.85; margin-top: 6px; padding-top: 6px; border-top: 1px solid rgba(0, 255, 0, 0.25); font-size: 9px;" id="hudStats">
        <!-- Object stats will be displayed here -->
      </div>
    </div>
  </div>

  <!-- HUD Connection Line Canvas -->
  <canvas id="hudLineCanvas" style="position: fixed; top: 0; left: 0; width: 100%; height: 100%; pointer-events: none; z-index: 9998; display: none;"></canvas>

  <!-- Side Panel - Info Pane (Hidden by default, shows on asset click) -->
  <div class="side-panel" id="infoPane" style="position: fixed; top: 60px; right: -340px; width: 320px; max-height: calc(100vh - 70px); background: rgba(10, 10, 26, 0.98); backdrop-filter: blur(20px); border: 2px solid rgba(0, 212, 255, 0); border-radius: 8px; box-shadow: -5px 0 40px rgba(0, 0, 0, 0); z-index: 9999; transition: right 0.4s cubic-bezier(0.4, 0, 0.2, 1), border-color 0.4s ease, box-shadow 0.4s ease, transform 0.4s cubic-bezier(0.4, 0, 0.2, 1); display: flex; flex-direction: column; overflow: hidden; transform: scale(0.9);">
    <button class="panel-close-btn" onclick="window.closeInfoPane()" style="position: absolute; top: 10px; right: 10px; width: 32px; height: 32px; background: rgba(0, 212, 255, 0.2); border: 1px solid rgba(0, 212, 255, 0.4); border-radius: 50%; color: #00d4ff; font-size: 1.2em; font-weight: 600; cursor: pointer; display: flex; align-items: center; justify-content: center; z-index: 10; transition: all 0.2s ease; font-family: 'Orbitron', monospace; box-shadow: 0 0 10px rgba(0, 212, 255, 0.3);">‚úï</button>
    <div class="panel-section" style="flex: 1; overflow-y: auto; padding: 12px; padding-top: 40px; position: relative; z-index: 3;">
      <div id="assetInfo" style="font-family: 'Orbitron', monospace; color: #e0e0ff;"></div>
    </div>
  </div>

  <script>
    // CRITICAL: Define these functions BEFORE any onclick handlers try to use them

    // Quick access toolbar handlers
    let zenModeActive = false;

    /**
     * Toggle Overlay Menu - Define early so handleMenuToggle can call it
     */
    window.toggleOverlayMenu = function() {
      console.log('üçî toggleOverlayMenu called');
      const menu = document.getElementById('overlayMenu');
      const backdrop = document.getElementById('overlayBackdrop');
      const btn = document.getElementById('toggleMenuBtn');

      console.log('Menu element:', menu);
      console.log('Backdrop element:', backdrop);
      console.log('Button element:', btn);

      const isActive = menu.classList.contains('active');
      console.log('Is currently active:', isActive);

      if (isActive) {
        menu.classList.remove('active');
        backdrop.classList.remove('active');
        if (btn) btn.classList.remove('active');
        // Force inline style to closed position
        menu.style.right = '-400px';
        backdrop.style.opacity = '0';
        backdrop.style.pointerEvents = 'none';
        console.log('‚úÖ Menu closed');
      } else {
        menu.classList.add('active');
        backdrop.classList.add('active');
        if (btn) btn.classList.add('active');
        // Force inline style to open position
        menu.style.right = '0';
        backdrop.style.opacity = '1';
        backdrop.style.pointerEvents = 'auto';
        console.log('‚úÖ Menu opened');
      }
    };

    window.handleMenuToggle = function() {
      console.log('‚ò∞ Menu button clicked');
      // toggleOverlayMenu is defined later in this page - call it when user clicks
      window.toggleOverlayMenu();
    };

    window.handleZenToggle = function() {
      console.log('üëÅÔ∏è Zen mode clicked');
      zenModeActive = !zenModeActive;
      const zenBtn = document.getElementById('zenModeBtn');
      const hideables = document.querySelectorAll('.zen-hideable');
      const shipHUD = document.getElementById('shipHUD');
      const shapeControls = document.getElementById('shapeControls');

      if (zenModeActive) {
        hideables.forEach(el => {
          el.style.opacity = '0';
          el.style.pointerEvents = 'none';
        });
        if (shipHUD) shipHUD.style.display = 'none';
        if (shapeControls) shapeControls.style.display = 'none';
        zenBtn.style.background = 'rgba(255, 100, 100, 0.9)';
        zenBtn.style.borderColor = '#ff6464';
        zenBtn.textContent = 'üö´';
        zenBtn.title = 'Exit Zen Mode';
      } else {
        hideables.forEach(el => {
          el.style.opacity = '1';
          el.style.pointerEvents = 'auto';
        });
        if (shipHUD) shipHUD.style.display = 'block';
        if (shapeControls) shapeControls.style.display = 'block';
        zenBtn.style.background = 'rgba(100, 200, 255, 0.9)';
        zenBtn.style.borderColor = '#64c8ff';
        zenBtn.textContent = 'üëÅÔ∏è';
        zenBtn.title = 'Zen Mode';
      }
    };

    window.handleOrbitsToggle = function() {
      console.log('‚≠ï Orbital rings toggle clicked');
      if (window.galacticMap && window.galacticMap.connectionsGroup) {
        const orbitsVisible = window.galacticMap.connectionsGroup.visible;
        window.galacticMap.connectionsGroup.visible = !orbitsVisible;

        const btn = document.getElementById('toggleOrbitsBtn');
        if (orbitsVisible) {
          btn.style.background = 'rgba(100, 100, 100, 0.9)';
          btn.style.borderColor = '#666';
          btn.textContent = 'üö´';
