      }
    };

    // Close menu/modal/zen mode on ESC key
    document.addEventListener('keydown', (e) => {
      if (e.key === 'Escape') {
        // Priority 1: Exit zen mode if active
        if (zenModeActive) {
          document.getElementById('zenModeBtn').click();
          return;
        }

        // Priority 2: Close PWA modal if open
        const modal = document.getElementById('pwaModalContainer');
        if (modal && modal.classList.contains('active')) {
          closePWAModal();
          return;
        }

        // Priority 3: Close overlay menu if open
        const menu = document.getElementById('overlayMenu');
        if (menu && menu.classList.contains('active')) {
