      if (shipPos) {
        const dx = coords.x - shipPos.x;
        const dy = coords.y - shipPos.y;
        const dz = coords.z - shipPos.z;
        distance = Math.sqrt(dx * dx + dy * dy + dz * dz);
      }
      document.getElementById('hudDistance').textContent = `DISTANCE: ${Math.floor(distance)} KM`;

      // Build stats display based on asset type
