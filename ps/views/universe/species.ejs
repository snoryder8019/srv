<!DOCTYPE html>
<html>
<head>
  <title><%= title %></title>
  <style>
    body {
      font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
      max-width: 1400px;
      margin: 0 auto;
      padding: 20px;
      background: linear-gradient(135deg, #0a0a1a 0%, #1a0a2a 100%);
      color: #e0e0e0;
      min-height: 100vh;
    }
    h1 {
      color: #8a4fff;
      border-bottom: 3px solid #8a4fff;
      padding-bottom: 15px;
      font-size: 2.5em;
      text-align: center;
      text-shadow: 0 0 20px rgba(138, 79, 255, 0.5);
    }
    .species-grid {
      display: grid;
      grid-template-columns: repeat(auto-fill, minmax(380px, 1fr));
      gap: 25px;
      margin-top: 40px;
    }
    .species-card {
      background: linear-gradient(145deg, #1a1a2e 0%, #16162a 100%);
      border: 2px solid #2a2a4a;
      border-radius: 12px;
      padding: 25px;
      transition: all 0.3s ease;
      position: relative;
      overflow: hidden;
    }
    .species-card::before {
      content: '';
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 4px;
      background: linear-gradient(90deg, #8a4fff, #4a9eff);
      opacity: 0;
      transition: opacity 0.3s;
    }
    .species-card:hover {
      transform: translateY(-8px);
      border-color: #8a4fff;
      box-shadow: 0 10px 30px rgba(138, 79, 255, 0.3);
    }
    .species-card:hover::before {
      opacity: 1;
    }
    .species-header {
      display: flex;
      justify-content: space-between;
      align-items: flex-start;
      margin-bottom: 20px;
      gap: 15px;
    }
    .species-name {
      font-size: 1.8em;
      font-weight: bold;
      color: #8a4fff;
      margin: 0;
      line-height: 1.2;
    }
    .species-classification {
      background: linear-gradient(135deg, #4a2a6a, #2a4a6a);
      color: #d0b0ff;
      padding: 6px 14px;
      border-radius: 6px;
      font-size: 0.85em;
      text-transform: uppercase;
      white-space: nowrap;
      border: 1px solid #5a3a8a;
    }
    .species-description {
      color: #b0b0c0;
      line-height: 1.6;
      margin: 15px 0;
      font-style: italic;
    }
    .species-stats {
      display: grid;
      grid-template-columns: 1fr 1fr;
      gap: 12px;
      margin: 20px 0;
    }
    .stat-item {
      background: rgba(42, 42, 74, 0.5);
      padding: 12px;
      border-radius: 8px;
      border: 1px solid #3a3a5a;
    }
    .stat-label {
      font-size: 0.75em;
      color: #9090b0;
      text-transform: uppercase;
      letter-spacing: 0.5px;
    }
    .stat-value {
      font-weight: bold;
      color: #e0e0ff;
      margin-top: 6px;
      font-size: 1.1em;
    }
    .species-traits {
      margin: 20px 0;
    }
    .traits-title {
      font-size: 0.9em;
      color: #8a4fff;
      text-transform: uppercase;
      margin-bottom: 10px;
      font-weight: bold;
    }
    .traits-list {
      display: flex;
      flex-wrap: wrap;
      gap: 8px;
    }
    .trait {
      background: rgba(138, 79, 255, 0.15);
      color: #b090ff;
      padding: 6px 12px;
      border-radius: 16px;
      font-size: 0.85em;
      border: 1px solid rgba(138, 79, 255, 0.3);
    }
    .species-abilities {
      background: rgba(74, 158, 255, 0.1);
      padding: 15px;
      border-radius: 8px;
      margin: 15px 0;
      border-left: 4px solid #4a9eff;
    }
    .abilities-title {
      font-size: 0.9em;
      color: #4a9eff;
      text-transform: uppercase;
      margin-bottom: 8px;
      font-weight: bold;
    }
    .ability-item {
      color: #c0d0ff;
      padding: 4px 0;
      font-size: 0.9em;
    }
    .ability-item::before {
      content: '"';
      color: #4a9eff;
      margin-right: 8px;
    }
    .species-homeworld {
      background: rgba(74, 192, 106, 0.1);
      padding: 12px;
      border-radius: 8px;
      margin: 15px 0;
      border-left: 4px solid #4ac06a;
    }
    .homeworld-label {
      font-size: 0.8em;
      color: #6ac66a;
      text-transform: uppercase;
    }
    .homeworld-value {
      color: #e0ffe0;
      font-weight: bold;
      margin-top: 4px;
    }
    .species-tags {
      display: flex;
      flex-wrap: wrap;
      gap: 8px;
      margin-top: 15px;
      padding-top: 15px;
      border-top: 1px solid #2a2a4a;
    }
    .tag {
      background: #2a2a3a;
      color: #8a4fff;
      padding: 5px 12px;
      border-radius: 12px;
      font-size: 0.8em;
      border: 1px solid #3a3a5a;
    }
    .no-species {
      text-align: center;
      padding: 60px;
      color: #888;
      font-size: 1.3em;
    }
    .population-indicator {
      display: inline-block;
      width: 10px;
      height: 10px;
      border-radius: 50%;
      margin-right: 8px;
      animation: pulse 2s infinite;
    }
    .population-high { background: #4ac06a; }
    .population-medium { background: #ffa94a; }
    .population-low { background: #ff6a4a; }
    .population-unknown { background: #888; }

    @keyframes pulse {
      0%, 100% { opacity: 1; }
      50% { opacity: 0.5; }
    }

    .sentience-badge {
      position: absolute;
      top: 15px;
      right: 15px;
      background: rgba(255, 215, 0, 0.2);
      color: #ffd700;
      padding: 4px 10px;
      border-radius: 4px;
      font-size: 0.75em;
      border: 1px solid rgba(255, 215, 0, 0.4);
      text-transform: uppercase;
    }
  </style>
</head>
<body>
  <h1><%= title %></h1>

  <% if (species && species.length > 0) { %>
    <div class="species-grid">
      <% species.forEach(specie => { %>
        <div class="species-card">
          <% if (specie.sentient) { %>
            <div class="sentience-badge">Sentient</div>
          <% } %>

          <div class="species-header">
            <h2 class="species-name"><%= specie.name || specie.species %></h2>
            <% if (specie.classification) { %>
              <span class="species-classification"><%= specie.classification %></span>
            <% } %>
          </div>

          <% if (specie.description) { %>
            <p class="species-description"><%= specie.description %></p>
          <% } %>

          <div class="species-stats">
            <% if (specie.lifespan) { %>
              <div class="stat-item">
                <div class="stat-label">Lifespan</div>
                <div class="stat-value"><%= specie.lifespan %> years</div>
              </div>
            <% } %>

            <% if (specie.intelligence) { %>
              <div class="stat-item">
                <div class="stat-label">Intelligence</div>
                <div class="stat-value"><%= specie.intelligence %></div>
              </div>
            <% } %>

            <% if (specie.size || specie.height) { %>
              <div class="stat-item">
                <div class="stat-label">Size</div>
                <div class="stat-value"><%= specie.size || specie.height %></div>
              </div>
            <% } %>

            <% if (specie.population) { %>
              <div class="stat-item">
                <div class="stat-label">Population</div>
                <div class="stat-value">
                  <%
                    let popClass = 'population-unknown';
                    if (typeof specie.population === 'string') {
                      const pop = specie.population.toLowerCase();
                      if (pop.includes('high') || pop.includes('abundant')) popClass = 'population-high';
                      else if (pop.includes('medium') || pop.includes('moderate')) popClass = 'population-medium';
                      else if (pop.includes('low') || pop.includes('rare')) popClass = 'population-low';
                    }
                  %>
                  <span class="population-indicator <%= popClass %>"></span>
                  <%= specie.population %>
                </div>
              </div>
            <% } %>

            <% if (specie.temperament || specie.behavior) { %>
              <div class="stat-item">
                <div class="stat-label">Temperament</div>
                <div class="stat-value"><%= specie.temperament || specie.behavior %></div>
              </div>
            <% } %>

            <% if (specie.diet) { %>
              <div class="stat-item">
                <div class="stat-label">Diet</div>
                <div class="stat-value"><%= specie.diet %></div>
              </div>
            <% } %>
          </div>

          <% if (specie.homeworld || specie.origin) { %>
            <div class="species-homeworld">
              <div class="homeworld-label">Homeworld</div>
              <div class="homeworld-value"><%= specie.homeworld || specie.origin %></div>
            </div>
          <% } %>

          <% if (specie.traits && specie.traits.length > 0) { %>
            <div class="species-traits">
              <div class="traits-title">Traits</div>
              <div class="traits-list">
                <% specie.traits.forEach(trait => { %>
                  <span class="trait"><%= trait %></span>
                <% }); %>
              </div>
            </div>
          <% } %>

          <% if (specie.abilities && specie.abilities.length > 0) { %>
            <div class="species-abilities">
              <div class="abilities-title">Special Abilities</div>
              <% specie.abilities.forEach(ability => { %>
                <div class="ability-item"><%= ability %></div>
              <% }); %>
            </div>
          <% } %>

          <% if (specie.physiology && typeof specie.physiology === 'object') { %>
            <div class="species-traits">
              <div class="traits-title">Physiology</div>
              <div class="traits-list">
                <% Object.entries(specie.physiology).forEach(([key, value]) => { %>
                  <span class="trait"><%= key %>: <%= value %></span>
                <% }); %>
              </div>
            </div>
          <% } %>

          <% if (specie.tags && specie.tags.length > 0) { %>
            <div class="species-tags">
              <% specie.tags.forEach(tag => { %>
                <span class="tag"><%= tag %></span>
              <% }); %>
            </div>
          <% } %>
        </div>
      <% }); %>
    </div>
  <% } else { %>
    <div class="no-species">
      No species data available. Begin cataloging the diverse life forms of the universe!
    </div>
  <% } %>
</body>
</html>
