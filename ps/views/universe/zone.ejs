<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= title %></title>
  <link rel="stylesheet" href="/stylesheets/style.css">
  <script src="/socket.io/socket.io.js"></script>
  <script src="/javascripts/zone-renderer.js" defer></script>
  <style>
    body {
      margin: 0;
      padding: 0;
      overflow: hidden;
      background: #000;
      font-family: 'Courier New', monospace;
    }

    #zone-container {
      position: relative;
      width: 100vw;
      height: 100vh;
      background: #0a0a0a;
    }

    #zone-canvas {
      display: block;
      width: 100%;
      height: 100%;
      image-rendering: pixelated;
      image-rendering: crisp-edges;
    }

    #zone-hud {
      position: absolute;
      top: 20px;
      left: 20px;
      color: #00ff88;
      font-size: 14px;
      text-shadow: 0 0 10px rgba(0, 255, 136, 0.5);
      background: rgba(0, 0, 0, 0.8);
      padding: 15px;
      border-radius: 8px;
      border: 1px solid #00ff88;
      z-index: 100;
    }

    #zone-hud h3 {
      margin: 0 0 10px 0;
      color: #00ff88;
      font-size: 16px;
    }

    #zone-hud .info-row {
      margin: 5px 0;
      font-size: 12px;
    }

    #controls-hint {
      position: absolute;
      bottom: 20px;
      left: 50%;
      transform: translateX(-50%);
      background: rgba(0, 0, 0, 0.8);
      color: #00ff88;
      padding: 10px 20px;
      border-radius: 8px;
      border: 1px solid #00ff88;
      font-size: 12px;
      z-index: 100;
    }

    #loading-screen {
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      background: #000;
      display: flex;
      flex-direction: column;
      align-items: center;
      justify-content: center;
      color: #00ff88;
      z-index: 200;
    }

    #loading-screen.hidden {
      display: none;
    }

    .spinner {
      border: 3px solid rgba(0, 255, 136, 0.3);
      border-top: 3px solid #00ff88;
      border-radius: 50%;
      width: 50px;
      height: 50px;
      animation: spin 1s linear infinite;
      margin-bottom: 20px;
    }

    @keyframes spin {
      0% { transform: rotate(0deg); }
      100% { transform: rotate(360deg); }
    }

    #exit-button {
      position: absolute;
      top: 20px;
      right: 20px;
      padding: 10px 20px;
      background: rgba(255, 0, 100, 0.8);
      color: #fff;
      border: 1px solid #ff0064;
      border-radius: 5px;
      cursor: pointer;
      font-family: 'Courier New', monospace;
      font-size: 12px;
      transition: all 0.3s;
      z-index: 100;
    }

    #exit-button:hover {
      background: rgba(255, 0, 100, 1);
      box-shadow: 0 0 15px rgba(255, 0, 100, 0.5);
    }
  </style>
</head>
<body>
  <%- include('../partials/header', { user: user }) %>

  <div id="zone-container">
    <!-- Loading Screen -->
    <div id="loading-screen">
      <div class="spinner"></div>
      <div>Loading Zone...</div>
      <div style="font-size: 12px; margin-top: 10px; opacity: 0.7;"><%= zone.title %></div>
    </div>

    <!-- Zone Canvas -->
    <canvas id="zone-canvas"></canvas>

    <!-- HUD -->
    <div id="zone-hud">
      <h3><%= zone.title %></h3>
      <div class="info-row">üìç Location: <%= parentAnomaly ? parentAnomaly.title : 'Unknown' %></div>
      <div class="info-row">üéÆ Player: <span id="player-name"><%= user ? user.username : 'Guest' %></span></div>
      <div class="info-row">üìä Sprites: <%= sprites.length %></div>
      <div class="info-row" id="player-position">Position: (0, 0)</div>
    </div>

    <!-- Controls Hint -->
    <div id="controls-hint">
      üéÆ WASD or Arrow Keys to move  ‚Ä¢  ESC to exit
    </div>

    <!-- Exit Button -->
    <button id="exit-button" onclick="exitZone()">‚¨Ö Exit to Map</button>
  </div>

  <script>
    // Pass data to JavaScript (as global variables) - MUST be before zone-renderer initializes
    window.zoneData = <%- JSON.stringify(zone) %>;
    window.spritesData = <%- JSON.stringify(sprites) %>;
    window.parentAnomalyData = <%- JSON.stringify(parentAnomaly) %>;
    window.characterData = <%- character ? JSON.stringify(character) : 'null' %>;
    console.log('üåê Zone data loaded into window:', window.zoneData);
    console.log('üë§ Character data loaded:', window.characterData?.name || 'None');
  </script>
  <script>
    function exitZone() {
      // Return to galactic map
      window.location.href = '/universe/galactic-map-3d';
    }

    // ESC key to exit
    document.addEventListener('keydown', (e) => {
      if (e.key === 'Escape') {
        exitZone();
      }
    });
  </script>
</body>
</html>
