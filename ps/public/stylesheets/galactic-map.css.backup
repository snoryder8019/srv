/**
 * Galactic Map Styling
 */

body {
  margin: 0;
  overflow: hidden;
}

.map-container {
  position: relative;
  width: 100vw;
  height: 100vh;
  background: #0a0e1a;
  display: flex;
  flex-direction: column;
}

/* Header */
.map-header {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 60px;
  background: linear-gradient(180deg, rgba(10, 14, 26, 0.95) 0%, rgba(10, 14, 26, 0) 100%);
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 0 2rem;
  z-index: 100;
}

.map-header h1 {
  font-size: 1.5rem;
  margin: 0;
  color: #ffffff;
  text-shadow: 0 0 10px rgba(102, 126, 234, 0.5);
}

/* Connection Status */
.connection-status {
  display: flex;
  align-items: center;
  gap: 0.5rem;
  padding: 0.5rem 1rem;
  background: rgba(0, 0, 0, 0.5);
  border-radius: 0.5rem;
  border: 1px solid rgba(255, 255, 255, 0.1);
}

.connection-status.connected {
  border-color: #10b981;
}

.connection-status.failed {
  border-color: #ef4444;
}

.status-indicator {
  font-size: 1.2rem;
}

.status-text {
  color: #d1d5db;
  font-size: 0.9rem;
  font-family: monospace;
}

/* Canvas Wrapper */
.map-canvas-wrapper {
  flex: 1;
  position: relative;
  overflow: hidden;
}

#galacticMap {
  width: 100%;
  height: 100%;
  cursor: move;
}

#galacticMap:active {
  cursor: grabbing;
}

/* Map Controls */
.map-controls {
  position: fixed;
  top: 80px;
  left: 20px;
  display: flex;
  flex-direction: column;
  gap: 0.5rem;
  z-index: 100;
}

.control-group {
  display: flex;
  flex-direction: column;
  gap: 0.25rem;
  background: rgba(0, 0, 0, 0.7);
  backdrop-filter: blur(10px);
  padding: 0.5rem;
  border-radius: 0.75rem;
  border: 1px solid rgba(255, 255, 255, 0.1);
}

.control-btn {
  padding: 0.5rem 1rem;
  background: rgba(255, 255, 255, 0.1);
  border: 1px solid rgba(255, 255, 255, 0.2);
  border-radius: 0.5rem;
  color: #ffffff;
  font-family: monospace;
  font-size: 0.85rem;
  cursor: pointer;
  transition: all 0.2s;
}

.control-btn:hover {
  background: rgba(102, 126, 234, 0.3);
  border-color: #667eea;
}

.control-btn:active {
  transform: scale(0.95);
}

/* Admin Controls Panel */
.controls-panel {
  position: fixed;
  top: 80px;
  left: 90px;
  width: 350px;
  max-height: calc(100vh - 160px);
  background: rgba(0, 0, 0, 0.9);
  backdrop-filter: blur(20px);
  border: 1px solid rgba(102, 126, 234, 0.3);
  border-radius: 1rem;
  z-index: 200;
  overflow-y: auto;
  box-shadow: 0 10px 40px rgba(0, 0, 0, 0.5);
}

.controls-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 1rem 1.25rem;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-radius: 1rem 1rem 0 0;
  border-bottom: 1px solid rgba(255, 255, 255, 0.1);
}

.controls-header h3 {
  margin: 0;
  font-size: 1rem;
  font-weight: 600;
  color: #ffffff;
}

.close-controls-btn {
  background: rgba(255, 255, 255, 0.2);
  border: none;
  color: white;
  width: 28px;
  height: 28px;
  border-radius: 50%;
  font-size: 1rem;
  cursor: pointer;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.2s;
}

.close-controls-btn:hover {
  background: rgba(255, 255, 255, 0.3);
  transform: rotate(90deg);
}

.controls-content {
  padding: 1.25rem;
}

.control-section {
  margin-bottom: 1.5rem;
}

.control-section:last-child {
  margin-bottom: 0;
}

.control-section label {
  display: block;
  margin-bottom: 0.5rem;
  color: #ffffff;
  font-size: 0.875rem;
  font-weight: 500;
}

.control-section input[type="range"] {
  width: 100%;
  height: 6px;
  background: rgba(255, 255, 255, 0.1);
  border-radius: 3px;
  outline: none;
  -webkit-appearance: none;
}

.control-section input[type="range"]::-webkit-slider-thumb {
  -webkit-appearance: none;
  appearance: none;
  width: 18px;
  height: 18px;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  cursor: pointer;
  border-radius: 50%;
  box-shadow: 0 2px 8px rgba(102, 126, 234, 0.4);
}

.control-section input[type="range"]::-moz-range-thumb {
  width: 18px;
  height: 18px;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  cursor: pointer;
  border-radius: 50%;
  border: none;
  box-shadow: 0 2px 8px rgba(102, 126, 234, 0.4);
}

.speed-presets {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 0.5rem;
  margin-top: 0.75rem;
}

.preset-btn {
  padding: 0.5rem;
  background: rgba(255, 255, 255, 0.1);
  border: 1px solid rgba(255, 255, 255, 0.2);
  border-radius: 0.5rem;
  color: #ffffff;
  font-size: 0.75rem;
  cursor: pointer;
  transition: all 0.2s;
  font-weight: 500;
}

.preset-btn:hover {
  background: rgba(102, 126, 234, 0.3);
  border-color: #667eea;
}

.preset-btn:active {
  transform: scale(0.95);
}

.checkbox-label {
  display: flex;
  align-items: center;
  gap: 0.5rem;
  margin-top: 0.75rem;
  cursor: pointer;
}

.checkbox-label input[type="checkbox"] {
  width: 18px;
  height: 18px;
  cursor: pointer;
}

.save-btn, .reset-btn {
  width: 100%;
  padding: 0.75rem;
  border: none;
  border-radius: 0.5rem;
  font-weight: 600;
  font-size: 0.875rem;
  cursor: pointer;
  transition: all 0.2s;
  margin-bottom: 0.5rem;
}

.save-btn {
  background: linear-gradient(135deg, #10b981 0%, #059669 100%);
  color: white;
}

.save-btn:hover {
  transform: translateY(-2px);
  box-shadow: 0 4px 12px rgba(16, 185, 129, 0.4);
}

.reset-btn {
  background: rgba(239, 68, 68, 0.2);
  color: #ef4444;
  border: 1px solid rgba(239, 68, 68, 0.4);
}

.reset-btn:hover {
  background: rgba(239, 68, 68, 0.3);
  border-color: #ef4444;
}

.settings-status {
  padding: 0.75rem;
  border-radius: 0.5rem;
  text-align: center;
  font-size: 0.875rem;
  font-weight: 500;
}

.settings-status.saving {
  background: rgba(59, 130, 246, 0.2);
  color: #3b82f6;
  border: 1px solid rgba(59, 130, 246, 0.4);
}

.settings-status.success {
  background: rgba(16, 185, 129, 0.2);
  color: #10b981;
  border: 1px solid rgba(16, 185, 129, 0.4);
}

.settings-status.error {
  background: rgba(239, 68, 68, 0.2);
  color: #ef4444;
  border: 1px solid rgba(239, 68, 68, 0.4);
}

/* Control Section Headers */
.control-section-header {
  margin: 1.5rem 0 0.75rem 0;
  padding: 0.75rem;
  background: linear-gradient(135deg, rgba(102, 126, 234, 0.2), rgba(118, 75, 162, 0.2));
  border-left: 3px solid #667eea;
  border-radius: 0.5rem;
}

.control-section-header:first-child {
  margin-top: 0;
}

.control-section-header h4 {
  margin: 0;
  color: #ffffff;
  font-size: 0.9rem;
  font-weight: 600;
  text-transform: uppercase;
  letter-spacing: 0.05em;
}

/* Debugger Panel */
.debug-info-panel {
  background: rgba(0, 0, 0, 0.3);
  border-radius: 0.5rem;
  padding: 0.75rem;
  border: 1px solid rgba(102, 126, 234, 0.2);
}

.debug-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 0.5rem;
  margin-bottom: 0.5rem;
  background: rgba(255, 255, 255, 0.03);
  border-radius: 0.25rem;
  transition: background 0.2s;
}

.debug-item:last-child {
  margin-bottom: 0;
}

.debug-item:hover {
  background: rgba(255, 255, 255, 0.05);
}

.debug-label {
  color: #9ca3af;
  font-size: 0.85rem;
  font-weight: 500;
  font-family: monospace;
}

.debug-value {
  color: #10b981;
  font-size: 0.85rem;
  font-weight: 600;
  font-family: monospace;
  padding: 0.25rem 0.5rem;
  background: rgba(16, 185, 129, 0.1);
  border-radius: 0.25rem;
}

.debug-value.warning {
  color: #f59e0b;
  background: rgba(245, 158, 11, 0.1);
}

.debug-value.error {
  color: #ef4444;
  background: rgba(239, 68, 68, 0.1);
}

/* Side Panel - Fixed Bottom Right Info Pane */
.side-panel {
  position: fixed;
  right: 20px;
  bottom: 50px;
  width: 350px;
  max-height: 60vh;
  background: rgba(10, 14, 26, 0.85);
  backdrop-filter: blur(10px);
  border: 1px solid rgba(102, 126, 234, 0.3);
  border-radius: 0.75rem;
  overflow-y: auto;
  padding: 1rem;
  z-index: 100;
  box-shadow: 0 10px 40px rgba(0, 0, 0, 0.5);
  display: none;
}

.side-panel.visible {
  display: block;
  animation: slideInUp 0.3s ease-out;
}

@keyframes slideInUp {
  from {
    opacity: 0;
    transform: translateY(20px);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.panel-section {
  margin-bottom: 1.5rem;
  background: rgba(0, 0, 0, 0.3);
  border-radius: 0.5rem;
  padding: 1rem;
  border: 1px solid rgba(255, 255, 255, 0.1);
}

.panel-section h3 {
  margin: 0 0 1rem 0;
  color: #667eea;
  font-size: 1rem;
  text-transform: uppercase;
  letter-spacing: 0.05em;
  font-family: monospace;
}

/* Stat List */
.stat-list {
  display: flex;
  flex-direction: column;
  gap: 0.5rem;
}

.stat-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 0.5rem;
  background: rgba(255, 255, 255, 0.05);
  border-radius: 0.25rem;
}

.stat-label {
  color: #9ca3af;
  font-size: 0.85rem;
  font-family: monospace;
}

.stat-value {
  color: #ffffff;
  font-weight: 600;
  font-family: monospace;
}

/* Territory Bars */
.territory-bar {
  margin-bottom: 0.75rem;
}

.territory-name {
  color: #d1d5db;
  font-size: 0.85rem;
  margin-bottom: 0.25rem;
  font-family: monospace;
}

.territory-progress {
  width: 100%;
  height: 20px;
  background: rgba(0, 0, 0, 0.5);
  border-radius: 0.25rem;
  overflow: hidden;
  position: relative;
}

.territory-fill {
  height: 100%;
  transition: width 0.5s ease;
  display: flex;
  align-items: center;
  justify-content: flex-end;
  padding-right: 0.5rem;
}

.territory-value {
  color: #9ca3af;
  font-size: 0.75rem;
  margin-top: 0.25rem;
  font-family: monospace;
}

/* Zone Info */
.zone-detail {
  color: #d1d5db;
  font-family: monospace;
  font-size: 0.85rem;
}

.zone-detail strong {
  display: block;
  color: #ffffff;
  font-size: 1rem;
  margin-bottom: 0.5rem;
}

.zone-meta {
  display: flex;
  justify-content: space-between;
  margin-bottom: 0.25rem;
  color: #9ca3af;
}

.zone-controller {
  margin: 0.5rem 0;
  padding: 0.5rem;
  background: rgba(0, 0, 0, 0.3);
  border-radius: 0.25rem;
  font-weight: 600;
}

.zone-stats {
  margin: 0.5rem 0;
  padding: 0.5rem;
  background: rgba(0, 0, 0, 0.3);
  border-radius: 0.25rem;
}

.zone-stats div {
  margin-bottom: 0.25rem;
}

.zone-coords {
  margin-top: 0.5rem;
  font-size: 0.75rem;
  color: #6b7280;
}

/* Events List */
.events-list {
  max-height: 300px;
  overflow-y: auto;
}

.event-item {
  padding: 0.75rem;
  margin-bottom: 0.5rem;
  background: rgba(0, 0, 0, 0.3);
  border-radius: 0.25rem;
  border-left: 3px solid #6b7280;
}

.event-item.severity-high {
  border-left-color: #ef4444;
}

.event-item.severity-medium {
  border-left-color: #f59e0b;
}

.event-item.severity-low {
  border-left-color: #10b981;
}

.event-type {
  color: #667eea;
  font-size: 0.75rem;
  text-transform: uppercase;
  letter-spacing: 0.05em;
  margin-bottom: 0.25rem;
  font-family: monospace;
}

.event-message {
  color: #d1d5db;
  font-size: 0.85rem;
  margin-bottom: 0.25rem;
  font-family: monospace;
}

.event-time {
  color: #6b7280;
  font-size: 0.75rem;
  font-family: monospace;
}

.no-events {
  color: #6b7280;
  font-style: italic;
  text-align: center;
  font-family: monospace;
}

/* Scrollbar */
.side-panel::-webkit-scrollbar,
.events-list::-webkit-scrollbar {
  width: 6px;
}

.side-panel::-webkit-scrollbar-track,
.events-list::-webkit-scrollbar-track {
  background: rgba(0, 0, 0, 0.3);
}

.side-panel::-webkit-scrollbar-thumb,
.events-list::-webkit-scrollbar-thumb {
  background: rgba(102, 126, 234, 0.5);
  border-radius: 3px;
}

.side-panel::-webkit-scrollbar-thumb:hover,
.events-list::-webkit-scrollbar-thumb:hover {
  background: rgba(102, 126, 234, 0.7);
}

/* Zoom Controls */
.zoom-controls {
  display: flex;
  flex-direction: column;
  gap: 0.25rem;
}

.zoom-btn {
  padding: 0.5rem;
  width: 40px;
  height: 40px;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 1.2rem;
}

/* Asset Selection Menu */
.asset-selection-menu {
  position: fixed;
  background: rgba(17, 24, 39, 0.98);
  border: 2px solid #667eea;
  border-radius: 12px;
  padding: 0;
  min-width: 300px;
  max-width: 400px;
  max-height: 400px;
  overflow: hidden;
  z-index: 10000;
  box-shadow: 0 10px 40px rgba(0, 0, 0, 0.5), 0 0 20px rgba(102, 126, 234, 0.3);
  font-family: monospace;
}

.selection-menu-header {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  padding: 1rem;
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-bottom: 2px solid #667eea;
}

.selection-menu-header h3 {
  margin: 0;
  color: #ffffff;
  font-size: 1rem;
  text-transform: uppercase;
  letter-spacing: 0.1em;
}

.close-menu-btn {
  background: rgba(255, 255, 255, 0.2);
  border: 1px solid rgba(255, 255, 255, 0.3);
  color: #ffffff;
  width: 28px;
  height: 28px;
  border-radius: 50%;
  cursor: pointer;
  font-size: 1.2rem;
  line-height: 1;
  padding: 0;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.2s;
}

.close-menu-btn:hover {
  background: rgba(255, 255, 255, 0.3);
  transform: scale(1.1);
}

.selection-menu-list {
  max-height: 350px;
  overflow-y: auto;
}

.selection-menu-item {
  display: flex;
  align-items: center;
  padding: 1rem;
  gap: 1rem;
  cursor: pointer;
  border-bottom: 1px solid rgba(102, 126, 234, 0.2);
  transition: all 0.2s;
}

.selection-menu-item:hover {
  background: rgba(102, 126, 234, 0.2);
  transform: translateX(5px);
}

.selection-menu-item:last-child {
  border-bottom: none;
}

.asset-icon {
  font-size: 2rem;
  flex-shrink: 0;
  width: 40px;
  text-align: center;
}

.asset-details {
  flex: 1;
}

.asset-title {
  color: #ffffff;
  font-weight: 600;
  font-size: 0.95rem;
  margin-bottom: 0.25rem;
}

.asset-type {
  color: #9ca3af;
  font-size: 0.75rem;
  text-transform: capitalize;
}

.asset-votes {
  color: #fbbf24;
  font-size: 0.85rem;
  white-space: nowrap;
}

/* Responsive */
@media (max-width: 768px) {
  .asset-selection-menu {
    min-width: 280px;
    max-width: 90vw;
  }

  .selection-menu-item {
    padding: 0.75rem;
  }

  .asset-icon {
    font-size: 1.5rem;
    width: 30px;
  }
}

@media (max-width: 768px) {
  .side-panel {
    width: calc(100% - 40px);
    max-width: 400px;
    right: 20px;
    left: 20px;
    bottom: 20px;
    max-height: 50vh;
  }

  .map-controls {
    top: 70px;
    left: 10px;
    gap: 0.25rem;
  }

  .control-btn {
    padding: 0.4rem 0.75rem;
    font-size: 0.75rem;
  }

  .zoom-btn {
    width: 36px;
    height: 36px;
    font-size: 1rem;
  }
}

/* Enhanced Info Pane Styles */
.asset-header {
  display: flex;
  align-items: center;
  gap: 1rem;
  margin-bottom: 1rem;
  padding-bottom: 1rem;
  border-bottom: 1px solid rgba(255, 255, 255, 0.1);
}

.asset-icon-large {
  font-size: 3rem;
  line-height: 1;
}

.asset-title-section {
  flex: 1;
}

.asset-title {
  font-size: 1.5rem;
  margin: 0 0 0.5rem 0;
  color: #ffffff;
  font-weight: bold;
}

.asset-badges {
  display: flex;
  flex-wrap: wrap;
  gap: 0.5rem;
}

.badge {
  padding: 0.25rem 0.75rem;
  border-radius: 1rem;
  font-size: 0.75rem;
  font-weight: 600;
  text-transform: uppercase;
  letter-spacing: 0.05em;
}

.badge-galaxy {
  background: linear-gradient(135deg, #667eea, #764ba2);
  color: #ffffff;
}

.badge-orbital {
  background: linear-gradient(135deg, #10b981, #059669);
  color: #ffffff;
}

.badge-anomaly {
  background: linear-gradient(135deg, #f59e0b, #d97706);
  color: #ffffff;
}

.badge-subtype {
  background: rgba(255, 255, 255, 0.1);
  color: #d1d5db;
  border: 1px solid rgba(255, 255, 255, 0.2);
}

.badge-common {
  background: rgba(156, 163, 175, 0.2);
  color: #9ca3af;
}

.badge-uncommon {
  background: rgba(16, 185, 129, 0.2);
  color: #10b981;
}

.badge-rare {
  background: rgba(59, 130, 246, 0.2);
  color: #3b82f6;
}

.badge-epic {
  background: rgba(168, 85, 247, 0.2);
  color: #a855f7;
}

.badge-legendary {
  background: linear-gradient(135deg, #f59e0b, #ef4444);
  color: #ffffff;
}

.badge-hub {
  background: linear-gradient(135deg, #fbbf24, #f59e0b);
  color: #ffffff;
}

.asset-meta-bar {
  display: flex;
  flex-wrap: wrap;
  gap: 1rem;
  padding: 0.75rem;
  background: rgba(0, 0, 0, 0.3);
  border-radius: 0.5rem;
  margin-bottom: 1rem;
}

.meta-item {
  display: flex;
  align-items: center;
  gap: 0.5rem;
  color: #d1d5db;
  font-size: 0.85rem;
}

.meta-icon {
  font-size: 1rem;
}

.meta-value {
  font-weight: 500;
}

.asset-description {
  color: #d1d5db;
  line-height: 1.6;
  margin: 0;
  font-size: 0.95rem;
}

.info-section {
  margin: 1.5rem 0;
  padding: 1rem;
  background: rgba(0, 0, 0, 0.2);
  border-radius: 0.5rem;
  border: 1px solid rgba(255, 255, 255, 0.05);
}

.info-section h4 {
  margin: 0 0 1rem 0;
  color: #667eea;
  font-size: 1rem;
  font-weight: 600;
  text-transform: uppercase;
  letter-spacing: 0.05em;
}

.info-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 0.75rem;
}

.info-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 0.5rem;
  background: rgba(255, 255, 255, 0.03);
  border-radius: 0.25rem;
}

.info-item.full-width {
  grid-column: 1 / -1;
}

.info-label {
  color: #9ca3af;
  font-size: 0.85rem;
  font-weight: 500;
}

.info-value {
  color: #ffffff;
  font-size: 0.9rem;
  font-weight: 600;
  font-family: monospace;
}

.string-domain {
  background: linear-gradient(135deg, #667eea, #764ba2);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
  font-weight: bold;
}

.effects-list {
  display: flex;
  flex-direction: column;
  gap: 0.75rem;
}

.effect-item {
  padding: 0.75rem;
  background: rgba(102, 126, 234, 0.1);
  border-left: 3px solid #667eea;
  border-radius: 0.25rem;
}

.effect-item strong {
  color: #667eea;
  display: block;
  margin-bottom: 0.25rem;
  text-transform: uppercase;
  font-size: 0.85rem;
}

.effect-item p {
  margin: 0.5rem 0 0 0;
  color: #d1d5db;
  font-size: 0.85rem;
}

.effect-value {
  display: inline-block;
  margin-top: 0.5rem;
  padding: 0.25rem 0.5rem;
  background: rgba(16, 185, 129, 0.2);
  color: #10b981;
  border-radius: 0.25rem;
  font-size: 0.75rem;
  font-weight: 600;
}

.effect-tag {
  display: inline-block;
  margin-top: 0.5rem;
  padding: 0.25rem 0.5rem;
  background: rgba(168, 85, 247, 0.2);
  color: #a855f7;
  border-radius: 0.25rem;
  font-size: 0.75rem;
  font-weight: 600;
  margin-left: 0.5rem;
}

.lore-text {
  color: #d1d5db;
  line-height: 1.6;
  margin: 0.5rem 0;
  font-size: 0.9rem;
  font-style: italic;
}

.flavor-text {
  color: #fbbf24;
  line-height: 1.6;
  margin: 0.5rem 0;
  font-size: 0.9rem;
  font-style: italic;
  padding: 0.75rem;
  background: rgba(251, 191, 36, 0.05);
  border-left: 3px solid #fbbf24;
  border-radius: 0.25rem;
}

.tags-container {
  display: flex;
  flex-wrap: wrap;
  gap: 0.5rem;
}

.tag {
  padding: 0.25rem 0.75rem;
  background: rgba(255, 255, 255, 0.05);
  color: #9ca3af;
  border-radius: 1rem;
  font-size: 0.75rem;
  border: 1px solid rgba(255, 255, 255, 0.1);
}

.creator-info {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 0.75rem;
  background: rgba(255, 255, 255, 0.03);
  border-radius: 0.25rem;
}

/* Mobile responsive for enhanced info pane */
@media (max-width: 768px) {
  .asset-header {
    flex-direction: column;
    align-items: flex-start;
  }

  .asset-icon-large {
    font-size: 2.5rem;
  }

  .asset-title {
    font-size: 1.25rem;
  }

  .info-grid {
    grid-template-columns: 1fr;
  }

  .info-section {
    padding: 0.75rem;
    margin: 1rem 0;
  }

  .asset-meta-bar {
    flex-direction: column;
    gap: 0.5rem;
  }
}

/* Travel Action Bar */
.travel-action-bar {
  margin: 1rem 0;
  padding: 0;
}

.travel-btn {
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 1rem 1.5rem;
  background: linear-gradient(135deg, #10b981, #059669);
  border: none;
  border-radius: 0.75rem;
  color: #ffffff;
  font-size: 1rem;
  font-weight: 600;
  cursor: pointer;
  transition: all 0.3s ease;
  box-shadow: 0 4px 15px rgba(16, 185, 129, 0.3);
}

.travel-btn:hover {
  background: linear-gradient(135deg, #059669, #047857);
  transform: translateY(-2px);
  box-shadow: 0 6px 20px rgba(16, 185, 129, 0.5);
}

.travel-btn:active {
  transform: translateY(0);
}

.travel-icon {
  font-size: 1.5rem;
  line-height: 1;
}

.travel-text {
  flex: 1;
  text-align: center;
  font-size: 1.1rem;
}

.travel-distance {
  font-size: 0.85rem;
  opacity: 0.9;
  font-weight: 500;
  padding: 0.25rem 0.75rem;
  background: rgba(255, 255, 255, 0.2);
  border-radius: 1rem;
}

/* Disabled travel state */
.travel-action-bar.disabled {
  opacity: 0.6;
}

.travel-unavailable {
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 1rem 1.5rem;
  background: rgba(239, 68, 68, 0.2);
  border: 1px solid rgba(239, 68, 68, 0.3);
  border-radius: 0.75rem;
  color: #fca5a5;
  font-size: 1rem;
  font-weight: 600;
}

.travel-unavailable .travel-icon {
  font-size: 1.5rem;
  color: #ef4444;
}

.travel-unavailable .travel-text {
  flex: 1;
  text-align: center;
  color: #fca5a5;
}

.travel-unavailable .travel-distance {
  font-size: 0.85rem;
  color: #fca5a5;
  padding: 0.25rem 0.75rem;
  background: rgba(239, 68, 68, 0.2);
  border-radius: 1rem;
}

/* Travel Notification */
.travel-notification {
  position: fixed;
  top: 20px;
  left: 50%;
  transform: translateX(-50%) translateY(-100px);
  background: linear-gradient(135deg, #10b981, #059669);
  color: #ffffff;
  padding: 1rem 2rem;
  border-radius: 0.75rem;
  font-weight: 600;
  font-size: 1rem;
  box-shadow: 0 10px 30px rgba(16, 185, 129, 0.4);
  z-index: 10000;
  opacity: 0;
  transition: all 0.3s ease;
}

.travel-notification.show {
  transform: translateX(-50%) translateY(0);
  opacity: 1;
}

/* Mobile responsive */
@media (max-width: 768px) {
  .travel-btn {
    padding: 0.875rem 1.25rem;
  }

  .travel-text {
    font-size: 1rem;
  }

  .travel-distance {
    font-size: 0.75rem;
  }

  .travel-notification {
    padding: 0.875rem 1.5rem;
    font-size: 0.9rem;
  }
}

/* Travel Path Info */
.travel-path-info {
  margin-top: 0.75rem;
  padding: 0.75rem;
  background: rgba(0, 0, 0, 0.3);
  border-radius: 0.5rem;
  border-left: 3px solid #10b981;
}

.path-label {
  display: block;
  font-size: 0.75rem;
  color: #9ca3af;
  text-transform: uppercase;
  letter-spacing: 0.05em;
  margin-bottom: 0.5rem;
  font-weight: 600;
}

.path-route {
  display: block;
  color: #d1d5db;
  font-size: 0.85rem;
  line-height: 1.6;
  word-wrap: break-word;
}

.travel-hint {
  margin-top: 0.75rem;
  padding: 0.75rem;
  background: rgba(239, 68, 68, 0.1);
  border-radius: 0.5rem;
  border-left: 3px solid #ef4444;
  font-size: 0.85rem;
  color: #fca5a5;
  line-height: 1.5;
}

/* Exploration hint */
.exploration-hint {
  margin-top: 0.75rem;
  padding: 0.75rem;
  background: rgba(138, 79, 255, 0.1);
  border-radius: 0.5rem;
  border-left: 3px solid #8a4fff;
  font-size: 0.85rem;
  color: #b090ff;
  line-height: 1.5;
  display: flex;
  align-items: center;
  gap: 0.5rem;
}

.hint-icon {
  font-size: 1.1rem;
  flex-shrink: 0;
}

.hint-text {
  flex: 1;
}

/* Mobile responsive for path */
@media (max-width: 768px) {
  .path-route {
    font-size: 0.75rem;
  }

  .travel-path-info {
    padding: 0.625rem;
  }

  .travel-hint {
    font-size: 0.8rem;
  }

  .exploration-hint {
    font-size: 0.8rem;
  }
}

/* ========================================
   OVERLAY MENU SYSTEM
   ======================================== */

/* Overlay Menu Container */
.overlay-menu {
  position: fixed;
  top: 60px;
  right: -320px;
  width: 300px;
  bottom: 0;
  background: rgba(10, 10, 26, 0.98);
  backdrop-filter: blur(20px);
  border-left: 1px solid rgba(138, 79, 255, 0.3);
  box-shadow: -5px 0 30px rgba(0, 0, 0, 0.5);
  z-index: 1000;
  transition: right 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  display: flex;
  flex-direction: column;
}

.overlay-menu.active {
  right: 0;
}

/* Menu Header */
.overlay-menu-header {
  padding: 20px;
  border-bottom: 1px solid rgba(138, 79, 255, 0.2);
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.overlay-menu-title {
  font-family: 'Orbitron', monospace;
  font-size: 1.3em;
  margin: 0;
  background: linear-gradient(135deg, #8a4fff 0%, #4a9eff 100%);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
}

.overlay-menu-close {
  background: rgba(138, 79, 255, 0.1);
  border: 1px solid rgba(138, 79, 255, 0.3);
  color: #8a4fff;
  width: 32px;
  height: 32px;
  border-radius: 6px;
  font-size: 1.2em;
  cursor: pointer;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.2s ease;
}

.overlay-menu-close:hover {
  background: rgba(138, 79, 255, 0.2);
  border-color: #8a4fff;
  transform: scale(1.05);
}

/* Menu Navigation */
.overlay-menu-nav {
  flex: 1;
  overflow-y: auto;
  padding: 10px 0;
}

/* Menu Items */
.overlay-menu-item {
  display: flex;
  align-items: center;
  gap: 15px;
  padding: 15px 20px;
  color: #b0b0c0;
  text-decoration: none;
  transition: all 0.2s ease;
  border-left: 3px solid transparent;
  position: relative;
  overflow: hidden;
}

.overlay-menu-item::before {
  content: '';
  position: absolute;
  left: 0;
  top: 0;
  bottom: 0;
  width: 0;
  background: linear-gradient(90deg, rgba(138, 79, 255, 0.2), transparent);
  transition: width 0.3s ease;
}

.overlay-menu-item:hover {
  background: rgba(138, 79, 255, 0.1);
  color: #fff;
  border-left-color: #8a4fff;
}

.overlay-menu-item:hover::before {
  width: 100%;
}

.menu-item-icon {
  font-size: 1.4em;
  width: 30px;
  text-align: center;
  flex-shrink: 0;
  z-index: 1;
}

.menu-item-label {
  flex: 1;
  font-size: 1em;
  font-weight: 500;
  z-index: 1;
}

.menu-item-arrow {
  font-size: 1.2em;
  color: #6a6a8a;
  opacity: 0;
  transform: translateX(-10px);
  transition: all 0.2s ease;
  z-index: 1;
}

.overlay-menu-item:hover .menu-item-arrow {
  opacity: 1;
  transform: translateX(0);
}

/* Menu Divider */
.overlay-menu-divider {
  height: 1px;
  background: rgba(138, 79, 255, 0.2);
  margin: 15px 20px;
}

/* Section Title */
.overlay-menu-section-title {
  padding: 10px 20px;
  color: #6a6a8a;
  font-size: 0.85em;
  font-weight: 600;
  text-transform: uppercase;
  letter-spacing: 1px;
}

/* Admin Item Styling */
.overlay-menu-item.admin-item {
  background: rgba(239, 68, 68, 0.05);
}

.overlay-menu-item.admin-item:hover {
  background: rgba(239, 68, 68, 0.15);
  border-left-color: #ef4444;
}

/* Overlay Backdrop */
.overlay-backdrop {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.7);
  backdrop-filter: blur(3px);
  z-index: 999;
  opacity: 0;
  pointer-events: none;
  transition: opacity 0.3s ease;
}

.overlay-backdrop.active {
  opacity: 1;
  pointer-events: all;
}

/* Menu Toggle Button */
.control-btn.menu-btn {
  background: rgba(138, 79, 255, 0.2);
  border-color: rgba(138, 79, 255, 0.4);
  color: #8a4fff;
  font-size: 1.3em;
}

.control-btn.menu-btn:hover {
  background: rgba(138, 79, 255, 0.3);
  border-color: #8a4fff;
  box-shadow: 0 0 15px rgba(138, 79, 255, 0.4);
}

.control-btn.menu-btn.active {
  background: rgba(138, 79, 255, 0.4);
  border-color: #8a4fff;
  box-shadow: 0 0 20px rgba(138, 79, 255, 0.6);
}

/* Scrollbar for menu */
.overlay-menu-nav::-webkit-scrollbar {
  width: 6px;
}

.overlay-menu-nav::-webkit-scrollbar-track {
  background: rgba(0, 0, 0, 0.2);
}

.overlay-menu-nav::-webkit-scrollbar-thumb {
  background: rgba(138, 79, 255, 0.3);
  border-radius: 3px;
}

.overlay-menu-nav::-webkit-scrollbar-thumb:hover {
  background: rgba(138, 79, 255, 0.5);
}

/* Mobile Responsive */
@media (max-width: 768px) {
  .overlay-menu {
    width: 280px;
    right: -280px;
  }
  
  .overlay-menu-title {
    font-size: 1.1em;
  }
  
  .menu-item-label {
    font-size: 0.95em;
  }
}

/* ========================================
   PWA MODAL SYSTEM
   ======================================== */

/* PWA Modal Container */
.pwa-modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(10, 10, 26, 0.98);
  z-index: 2000;
  display: flex;
  flex-direction: column;
  transform: translateY(100%);
  transition: transform 0.3s cubic-bezier(0.4, 0, 0.2, 1);
}

.pwa-modal.active {
  transform: translateY(0);
}

/* PWA Modal Header */
.pwa-modal-header {
  display: flex;
  align-items: center;
  gap: 15px;
  padding: 15px 20px;
  background: rgba(15, 15, 30, 0.95);
  border-bottom: 1px solid rgba(138, 79, 255, 0.3);
  min-height: 60px;
}

.pwa-modal-back {
  background: rgba(138, 79, 255, 0.1);
  border: 1px solid rgba(138, 79, 255, 0.3);
  color: #8a4fff;
  padding: 8px 16px;
  border-radius: 6px;
  font-size: 0.95em;
  cursor: pointer;
  transition: all 0.2s ease;
  font-weight: 500;
}

.pwa-modal-back:hover {
  background: rgba(138, 79, 255, 0.2);
  border-color: #8a4fff;
  transform: translateX(-3px);
}

.pwa-modal-title {
  flex: 1;
  margin: 0;
  font-family: 'Orbitron', monospace;
  font-size: 1.3em;
  background: linear-gradient(135deg, #8a4fff 0%, #4a9eff 100%);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
}

.pwa-modal-close {
  background: rgba(138, 79, 255, 0.1);
  border: 1px solid rgba(138, 79, 255, 0.3);
  color: #8a4fff;
  width: 36px;
  height: 36px;
  border-radius: 6px;
  font-size: 1.3em;
  cursor: pointer;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.2s ease;
}

.pwa-modal-close:hover {
  background: rgba(138, 79, 255, 0.2);
  border-color: #8a4fff;
  transform: scale(1.05);
}

/* PWA Modal Content */
.pwa-modal-content {
  flex: 1;
  overflow-y: auto;
  overflow-x: hidden;
  padding: 20px;
  background: linear-gradient(135deg, #0a0a1a 0%, #1a0a2a 100%);
}

/* Loading State */
.pwa-modal-loading {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  min-height: 300px;
  color: #8a4fff;
}

.pwa-modal-loading p {
  margin-top: 20px;
  font-size: 1.1em;
  color: #b0b0c0;
}

/* Loading Spinner */
.loading-spinner {
  width: 50px;
  height: 50px;
  border: 4px solid rgba(138, 79, 255, 0.2);
  border-top-color: #8a4fff;
  border-radius: 50%;
  animation: spin 1s linear infinite;
}

@keyframes spin {
  to { transform: rotate(360deg); }
}

/* Error State */
.pwa-modal-error {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  min-height: 300px;
  text-align: center;
  padding: 40px;
}

.pwa-modal-error .error-icon {
  font-size: 4em;
  margin-bottom: 20px;
}

.pwa-modal-error h3 {
  color: #ef4444;
  margin: 0 0 15px 0;
  font-size: 1.5em;
}

.pwa-modal-error p {
  color: #b0b0c0;
  margin: 0 0 25px 0;
  font-size: 1.05em;
}

.pwa-modal-error .btn {
  padding: 12px 24px;
  background: linear-gradient(135deg, #8a4fff 0%, #4a9eff 100%);
  color: white;
  border: none;
  border-radius: 6px;
  font-size: 1em;
  font-weight: 600;
  cursor: pointer;
  transition: transform 0.2s ease;
}

.pwa-modal-error .btn:hover {
  transform: translateY(-2px);
}

/* Scrollbar for modal content */
.pwa-modal-content::-webkit-scrollbar {
  width: 8px;
}

.pwa-modal-content::-webkit-scrollbar-track {
  background: rgba(0, 0, 0, 0.2);
}

.pwa-modal-content::-webkit-scrollbar-thumb {
  background: rgba(138, 79, 255, 0.4);
  border-radius: 4px;
}

.pwa-modal-content::-webkit-scrollbar-thumb:hover {
  background: rgba(138, 79, 255, 0.6);
}

/* Mobile Responsive */
@media (max-width: 768px) {
  .pwa-modal-header {
    padding: 12px 15px;
    min-height: 56px;
  }

  .pwa-modal-title {
    font-size: 1.1em;
  }

  .pwa-modal-back {
    padding: 6px 12px;
    font-size: 0.9em;
  }

  .pwa-modal-content {
    padding: 15px;
  }
}
