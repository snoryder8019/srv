<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Auth Test</title>
  <style>
    body {
      font-family: Arial, sans-serif;
      max-width: 800px;
      margin: 50px auto;
      padding: 20px;
      background: #f5f5f5;
    }
    .box {
      background: white;
      padding: 30px;
      border-radius: 8px;
      box-shadow: 0 2px 8px rgba(0,0,0,0.1);
      margin-bottom: 20px;
    }
    .success {
      border-left: 4px solid #10b981;
    }
    .error {
      border-left: 4px solid #ef4444;
    }
    .info {
      border-left: 4px solid #3b82f6;
    }
    pre {
      background: #f0f0f0;
      padding: 15px;
      border-radius: 4px;
      overflow-x: auto;
    }
    h1 { margin-top: 0; }
    h2 { color: #333; }
  </style>
</head>
<body>
  <h1>Authentication Test Page</h1>

  <div class="box <%= user ? 'success' : 'error' %>">
    <h2>Server-Side Authentication Status</h2>
    <% if (user) { %>
      <p><strong>✓ User is authenticated!</strong></p>
      <pre>User ID: <%= user._id %>
Username: <%= user.username %>
Email: <%= user.email || 'N/A' %></pre>
    <% } else { %>
      <p><strong>✗ User is NOT authenticated</strong></p>
      <p>Please <a href="/auth">log in here</a></p>
    <% } %>
  </div>

  <div class="box info">
    <h2>JavaScript Variables</h2>
    <p>These values are set by the inline script below:</p>
    <div id="jsAuth"></div>
  </div>

  <div class="box info">
    <h2>Session Info</h2>
    <p>Session ID: <%= typeof sessionID !== 'undefined' ? sessionID : 'N/A' %></p>
  </div>

  <script>
    // This is what should be set on the voting page
    <% if (user) { %>
      window.USER_ID = "<%= user._id %>";
      window.USERNAME = "<%= user.username %>";
    <% } else { %>
      window.USER_ID = null;
      window.USERNAME = null;
    <% } %>

    var userIdText = window.USER_ID || 'null';
    var usernameText = window.USERNAME || 'null';
    var userIdType = typeof window.USER_ID;
    var usernameType = typeof window.USERNAME;

    document.getElementById('jsAuth').innerHTML = '<pre>window.USER_ID: ' + userIdText + '\nwindow.USERNAME: ' + usernameText + '\nType of USER_ID: ' + userIdType + '\nType of USERNAME: ' + usernameType + '</pre>';

    console.log('USER_ID:', window.USER_ID);
    console.log('USERNAME:', window.USERNAME);
  </script>
</body>
</html>
