  "programmaticAdvisories": {
    "CRITICAL_DO_NOT_USE": {
      "killall_node": {
        "severity": "CRITICAL",
        "command": "killall node",
        "reason": "This command kills ALL Node.js processes system-wide, including all 11+ services",
        "impact": "Complete service outage across all applications",
        "alternatives": [
          "Use 'tmux kill-session -t <session-name>' to stop individual services",
          "Use 'tmux send-keys -t <session-name> C-c' to gracefully stop a service",
          "Use 'kill <PID>' to target specific process after getting PID from 'ps aux | grep node'",
          "Use '/srv/service-control.sh stop <service-name>' for controlled shutdown"
        ],
        "allowed_contexts": ["NEVER - This command should never be used in production"]
      },
      "pm2_commands": {
        "severity": "HIGH",
        "commands": ["pm2 start", "pm2 restart", "pm2 stop", "pm2 delete", "pm2 save"],
        "reason": "This infrastructure uses tmux for process management, not PM2",
        "impact": "PM2 is not installed or configured; commands will fail or create conflicts",
        "alternatives": [
          "Use tmux sessions for all process management",
          "Use '/srv/start-all-services.sh' to start all services",
          "Use 'tmux attach -t <session-name>' to view service logs",
          "Use 'tmux kill-session -t <session-name>' to stop services"
        ]
      },
      "pkill_without_flags": {
        "severity": "HIGH",
        "command": "pkill node",
        "reason": "Kills all node processes without discrimination",
        "impact": "Complete service outage",
        "alternative": "Use 'pkill -f <specific-service-path>' with full path for targeting"
      }
    },

    "REQUIRED_PRACTICES": {
      "tmux_usage": {
        "primary_tool": "tmux",
        "philosophy": "Each service runs in its own named tmux session for isolation and management",
        "session_naming": {
          "convention": "<service-name>",
          "examples": ["madladslab", "ps", "game-state", "acm", "graffitiTV"]
        },
        "essential_commands": {
          "list_sessions": "tmux ls",
          "attach_to_session": "tmux attach -t <session-name>",
          "detach_from_session": "Ctrl+b, then d",
          "kill_session": "tmux kill-session -t <session-name>",
          "send_ctrl_c": "tmux send-keys -t <session-name> C-c",
          "capture_output": "tmux capture-pane -t <session-name> -p",
          "new_session": "tmux new-session -d -s <name> -c <directory> '<command>'"
        },
        "service_control": {
          "start_all": "/srv/start-all-services.sh",
          "start_one": "tmux new-session -d -s <name> -c /srv/<service> 'PORT=<port> npm start'",
          "stop_one": "tmux kill-session -t <session-name>",
          "restart_one": "tmux kill-session -t <name> && tmux new-session -d -s <name> -c /srv/<service> 'PORT=<port> npm start'",
          "view_logs": "tmux attach -t <session-name>",
          "check_status": "tmux ls | grep <session-name>"
        }
      },

      "process_investigation": {
        "safe_commands": [
          "ps aux | grep node - List all node processes",
          "lsof -i :<port> - Check what's using a specific port",
          "pgrep -f <service-path> - Find PID by service path",
          "tmux ls - List all active sessions",
          "netstat -tlnp | grep :<port> - Check port listeners"
        ],
        "workflow": [
          "1. Identify the service having issues",
          "2. Check if tmux session exists: tmux ls",
          "3. Attach to session to see logs: tmux attach -t <session>",
          "4. If needed, gracefully stop: tmux send-keys -t <session> C-c",
          "5. Wait for graceful shutdown (5-10 seconds)",
          "6. If still running, kill session: tmux kill-session -t <session>",
          "7. Restart using start script or manual tmux command"
        ]
      },

      "service_startup": {
        "automated": {
          "script": "/srv/start-all-services.sh",
          "description": "Starts all 11 services in tmux sessions with correct ports and directories",
          "behavior": "Kills existing sessions first, then creates new ones",
          "usage": "bash /srv/start-all-services.sh"
        },
        "manual": {
          "template": "tmux new-session -d -s <name> -c /srv/<dir> 'PORT=<port> npm start'",
          "example": "tmux new-session -d -s madladslab -c /srv/madladslab 'PORT=3000 npm start'",
          "important": "Always set PORT environment variable and working directory"
        }
      }
    },

