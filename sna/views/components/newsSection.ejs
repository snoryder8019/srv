<!-- News Section Component -->
<section class="news-section" id="<%= source.toLowerCase().replace(/\s/g, '-') %>-section">
  <h2 class="section-title">
    <%= source %>
    <span class="news-count">(<%= articles.length %> articles)</span>
  </h2>

  <% if (articles && articles.length > 0) { %>
    <div class="news-grid">
      <% articles.forEach(article => { %>
        <%- include('./newsCard.ejs', {
          title: article.title,
          url: article.url,
          image: article.image,
          source: article.source
        }) %>
      <% }) %>
    </div>
  <% } else { %>
    <p class="no-news">No articles available from <%= source %> at this time.</p>
  <% } %>
</section>
