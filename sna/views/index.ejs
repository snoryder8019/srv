<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Some News Article</title>
  <style>
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }

    body {
      font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, sans-serif;
      background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
      min-height: 100vh;
      padding: 20px;
    }

    .container {
      max-width: 1200px;
      margin: 0 auto;
      background: white;
      border-radius: 12px;
      box-shadow: 0 20px 60px rgba(0,0,0,0.3);
      padding: 40px;
    }

    @media (max-width: 768px) {
      .top-headlines-grid {
        grid-template-columns: 1fr;
      }

      .container {
        padding: 20px;
      }
    }

    h1 {
      color: #667eea;
      font-size: 2.5em;
      margin-bottom: 30px;
      text-align: center;
    }

    .auth-actions {
      display: flex;
      justify-content: center;
      gap: 15px;
      margin-bottom: 30px;
      padding-bottom: 20px;
      border-bottom: 2px solid #e0e0e0;
    }

    .auth-actions a {
      padding: 12px 24px;
      background: #667eea;
      color: white;
      text-decoration: none;
      border-radius: 6px;
      transition: all 0.3s;
      font-weight: 600;
    }

    .auth-actions a:hover {
      background: #764ba2;
      transform: translateY(-2px);
    }

    .headlines-section {
      margin-top: 30px;
    }

    .headlines-section h2 {
      color: #333;
      margin-bottom: 20px;
      font-size: 1.5em;
    }

    .top-headlines-grid {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
      gap: 20px;
      margin: 30px 0;
    }

    .headline-card {
      background: #f8f9fa;
      border-radius: 8px;
      border-top: 4px solid #667eea;
      transition: all 0.3s;
      position: relative;
      min-height: 200px;
      display: flex;
      flex-direction: column;
      overflow: hidden;
    }

    .headline-image {
      width: 100%;
      height: 180px;
      object-fit: cover;
      background: #e0e0e0;
    }

    .headline-content {
      padding: 20px;
      flex: 1;
      display: flex;
      flex-direction: column;
    }

    .headline-card.cnn { border-top-color: #cc0000; }
    .headline-card.fox { border-top-color: #003366; }
    .headline-card.bbc { border-top-color: #bb1919; }
    .headline-card.ap { border-top-color: #d71920; }
    .headline-card.reuters { border-top-color: #ff8000; }

    .headline-card:hover {
      background: #e9ecef;
      transform: translateY(-5px);
      box-shadow: 0 8px 16px rgba(0,0,0,0.1);
    }

    .headline-source {
      font-weight: bold;
      color: #667eea;
      font-size: 0.9em;
      text-transform: uppercase;
      letter-spacing: 1px;
      margin-bottom: 10px;
    }

    .headline-card.cnn .headline-source { color: #cc0000; }
    .headline-card.fox .headline-source { color: #003366; }
    .headline-card.bbc .headline-source { color: #bb1919; }
    .headline-card.ap .headline-source { color: #d71920; }
    .headline-card.reuters .headline-source { color: #ff8000; }

    .headline-title {
      flex: 1;
      color: #333;
      line-height: 1.5;
      margin-bottom: 10px;
    }

    .headline-title a {
      color: #333;
      text-decoration: none;
      transition: color 0.3s;
    }

    .headline-title a:hover {
      color: #667eea;
    }

    .no-headline {
      color: #999;
      font-style: italic;
      text-align: center;
    }

    .view-all {
      text-align: center;
      margin-top: 30px;
    }

    .view-all a {
      display: inline-block;
      padding: 15px 30px;
      background: #667eea;
      color: white;
      text-decoration: none;
      border-radius: 8px;
      font-size: 1.1em;
      font-weight: 600;
      transition: all 0.3s;
    }

    .view-all a:hover {
      background: #764ba2;
      transform: scale(1.05);
    }

    /* Inline comment bubble hover styles */
    .comment-bubble:hover {
      background: #667eea !important;
      color: white !important;
      transform: scale(1.05);
    }

    .comment-bubble:hover svg {
      stroke: white;
    }
  </style>
</head>
<body>
  <div class="container">
    <h1>Some News Article</h1>

    <div class="auth-actions">
      <% if (typeof user === 'object' && user) { %>
        <a href="/logout">Logout</a>
        <% if (user.isAdmin) { %>
          <a href="/admin">Admin Panel</a>
        <% } %>
      <% } else { %>
        <a href="/auth/google">Login with Google</a>
      <% } %>
    </div>

    <div class="headlines-section">
      <h2>Top Headlines from All Sources</h2>

      <div class="top-headlines-grid">
        <!-- CNN -->
        <% if (topHeadlines && topHeadlines.cnn) { %>
          <div class="headline-card cnn">
            <% if (topHeadlines.cnn.image) { %>
              <img src="<%= topHeadlines.cnn.image %>" alt="<%= topHeadlines.cnn.title %>" class="headline-image" onerror="this.style.display='none'">
            <% } %>
            <div class="headline-content">
              <div class="headline-source">CNN</div>
              <div class="headline-title">
                <a href="<%= topHeadlines.cnn.url %>" target="_blank" rel="noopener noreferrer">
                  <%= topHeadlines.cnn.title %>
                </a>
              </div>

              <!-- Comment Bubble -->
              <div style="margin-top: 15px; display: flex; justify-content: flex-end;">
                <button class="comment-bubble"
                        onclick="openSimpleCommentModal('<%= topHeadlines.cnn.url %>', '<%= topHeadlines.cnn.title.replace(/'/g, "\\'") %>', 'CNN')"
                        data-simple-article-url="<%= topHeadlines.cnn.url %>"
                        style="display: flex; align-items: center; gap: 8px; padding: 8px 15px; background: #f0f0f0; border: none; border-radius: 20px; cursor: pointer; transition: all 0.3s; font-size: 0.9em; color: #666;">
                  <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <path d="M21 15a2 2 0 0 1-2 2H7l-4 4V5a2 2 0 0 1 2-2h14a2 2 0 0 1 2 2z"></path>
                  </svg>
                  <span class="simple-comment-count" data-url="<%= topHeadlines.cnn.url %>">0</span>
                </button>
              </div>
            </div>
          </div>
        <% } %>

        <!-- Fox News -->
        <% if (topHeadlines && topHeadlines.fox) { %>
          <div class="headline-card fox">
            <% if (topHeadlines.fox.image) { %>
              <img src="<%= topHeadlines.fox.image %>" alt="<%= topHeadlines.fox.title %>" class="headline-image" onerror="this.style.display='none'">
            <% } %>
            <div class="headline-content">
              <div class="headline-source">Fox News</div>
              <div class="headline-title">
                <a href="<%= topHeadlines.fox.url %>" target="_blank" rel="noopener noreferrer">
                  <%= topHeadlines.fox.title %>
                </a>
              </div>
              <div style="margin-top: 15px; display: flex; justify-content: flex-end;">
                <button class="comment-bubble" onclick="openSimpleCommentModal('<%= topHeadlines.fox.url %>', '<%= topHeadlines.fox.title.replace(/'/g, "\\'") %>', 'Fox News')" data-simple-article-url="<%= topHeadlines.fox.url %>" style="display: flex; align-items: center; gap: 8px; padding: 8px 15px; background: #f0f0f0; border: none; border-radius: 20px; cursor: pointer; transition: all 0.3s; font-size: 0.9em; color: #666;">
                  <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M21 15a2 2 0 0 1-2 2H7l-4 4V5a2 2 0 0 1 2-2h14a2 2 0 0 1 2 2z"></path></svg>
                  <span class="simple-comment-count" data-url="<%= topHeadlines.fox.url %>">0</span>
                </button>
              </div>
            </div>
          </div>
        <% } %>

        <!-- BBC -->
        <% if (topHeadlines && topHeadlines.bbc) { %>
          <div class="headline-card bbc">
            <% if (topHeadlines.bbc.image) { %>
              <img src="<%= topHeadlines.bbc.image %>" alt="<%= topHeadlines.bbc.title %>" class="headline-image" onerror="this.style.display='none'">
            <% } %>
            <div class="headline-content">
              <div class="headline-source">BBC</div>
              <div class="headline-title">
                <a href="<%= topHeadlines.bbc.url %>" target="_blank" rel="noopener noreferrer">
                  <%= topHeadlines.bbc.title %>
                </a>
              </div>
              <div style="margin-top: 15px; display: flex; justify-content: flex-end;">
                <button class="comment-bubble" onclick="openSimpleCommentModal('<%= topHeadlines.bbc.url %>', '<%= topHeadlines.bbc.title.replace(/'/g, "\\'") %>', 'BBC')" data-simple-article-url="<%= topHeadlines.bbc.url %>" style="display: flex; align-items: center; gap: 8px; padding: 8px 15px; background: #f0f0f0; border: none; border-radius: 20px; cursor: pointer; transition: all 0.3s; font-size: 0.9em; color: #666;">
                  <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M21 15a2 2 0 0 1-2 2H7l-4 4V5a2 2 0 0 1 2-2h14a2 2 0 0 1 2 2z"></path></svg>
                  <span class="simple-comment-count" data-url="<%= topHeadlines.bbc.url %>">0</span>
                </button>
              </div>
            </div>
          </div>
        <% } %>

        <!-- AP News -->
        <% if (topHeadlines && topHeadlines.ap) { %>
          <div class="headline-card ap">
            <% if (topHeadlines.ap.image) { %>
              <img src="<%= topHeadlines.ap.image %>" alt="<%= topHeadlines.ap.title %>" class="headline-image" onerror="this.style.display='none'">
            <% } %>
            <div class="headline-content">
              <div class="headline-source">AP News</div>
              <div class="headline-title">
                <a href="<%= topHeadlines.ap.url %>" target="_blank" rel="noopener noreferrer">
                  <%= topHeadlines.ap.title %>
                </a>
              </div>
              <div style="margin-top: 15px; display: flex; justify-content: flex-end;">
                <button class="comment-bubble" onclick="openSimpleCommentModal('<%= topHeadlines.ap.url %>', '<%= topHeadlines.ap.title.replace(/'/g, "\\'") %>', 'AP News')" data-simple-article-url="<%= topHeadlines.ap.url %>" style="display: flex; align-items: center; gap: 8px; padding: 8px 15px; background: #f0f0f0; border: none; border-radius: 20px; cursor: pointer; transition: all 0.3s; font-size: 0.9em; color: #666;">
                  <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M21 15a2 2 0 0 1-2 2H7l-4 4V5a2 2 0 0 1 2-2h14a2 2 0 0 1 2 2z"></path></svg>
                  <span class="simple-comment-count" data-url="<%= topHeadlines.ap.url %>">0</span>
                </button>
              </div>
            </div>
          </div>
        <% } %>

        <!-- Reuters -->
        <% if (topHeadlines && topHeadlines.reuters) { %>
          <div class="headline-card reuters">
            <% if (topHeadlines.reuters.image) { %>
              <img src="<%= topHeadlines.reuters.image %>" alt="<%= topHeadlines.reuters.title %>" class="headline-image" onerror="this.style.display='none'">
            <% } %>
            <div class="headline-content">
              <div class="headline-source">Reuters</div>
              <div class="headline-title">
                <a href="<%= topHeadlines.reuters.url %>" target="_blank" rel="noopener noreferrer">
                  <%= topHeadlines.reuters.title %>
                </a>
              </div>
              <div style="margin-top: 15px; display: flex; justify-content: flex-end;">
                <button class="comment-bubble" onclick="openSimpleCommentModal('<%= topHeadlines.reuters.url %>', '<%= topHeadlines.reuters.title.replace(/'/g, "\\'") %>', 'Reuters')" data-simple-article-url="<%= topHeadlines.reuters.url %>" style="display: flex; align-items: center; gap: 8px; padding: 8px 15px; background: #f0f0f0; border: none; border-radius: 20px; cursor: pointer; transition: all 0.3s; font-size: 0.9em; color: #666;">
                  <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M21 15a2 2 0 0 1-2 2H7l-4 4V5a2 2 0 0 1 2-2h14a2 2 0 0 1 2 2z"></path></svg>
                  <span class="simple-comment-count" data-url="<%= topHeadlines.reuters.url %>">0</span>
                </button>
              </div>
            </div>
          </div>
        <% } %>
      </div>
    </div>

    <div class="view-all">
      <a href="/news">View All News Sources</a>
    </div>
  </div>

  <%- include('./components/simpleCommentModal.ejs') %>
</body>
</html>
