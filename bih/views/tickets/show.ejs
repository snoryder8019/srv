<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Ticket: <%= ticket.subject %> - bih</title>
  <link rel="stylesheet" href="/css/theme.css">
  <link rel="stylesheet" href="/css/chat.css">
  <link rel="stylesheet" href="/css/sidebar.css">
  <link rel="stylesheet" href="/css/call.css">
  <style>
    .nav-links { margin: 12px 0; }
    .nav-links a { margin-right: 16px; }
    .ticket-header {
      border: 1px solid var(--border);
      padding: 16px;
      margin: 12px 0;
    }
    .ticket-status {
      font-size: 11px;
      padding: 2px 8px;
      border: 1px solid;
      text-transform: uppercase;
      letter-spacing: 1px;
      display: inline-block;
      margin-bottom: 8px;
    }
    .status-open { color: var(--green); border-color: var(--green-dim); }
    .status-in-progress { color: #ffaa00; border-color: #aa7700; }
    .status-closed { color: var(--text-dim); border-color: var(--border); }
    .ticket-body {
      white-space: pre-wrap;
      color: var(--text);
      margin: 12px 0;
      line-height: 1.7;
    }
    .ticket-meta { color: var(--text-dim); font-size: 12px; }
    .actions-section { margin-top: 20px; }
    .action-item {
      border-left: 2px solid var(--green-dim);
      padding: 10px 14px;
      margin: 10px 0;
    }
    .action-author { color: var(--green-dim); font-size: 12px; }
    .action-body { white-space: pre-wrap; margin-top: 4px; }
    .staff-panel {
      border: 1px solid var(--green-dim);
      padding: 16px;
      margin-top: 20px;
    }
    .staff-panel h3 { margin-bottom: 8px; }
    textarea { min-height: 80px; resize: vertical; max-width: 500px; }
    .status-form { display: inline-flex; gap: 6px; align-items: center; margin-top: 12px; }
    .status-form select {
      background: var(--bg-input);
      color: var(--text);
      border: 1px solid var(--border);
      padding: 6px 10px;
      font-family: var(--mono);
      font-size: 13px;
    }
    .submitter-info { display: flex; align-items: center; gap: 8px; margin-bottom: 8px; }
    .submitter-avatar {
      width: 28px;
      height: 28px;
      border-radius: 50%;
      border: 1px solid var(--border);
    }
  </style>
</head>
<body>
  <h1>Ticket</h1>
  <div class="nav-links">
    <a href="/tickets">Back to Tickets</a>
    <a href="/dashboard">Dashboard</a>
  </div>

  <div class="ticket-header">
    <span class="ticket-status status-<%= ticket.status %>"><%= ticket.status %></span>
    <h2 style="margin: 4px 0;"><%= ticket.subject %></h2>
    <% if (ticket.user) { %>
      <div class="submitter-info">
        <% if (ticket.user.avatar) { %>
          <img src="<%= ticket.user.avatar %>" class="submitter-avatar" alt="">
        <% } %>
        <span class="ticket-meta"><%= ticket.user.displayName || ticket.user.email %></span>
      </div>
    <% } %>
    <span class="ticket-meta"><%= new Date(ticket.createdAt).toLocaleString() %></span>
    <div class="ticket-body"><%= ticket.message %></div>
  </div>

  <% if (ticket.actions && ticket.actions.length > 0) { %>
    <div class="actions-section">
      <h3>Actions</h3>
      <% ticket.actions.forEach(a => { %>
        <div class="action-item">
          <span class="action-author">
            <%= a.by ? (a.by.displayName || a.by.email) : 'Staff' %>
            â€” <%= new Date(a.createdAt).toLocaleString() %>
          </span>
          <div class="action-body"><%= a.message %></div>
        </div>
      <% }) %>
    </div>
  <% } %>

  <% if (staff) { %>
    <div class="staff-panel">
      <h3>Staff Actions</h3>
      <form method="POST" action="/tickets/<%= ticket._id %>/action">
        <label for="action-msg">Add Response</label>
        <textarea id="action-msg" name="message" placeholder="Write a response..." required></textarea>
        <button type="submit">Send Response</button>
      </form>
      <form method="POST" action="/tickets/<%= ticket._id %>/status" class="status-form">
        <label for="status-select">Status:</label>
        <select id="status-select" name="status">
          <option value="open" <%= ticket.status === 'open' ? 'selected' : '' %>>open</option>
          <option value="in-progress" <%= ticket.status === 'in-progress' ? 'selected' : '' %>>in-progress</option>
          <option value="closed" <%= ticket.status === 'closed' ? 'selected' : '' %>>closed</option>
        </select>
        <button type="submit">Update</button>
      </form>
    </div>
  <% } %>

  <%- include('../partials/sidebar') %>
  <%- include('../partials/chat') %>
  <%- include('../partials/call') %>
</body>
</html>
