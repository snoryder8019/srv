  <% } %>
  <br><br>
  <a href="/profile">Profile</a>
  <a href="/auth/logout">Logout</a>
  <a href="/">Home</a>
  <%- include('partials/sidebar') %>
  <%- include('partials/chat') %>
  <%- include('partials/call') %>
</body>
</html>
