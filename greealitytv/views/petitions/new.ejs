<%- include('../partials/head', { title: 'Start a Vote' }) %>
<%- include('../partials/nav') %>
<main class="page-main form-page">
  <%- include('../partials/flash') %>
  <div class="form-header">
    <h1>Start a Community Vote</h1>
    <p>Bring a local question to your neighbors and see where Greeley stands.</p>
  </div>
  <form class="content-form" action="/votes" method="POST">
    <div class="form-group">
      <label>Question / Topic</label>
      <input type="text" name="title" placeholder="What should the community weigh in on?" required>
    </div>
    <div class="form-group">
      <label>Details</label>
      <textarea name="description" rows="8" placeholder="Give some background on the topic â€” what's the context and why does it matter to Greeley?" required></textarea>
    </div>
    <div class="form-group">
      <label>Vote Goal</label>
      <input type="number" name="goal" value="100" min="10" max="100000">
    </div>
    <div class="form-actions">
      <a href="/votes" class="btn btn-outline">Cancel</a>
      <button type="submit" class="btn btn-primary">Start Vote</button>
    </div>
  </form>
</main>
<%- include('../partials/footer') %>
