<%- include('../partials/head', { title: 'Upload Video' }) %>
<%- include('../partials/nav') %>
<main class="page-main form-page">
  <%- include('../partials/flash') %>
  <div class="form-header">
    <h1>Upload a Video</h1>
    <p>Share a story from Greeley. Max 500MB.</p>
  </div>
  <form class="content-form" action="/videos" method="POST" enctype="multipart/form-data" id="videoUploadForm">
    <div class="form-group">
      <label>Title</label>
      <input type="text" name="title" placeholder="Video title" required>
    </div>
    <div class="form-group">
      <label>Description</label>
      <textarea name="description" rows="4" placeholder="What's this about?"></textarea>
    </div>
    <div class="form-group">
      <label>Video File <span class="hint">(mp4, mov, webm â€” max 500MB)</span></label>
      <input type="file" name="video" accept="video/*" required id="videoFile">
    </div>
    <div class="form-group">
      <label>Thumbnail Image <span class="hint">(optional)</span></label>
      <input type="file" name="thumbnail" accept="image/*">
    </div>
    <div class="form-group">
      <label>Tags <span class="hint">(comma-separated)</span></label>
      <input type="text" name="tags" placeholder="community, city council, environment">
    </div>
    <div id="upload-progress" class="upload-progress" style="display:none">
      <div class="progress-bar"><div class="progress-fill" id="progressFill"></div></div>
      <span id="progressText">Uploading...</span>
    </div>
    <div class="form-actions">
      <a href="/videos" class="btn btn-outline">Cancel</a>
      <button type="submit" class="btn btn-primary" id="submitBtn">Upload Video</button>
    </div>
  </form>
</main>
<%- include('../partials/footer') %>
