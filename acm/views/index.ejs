<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>ACM – Hospitality & Restaurant Group</title>
  <link rel="stylesheet" href="/stylesheets/style.css">
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Playfair+Display:ital,wght@0,400;0,700;1,400&family=Inter:wght@300;400;500&display=swap" rel="stylesheet">
</head>
<body>

  <nav class="nav-dots">
    <div class="nav-dot active" data-index="0"></div>
    <div class="nav-dot" data-index="1"></div>
    <div class="nav-dot" data-index="2"></div>
    <div class="nav-dot" data-index="3"></div>
    <div class="nav-dot" data-index="4"></div>
  </nav>

  <div class="scroll-container">

    <!-- Hero: ACM -->
    <section class="section section-hero">
      <div class="section-inner">
        <img class="logo logo-main" src="/images/acm.png" alt="ACM">
        <h1 class="hero-title">Hospitality & Restaurant Group</h1>
        <p class="hero-sub">Crafting community through food, drink & atmosphere</p>
        <div class="scroll-hint">
          <span>&#8595;</span>
        </div>
      </div>
    </section>

    <!-- The Nook -->
    <section class="section section-nook">
      <div class="section-inner">
        <a href="https://www.thenookckmc.com">
          <img class="logo logo-concept" src="/images/nook/nook.png" alt="The Nook">
        </a>
        <p class="concept-desc">
          <span class="concept-location">Light Farms, Celina</span>
          A Cocktail Kitchen & Market Café built for the community of Celina.
        </p>
      </div>
    </section>

    <!-- Heyday -->
    <section class="section section-heyday">
      <div class="section-inner">
        <a href="https://heydaycelina.com">
          <img class="logo logo-concept" src="/images/heyday/heyday_h.png" alt="Heyday">
        </a>
        <p class="concept-desc">
          <span class="concept-location">Downtown, Celina</span>
          A cocktail bar & kitchen — fresh, comfortable flavors with a fun twist.
        </p>
      </div>
    </section>

    <!-- Graffiti Pasta -->
    <section class="section section-graffiti">
      <div class="section-inner">
        <a href="https://www.graffitipasta.com">
          <img class="logo logo-concept" src="/images/gp/graffiti.png" alt="Graffiti Pasta">
        </a>
        <p class="concept-desc">
          <span class="concept-location">Denton, TX</span>
          Tuscan inspired with graffitied fusions. Think of the pastabilities.
        </p>
      </div>
    </section>

    <!-- Contact / Subscribe -->
    <section class="section section-contact">
      <div class="section-inner">
        <img class="logo logo-footer" src="/images/acm.png" alt="ACM">
        <h2 class="contact-title">Stay Connected</h2>
        <form class="subscribe-form" action="/subscribe" method="post">
          <input type="email" name="email" placeholder="Your email address" required>
          <button type="submit">Subscribe</button>
        </form>
        <p class="franchise-text">
          For franchise inquiries, contact us at
          <a href="mailto:info@graffitipasta.com">info@graffitipasta.com</a>
        </p>
      </div>
    </section>

  </div>

  <%- include('./scripts') %>
</body>
</html>
