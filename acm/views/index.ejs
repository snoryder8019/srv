<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>ACM â€“ Hospitality & Restaurant Group</title>
  <link rel="stylesheet" href="/stylesheets/style.css">
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Playfair+Display:wght@400;700&family=Inter:wght@300;400;500;600&display=swap" rel="stylesheet">
</head>
<body>

<nav class="navButtons" aria-label="Section navigation">
  <div class="navButton" data-section="0" title="ACM Home"></div>
  <div class="navButton" data-section="1" title="The Nook"></div>
  <div class="navButton" data-section="2" title="Heyday"></div>
  <div class="navButton" data-section="3" title="Graffiti Pasta"></div>
  <div class="navButton" data-section="4" title="Stay Connected"></div>
</nav>

<div class="mainBody">

  <!-- ACM Hero -->
  <section class="mainDiv hero-section">
    <div class="sectionContent">
      <img class="conceptLogo heroLogo" src="images/acm.png" alt="ACM Creative Concepts">
      <h1 class="heroTitle">Hospitality & Restaurant Group</h1>
      <p class="heroSubtitle">Crafting unique dining experiences across Texas</p>
      <div class="scrollHint">
        <span>Explore Our Concepts</span>
        <div class="scrollArrow"></div>
      </div>
    </div>
  </section>

  <!-- The Nook -->
  <section class="mainDiv concept-section nook-theme">
    <div class="sectionContent">
      <a href="https://www.thenookckmc.com" target="_blank" rel="noopener" class="conceptLink">
        <img class="conceptLogo" src="images/nook/nook.png" alt="The Nook">
      </a>
      <div class="conceptInfo">
        <h2 class="conceptName">The Nook</h2>
        <p class="conceptLocation">Light Farms, Celina TX</p>
        <p class="conceptDesc">A Cocktail Kitchen & Market Cafe for the community of Celina.</p>
        <a href="https://www.thenookckmc.com" target="_blank" rel="noopener" class="visitBtn nook-btn">Visit The Nook</a>
      </div>
    </div>
  </section>

  <!-- Heyday -->
  <section class="mainDiv concept-section heyday-theme">
    <div class="sectionContent">
      <a href="https://heydaycelina.com" target="_blank" rel="noopener" class="conceptLink">
        <img class="conceptLogo" src="images/heyday/heyday_h.png" alt="Heyday">
      </a>
      <div class="conceptInfo">
        <h2 class="conceptName">Heyday</h2>
        <p class="conceptLocation">Downtown Celina, TX</p>
        <p class="conceptDesc">A cocktail bar and kitchen focusing on fresh comfortable flavors with a fun twist.</p>
        <a href="https://heydaycelina.com" target="_blank" rel="noopener" class="visitBtn heyday-btn">Visit Heyday</a>
      </div>
    </div>
  </section>

  <!-- Graffiti Pasta -->
  <section class="mainDiv concept-section graffiti-theme">
    <div class="sectionContent">
      <a href="https://www.graffitipasta.com" target="_blank" rel="noopener" class="conceptLink">
        <img class="conceptLogo" src="images/gp/graffiti.png" alt="Graffiti Pasta">
      </a>
      <div class="conceptInfo">
        <h2 class="conceptName">Graffiti Pasta</h2>
        <p class="conceptLocation">Denton, TX</p>
        <p class="conceptDesc">Tuscan Inspired with Graffitied Fusions. Think of the Pastabilities.</p>
        <a href="https://www.graffitipasta.com" target="_blank" rel="noopener" class="visitBtn graffiti-btn">Visit Graffiti Pasta</a>
      </div>
    </div>
  </section>

  <!-- Newsletter & Contact -->
  <section class="mainDiv contact-section">
    <div class="sectionContent">
      <img class="conceptLogo contactLogo" src="images/acm.png" alt="ACM Creative Concepts">
      <h2 class="contactTitle">Stay Connected</h2>
      <p class="contactSubtitle">Sign up for special offers and updates from our restaurants</p>
      <form action="/subscribe" method="post" class="subscribeForm">
        <input type="email" id="email" name="email" placeholder="Enter your email" required>
        <button type="submit" class="subscribeBtn">Subscribe</button>
      </form>
      <div class="contactFooter">
        <p>For franchise inquiries, please contact us at</p>
        <a href="mailto:info@acmcreativeconcepts.com" class="contactEmail">info@acmcreativeconcepts.com</a>
      </div>
    </div>
  </section>

</div>

<%-include('./scripts')%>
</body>
</html>
